{
    // Python Configuration for Odoo 17 Development
    "python.analysis.autoImportCompletions": true,
    "python.analysis.typeCheckingMode": "off",
    "python.analysis.diagnosticMode": "workspace",
    "python.analysis.autoSearchPaths": true,
    "python.analysis.extraPaths": [
        ".",
        "./account_payment_approval",
        "./enhanced_rest_api",
        "./crm_executive_dashboard",
        "./oe_sale_dashboard_17"
    ],
    
    // Pylance Configuration (Odoo-friendly)
    "python.analysis.ignore": [
        "**/migrations/**",
        "**/demo/**",
        "**/tests/**"
    ],
    "python.analysis.stubPath": "./typings",
    "python.analysis.useLibraryCodeForTypes": false,
    
    // Disable overly strict linting for Odoo patterns
    "python.linting.enabled": false,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": false,
    "python.linting.mypyEnabled": false,
    
    // VS Code Python extension settings
    "python.defaultInterpreterPath": "python",
    "python.terminal.activateEnvironment": false,
    
    // File associations for Odoo
    "files.associations": {
        "*.xml": "xml",
        "*.js": "javascript",
        "*.scss": "scss",
        "*.css": "css",
        "*.py": "python",
        "*.yaml": "yaml",
        "*.yml": "yaml"
    },
    
    // XML Configuration for Odoo Views
    "xml.format.enabled": true,
    "xml.format.splitAttributes": "splitNewLine",
    "xml.format.joinCDATALines": false,
    "xml.format.joinCommentLines": false,
    "xml.format.joinContentLines": false,
    "xml.format.splitAttributesIndentSize": 4,
    "xml.format.tabSize": 4,
    "xml.format.insertSpaces": true,
    "xml.format.preservedNewlines": 2,
    "xml.format.maxLineLength": 120,
    "xml.validation.enabled": true,
    "xml.validation.namespaces.enabled": "never",
    "xml.validation.schema.enabled": "never",
    "xml.validation.disallowDocTypeDecl": false,
    "xml.validation.resolveExternalEntities": false,
    
    // XML Language Server Configuration
    "xml.server.workDir": "~/.cache/xml",
    "xml.trace.server": "off",
    "xml.logs.client": false,
    "xml.format.enforceQuoteStyle": "preferred",
    "xml.format.quotations": "doubleQuotes",
    "xml.format.preserveEmptyContent": true,
    "xml.format.preserveAttributeLineBreaks": false,
    "xml.format.closeEmptyElements": false,
    "xml.catalogs": [
        ".vscode/xml-catalog.xml"
    ],
    "xml.fileAssociations": [
        {
            "pattern": "**/*.xml",
            "systemId": "odoo-views.xsd"
        }
    ],
    "xml.preferences.showSchemaDocumentationType": "none",
    "xml.preferences.includeInvalidDTDForXSD": false,
    
    // Emmet configuration for XML (useful for Odoo views)
    "emmet.includeLanguages": {
        "xml": "html"
    },
    "emmet.triggerExpansionOnTab": true,
    "emmet.showExpandedAbbreviation": "always",
    "emmet.showSuggestionsAsSnippets": true,
    
    // JavaScript Configuration for Odoo OWL Components
    "javascript.validate.enable": false,
    "javascript.format.enable": true,
    "javascript.format.insertSpaceAfterCommaDelimiter": true,
    "javascript.format.insertSpaceAfterSemicolonInForStatements": true,
    "javascript.format.insertSpaceBeforeAndAfterBinaryOperators": true,
    "javascript.format.insertSpaceAfterKeywordsInControlFlowStatements": true,
    "javascript.format.insertSpaceAfterFunctionKeywordForAnonymousFunctions": false,
    "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyParenthesis": false,
    "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBrackets": false,
    "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true,
    "javascript.format.insertSpaceAfterOpeningAndBeforeClosingTemplateStringBraces": false,
    "javascript.format.insertSpaceAfterOpeningAndBeforeClosingJsxExpressionBraces": false,
    "javascript.format.placeOpenBraceOnNewLineForFunctions": false,
    "javascript.format.placeOpenBraceOnNewLineForControlBlocks": false,
    "javascript.suggestionActions.enabled": false,
    "javascript.preferences.includePackageJsonAutoImports": "off",
    "javascript.preferences.importModuleSpecifier": "relative",
    "javascript.inlayHints.functionLikeReturnTypes.enabled": false,
    "javascript.inlayHints.parameterNames.enabled": "none",
    "javascript.inlayHints.parameterTypes.enabled": false,
    "javascript.inlayHints.variableTypes.enabled": false,
    "javascript.inlayHints.propertyDeclarationTypes.enabled": false,
    "javascript.inlayHints.enumMemberValues.enabled": false,
    
    // TypeScript disabled for Odoo (we use pure JavaScript)
    "typescript.validate.enable": false,
    "typescript.suggestionActions.enabled": false,
    
    // CSS/SCSS Configuration for Odoo Styling
    "css.validate": false,
    "scss.validate": false,
    "css.lint.validProperties": [],
    "css.lint.unknownAtRules": "ignore",
    "css.lint.unknownProperties": "ignore",
    "css.lint.invalidProperties": "ignore",
    "css.lint.duplicateProperties": "ignore",
    "css.lint.emptyRules": "ignore",
    "css.lint.importStatement": "ignore",
    "css.lint.boxModel": "ignore",
    "css.lint.universalSelector": "ignore",
    "css.lint.zeroUnits": "ignore",
    "css.lint.fontFaceProperties": "ignore",
    "css.lint.hexColorLength": "ignore",
    "css.lint.argumentsInColorFunction": "ignore",
    "css.lint.unknownVendorSpecificProperties": "ignore",
    "css.lint.ieHack": "ignore",
    "css.lint.vendorPrefix": "ignore",
    "css.lint.propertyIgnoredDueToDisplay": "ignore",
    "css.lint.important": "ignore",
    "css.lint.float": "ignore",
    "css.lint.idSelector": "ignore",
    
    // SCSS specific
    "scss.lint.validProperties": [],
    "scss.lint.unknownAtRules": "ignore",
    "scss.lint.unknownProperties": "ignore",
    "scss.lint.invalidProperties": "ignore",
    "scss.lint.duplicateProperties": "ignore",
    "scss.lint.emptyRules": "ignore",
    "scss.lint.importStatement": "ignore",
    "scss.lint.boxModel": "ignore",
    "scss.lint.universalSelector": "ignore",
    "scss.lint.zeroUnits": "ignore",
    "scss.lint.fontFaceProperties": "ignore",
    "scss.lint.hexColorLength": "ignore",
    "scss.lint.argumentsInColorFunction": "ignore",
    "scss.lint.unknownVendorSpecificProperties": "ignore",
    "scss.lint.ieHack": "ignore",
    "scss.lint.vendorPrefix": "ignore",
    "scss.lint.propertyIgnoredDueToDisplay": "ignore",
    "scss.lint.important": "ignore",
    "scss.lint.float": "ignore",
    "scss.lint.idSelector": "ignore",
    
    // Editor settings for better Odoo development
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": true,
    "editor.wordWrap": "on",
    "editor.rulers": [79, 120],
    
    // Language-specific settings
    "[xml]": {
        "editor.defaultFormatter": "DotJoshJohnson.xml",
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.formatOnSave": true,
        "editor.formatOnPaste": true,
        "editor.wordWrap": "on",
        "editor.rulers": [120],
        "editor.quickSuggestions": {
            "other": true,
            "comments": false,
            "strings": true
        }
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.formatOnSave": true,
        "editor.formatOnPaste": true,
        "editor.codeActionsOnSave": {
            "source.fixAll.eslint": "never"
        },
        "editor.quickSuggestions": {
            "other": true,
            "comments": false,
            "strings": true
        }
    },
    "[css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.formatOnSave": true,
        "editor.suggest.insertMode": "replace"
    },
    "[scss]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode", 
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.formatOnSave": true,
        "editor.suggest.insertMode": "replace"
    },
    "[python]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.rulers": [79, 120],
        "editor.formatOnSave": false
    },
    
    // Debug and crash reporting settings (prevent Crashpad errors)
    "debug.allowBreakpointsEverywhere": false,
    "debug.openDebug": "neverOpen",
    "debug.console.closeOnEnd": true,
    "debug.openExplorerOnEnd": false,
    "extensions.autoUpdate": false,
    "extensions.ignoreRecommendations": true,
    "telemetry.telemetryLevel": "off",
    "typescript.disableAutomaticTypeAcquisition": true,
    
    // File exclusions to improve performance
    "files.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/*.pyo": true,
        "**/.git": true,
        "**/node_modules": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/debug.log": true,
        "**/*.log.backup.*": true,
        "**/crashpad_reports": true,
        "**/crash_dumps": true
    },
    
    // Search exclusions
    "search.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/*.pyo": true,
        "**/node_modules": true,
        "**/.git": true,
        "**/debug.log": true,
        "**/*.log.backup.*": true,
        "**/crashpad_reports": true,
        "**/crash_dumps": true
    },
    
    // Disable problematic extensions for Odoo
    "python.analysis.logLevel": "Warning",
    "python.analysis.diagnosticSeverityOverrides": {
        "reportMissingImports": "none",
        "reportUndefinedVariable": "none",
        "reportAttributeAccessIssue": "none",
        "reportUnknownMemberType": "none",
        "reportUnknownVariableType": "none",
        "reportUnknownArgumentType": "none",
        "reportUnknownLambdaType": "none",
        "reportUnknownParameterType": "none",
        "reportMissingTypeStubs": "none",
        "reportImportCycles": "none",
        "reportUnusedImport": "none",
        "reportUnusedClass": "none",
        "reportUnusedFunction": "none",
        "reportUnusedVariable": "none",
        "reportDuplicateImport": "none",
        "reportOptionalSubscript": "none",
        "reportOptionalMemberAccess": "none",
        "reportOptionalCall": "none",
        "reportOptionalIterable": "none",
        "reportOptionalContextManager": "none",
        "reportOptionalOperand": "none",
        "reportConstantRedefinition": "none",
        "reportIncompatibleMethodOverride": "none",
        "reportIncompatibleVariableOverride": "none",
        "reportInconsistentConstructor": "none",
        "reportOverlappingOverload": "none",
        "reportMissingSuperCall": "none",
        "reportUninitializedInstanceVariable": "none",
        "reportInvalidStringEscapeSequence": "none",
        "reportFunctionMemberAccess": "none",
        "reportArgumentType": "none",
        "reportCallIssue": "none",
        "reportIndexIssue": "none",
        "reportInvalidTypeVarUse": "none",
        "reportPrivateUsage": "none",
        "reportTypeCommentUsage": "none",
        "reportPrivateImportUsage": "none",
        "reportUnboundVariable": "none",
        "reportInvalidStubStatement": "none",
        "reportIncompleteStub": "none",
        "reportUnsupportedDunderAll": "none",
        "reportUnusedCoroutine": "none"
    }
}
