<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Tree View -->
        <record id="view_property_sale_tree" model="ir.ui.view">
            <field name="name">property.sale.tree</field>
            <field name="model">property.sale</field>
            <field name="arch" type="xml">
                <tree string="Property Sales" decoration-info="state == &quot;draft&quot;" decoration-success="state == &quot;confirm&quot;" decoration-muted="state == &quot;cancelled&quot;">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="property_id"/>
                    <field name="sale_price" sum="Total Sales" widget="monetary" options="{&quot;currency_field&quot;: &quot;currency_id&quot;}"/>
                    <field name="down_payment" sum="Total Down Payment" widget="monetary" options="{&quot;currency_field&quot;: &quot;currency_id&quot;}"/>
                    <field name="remaining_balance" sum="Total Balance" widget="monetary" options="{&quot;currency_field&quot;: &quot;currency_id&quot;}"/>
                    <field name="state"/>
                    <field name="currency_id" invisible="1"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_property_sale_form" model="ir.ui.view">
            <field name="name">property.sale.form</field>
            <field name="model">property.sale</field>
            <field name="arch" type="xml">
                <form string="Property Sale">
                    <header>
                        <!-- Confirm Sale Button (Success) -->
                        <button name="action_confirm"
                                string="Confirm Sale"
                                type="object"
                                class="btn btn-success oe_highlight"
                                options="{&quot;invisible&quot;: [[&quot;state&quot;, &quot;!=&quot;, &quot;draft&quot;]]}"/>

                        <!-- View Invoice Button (Success) -->
                        <button name="action_view_invoices"
                                string="View Invoice"
                                type="object"
                                class="btn btn-success"
                                options="{&quot;invisible&quot;: [[&quot;state&quot;, &quot;not in&quot;, [&quot;invoiced&quot;]]]}"/>

                        <!-- Cancel Button (Danger) -->
                        <button name="action_cancel"
                                string="Cancel"
                                type="object"
                                class="btn btn-danger"
                                options="{&quot;invisible&quot;: [[&quot;state&quot;, &quot;in&quot;, [&quot;cancelled&quot;]]]}"/>

                        <!-- Set to Draft Button (Default) -->
                        <button name="action_draft"
                                string="Set to Draft"
                                type="object"
                                class="btn btn-secondary"
                                options="{&quot;invisible&quot;: [[&quot;state&quot;, &quot;=&quot;, &quot;draft&quot;]]}"/>

                        <!-- Status Bar -->
                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,confirm,invoiced,cancelled"/>
                    </header>

                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Sale Reference"/>
                            </h1>
                        </div>

                        <!-- Main Information -->
                        <group>
                            <group string="Customer Information">
                                <field name="partner_id"/>
                                <field name="currency_id" groups="base.group_multi_currency"/>
                                <field name="start_date"/>
                            </group>
                            <group string="Property Information">
                                <field name="property_id"/>
                                <field name="sale_price" widget="monetary" options="{&quot;currency_field&quot;: &quot;currency_id&quot;}"/>
                                <field name="down_payment_percentage"/>
                                <field name="down_payment" widget="monetary" options="{&quot;currency_field&quot;: &quot;currency_id&quot;}"/>
                                <field name="dld_fee" widget="monetary" options="{&quot;currency_field&quot;: &quot;currency_id&quot;}"/>
                            </group>
                        </group>

                        <!-- Payment Plan -->
                        <group string="Payment Plan">
                            <group>
                                <field name="remaining_balance" widget="monetary" options="{&quot;currency_field&quot;: &quot;currency_id&quot;}"/>
                                <field name="no_of_installments"/>
                                <field name="amount_per_installment" widget="monetary" options="{&quot;currency_field&quot;: &quot;currency_id&quot;}"/>
                            </group>
                        </group>

                        <!-- Installment Lines -->
                        <notebook>
                            <page string="Payment Schedule" name="payment_schedule">
                                <field name="property_sale_line_ids">
                                    <tree string="Payment Schedule" editable="bottom">
                                        <field name="serial_number" readonly="1"/>
                                        <field name="line_type" readonly="1"/>
                                        <field name="collection_date" readonly="1"/>
                                        <field name="capital_repayment" sum="Total" widget="monetary" options="{&quot;currency_field&quot;: &quot;currency_id&quot;}" readonly="1"/>
                                        <field name="collection_status"/>
                                        <field name="invoice_id" readonly="1"/>
                                        <field name="currency_id" invisible="1"/>
                                        <button name="action_create_pay_invoice"
                                                string="Create &amp; Pay Invoice"
                                                type="object"
                                                class="btn btn-primary"
                                                options="{&quot;invisible&quot;: [[&quot;collection_status&quot;, &quot;=&quot;, &quot;paid&quot;]]}"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_property_sale_search" model="ir.ui.view">
            <field name="name">property.sale.search</field>
            <field name="model">property.sale</field>
            <field name="arch" type="xml">
                <search string="Property Sales">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="property_id"/>
                    <separator/>
                    <filter string="Draft" name="draft" domain="[[&quot;state&quot;, &quot;=&quot;, &quot;draft&quot;]]"/>
                    <filter string="Confirmed" name="confirmed" domain="[[&quot;state&quot;, &quot;=&quot;, &quot;confirm&quot;]]"/>
                    <filter string="Invoiced" name="invoiced" domain="[[&quot;state&quot;, &quot;=&quot;, &quot;invoiced&quot;]]"/>
                    <filter string="Cancelled" name="cancelled" domain="[[&quot;state&quot;, &quot;=&quot;, &quot;cancelled&quot;]]"/>
                    <group expand="0" string="Group By">
                        <filter string="Status" name="state" context="{&quot;group_by&quot;: &quot;state&quot;}"/>
                        <filter string="Customer" name="partner" context="{&quot;group_by&quot;: &quot;partner_id&quot;}"/>
                        <filter string="Property" name="property" context="{&quot;group_by&quot;: &quot;property_id&quot;}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_property_sale" model="ir.actions.act_window">
            <field name="name">Property Sales</field>
            <field name="res_model">property.sale</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_property_sale_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first property sale
                </p>
                <p>
                    Create property sales and manage installment plans.
                </p>
            </field>
        </record>

        <!-- Menu Items -->
        <menuitem id="menu_property_sale_root"
                  name="Property Sales"
                  sequence="10"/>

        <menuitem id="menu_property_sale"
                  name="Sales"
                  parent="menu_property_sale_root"
                  action="action_property_sale"
                  sequence="10"/>
    </data>
</odoo>