<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Commission Statement Report Action -->
    <record id="action_commission_statement_report" model="ir.actions.report">
        <field name="name">Commission Statement</field>
        <field name="model">commission.statement.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">commission_lines.commission_statement_template</field>
        <field name="report_file">commission_lines.commission_statement_template</field>
        <field name="print_report_name">'Commission Statement - %s' % (object.partner_id.name)</field>
        <field name="binding_model_id" ref="model_commission_statement_wizard"/>
        <field name="binding_type">report</field>
    </record>

    <!-- Commission Statement PDF Template -->
    <template id="commission_statement_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="wizard">
                <t t-call="web.external_layout">
                    <div class="page">
                        <!-- Header -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h2 class="text-center">Commission Statement</h2>
                            </div>
                        </div>

                        <!-- Partner Information -->
                        <div class="row mb-3">
                            <div class="col-6">
                                <strong>Partner Name:</strong> <span t-field="wizard.partner_id.name"/>
                            </div>
                            <div class="col-6">
                                <strong>Date Range:</strong> 
                                <span t-field="wizard.date_from"/> - <span t-field="wizard.date_to"/>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-6">
                                <strong>Partner Email:</strong> <span t-field="wizard.partner_id.email"/>
                            </div>
                            <div class="col-6">
                                <strong>Report Generated:</strong> <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M:%S')"/>
                            </div>
                        </div>

                        <!-- Commission Lines Table -->
                        <t t-set="commission_data" t-value="wizard._get_commission_lines_data()"/>
                        
                        <div class="row">
                            <div class="col-12">
                                <table class="table table-bordered table-sm">
                                    <thead style="background-color: #f8f9fa;">
                                        <tr>
                                            <th>Booking Date</th>
                                            <th>Order Ref</th>
                                            <th>Customer Reference</th>
                                            <th>Sale Value</th>
                                            <th>Commission Rate</th>
                                            <th>Total Amount</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-set="total_sale_value" t-value="0"/>
                                        <t t-set="total_commission" t-value="0"/>
                                        
                                        <t t-foreach="commission_data" t-as="line">
                                            <tr>
                                                <td>
                                                    <span t-esc="line['booking_date'].strftime('%Y-%m-%d')" t-if="line['booking_date']"/>
                                                </td>
                                                <td><span t-esc="line['order_ref']"/></td>
                                                <td><span t-esc="line['customer_reference']"/></td>
                                                <td class="text-right">
                                                    <span t-esc="'{:,.2f}'.format(line['sale_value'] or 0)" t-if="line['sale_value']"/>
                                                    <span t-if="not line['sale_value']">-</span>
                                                </td>
                                                <td class="text-right">
                                                    <span t-esc="'{:.2f}%'.format(line['commission_rate'])" t-if="line['commission_rate']"/>
                                                    <span t-if="not line['commission_rate']">-</span>
                                                </td>
                                                <td class="text-right">
                                                    <span t-esc="'{:,.2f}'.format(line['commission_amount'] or 0)"/>
                                                </td>
                                                <td>
                                                    <span class="badge" 
                                                          t-attf-class="badge-#{
                                                              'success' if line['state'] == 'paid' else
                                                              'primary' if line['state'] == 'billed' else
                                                              'info' if line['state'] == 'approved' else
                                                              'warning' if line['state'] == 'calculated' else
                                                              'danger' if line['state'] == 'cancelled' else
                                                              'secondary'
                                                          }">
                                                        <span t-esc="line['state'].title()"/>
                                                    </span>
                                                </td>
                                            </tr>
                                            
                                            <!-- Update totals -->
                                            <t t-set="total_sale_value" t-value="total_sale_value + (line['sale_value'] or 0)"/>
                                            <t t-set="total_commission" t-value="total_commission + (line['commission_amount'] or 0)"/>
                                        </t>
                                        
                                        <!-- No data row -->
                                        <tr t-if="not commission_data">
                                            <td colspan="7" class="text-center text-muted">
                                                No commission lines found for the selected criteria.
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <!-- Summary Section -->
                        <div class="row mt-4" t-if="commission_data">
                            <div class="col-8"></div>
                            <div class="col-4">
                                <table class="table table-bordered">
                                    <tr>
                                        <th>Total Sale Value:</th>
                                        <td class="text-right">
                                            <span t-esc="'{:,.2f}'.format(total_sale_value)"/>
                                            <span t-field="wizard.currency_id.symbol"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Total Commission:</th>
                                        <td class="text-right">
                                            <strong>
                                                <span t-esc="'{:,.2f}'.format(total_commission)"/>
                                                <span t-field="wizard.currency_id.symbol"/>
                                            </strong>
                                        </td>
                                    </tr>
                                    <tr t-if="total_sale_value > 0">
                                        <th>Overall Rate:</th>
                                        <td class="text-right">
                                            <span t-esc="'{:.2f}%'.format((total_commission / total_sale_value) * 100)"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                        <!-- Status Legend -->
                        <div class="row mt-4">
                            <div class="col-12">
                                <h5>Status Legend:</h5>
                                <p>
                                    <span class="badge badge-secondary">Draft</span> - Commission not yet calculated<br/>
                                    <span class="badge badge-warning">Calculated</span> - Commission calculated but not approved<br/>
                                    <span class="badge badge-info">Approved</span> - Commission approved for payment<br/>
                                    <span class="badge badge-primary">Billed</span> - Purchase order created for commission<br/>
                                    <span class="badge badge-success">Paid</span> - Commission has been paid<br/>
                                    <span class="badge badge-danger">Cancelled</span> - Commission cancelled
                                </p>
                            </div>
                        </div>

                        <!-- Footer Notes -->
                        <div class="row mt-4">
                            <div class="col-12">
                                <hr/>
                                <p class="text-muted small">
                                    This commission statement was generated on 
                                    <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d at %H:%M:%S')"/>
                                    for the period from <span t-field="wizard.date_from"/> to <span t-field="wizard.date_to"/>.
                                    All amounts are displayed in <span t-field="wizard.currency_id.name"/>.
                                </p>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>