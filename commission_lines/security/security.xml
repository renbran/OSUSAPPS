<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Security Groups -->

    <!-- Commission User Group -->
    <record id="group_commission_lines_user" model="res.groups">
        <field name="name">Commission Lines User</field>
        <field name="category_id" ref="base.module_category_sales"/>
        <field name="comment">Users can view and create commission lines</field>
    </record>

    <!-- Commission Manager Group -->
    <record id="group_commission_lines_manager" model="res.groups">
        <field name="name">Commission Lines Manager</field>
        <field name="category_id" ref="base.module_category_sales"/>
        <field name="implied_ids" eval="[(4, ref('group_commission_lines_user'))]"/>
        <field name="comment">Managers can manage all commission lines operations</field>
    </record>

</odoo>