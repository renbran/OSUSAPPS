<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Sale Order Form View Extension -->
    <record id="view_order_form_commission_lines" model="ir.ui.view">
        <field name="name">sale.order.form.commission.lines</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Add Commission Lines button to button box -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_commission_lines" type="object" class="oe_stat_button" icon="fa-list-ul" invisible="commission_line_count == 0">
                    <field name="commission_line_count" widget="statinfo" string="Commission Lines"/>
                </button>

                <button name="action_generate_commission_lines" type="object" class="oe_stat_button" icon="fa-plus-square" invisible="has_commission_lines or not is_fully_invoiced">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Generate</span>
                        <span class="o_stat_text">Commission Lines</span>
                    </div>
                </button>

                <button name="action_view_commission_purchase_orders" type="object" class="oe_stat_button" icon="fa-shopping-cart" invisible="commission_purchase_order_count == 0">
                    <field name="commission_purchase_order_count" widget="statinfo" string="Commission POs"/>
                </button>
            </xpath>

            <!-- Add Commission Lines tab -->
            <xpath expr="//notebook" position="inside">
                <page string="Commission Lines" name="commission_lines" invisible="commission_line_count == 0">
                    <field name="commission_line_ids" nolabel="1">
                        <tree string="Commission Lines" create="false" edit="false">
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="commission_category"/>
                            <field name="commission_type"/>
                            <field name="commission_rate"/>
                            <field name="commission_amount" widget="monetary"/>
                            <field name="state" widget="badge" decoration-success="state == 'paid'" decoration-primary="state == 'billed'" decoration-info="state == 'approved'" decoration-warning="state == 'calculated'" decoration-danger="state == 'cancelled'"/>
                        </tree>
                    </field>
                </page>

                <page string="Commission Purchase Orders" name="commission_purchase_orders" invisible="commission_purchase_order_count == 0">
                    <field name="commission_purchase_order_ids" nolabel="1">
                        <tree string="Commission Purchase Orders" create="false" edit="false">
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="date_order"/>
                            <field name="amount_total" widget="monetary"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="state" widget="badge" decoration-success="state == 'purchase'" decoration-primary="state == 'done'" decoration-info="state == 'to approve'" decoration-warning="state == 'draft'" decoration-danger="state == 'cancel'"/>
                        </tree>
                    </field>
                </page>
            </xpath>

            <!-- Add computed fields -->
            <xpath expr="//field[@name='amount_total']" position="after">
                <field name="commission_line_count" invisible="1"/>
                <field name="has_commission_lines" invisible="1"/>
                <field name="is_fully_invoiced" invisible="1"/>
                <field name="commission_purchase_order_count" invisible="1"/>
                <field name="has_commission_purchase_orders" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>