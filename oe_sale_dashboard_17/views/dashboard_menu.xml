<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Dashboard Action -->
    <record id="action_sales_dashboard" model="ir.actions.act_window">
        <field name="name">Comprehensive Sales Dashboard</field>
        <field name="res_model">sales.dashboard</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="target">current</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Comprehensive Sales Dashboard!
            </p>
            <p>
                Track sales performance, invoicing, payments, balances, and top performers 
                with real-time analytics and beautiful visualizations.
            </p>
        </field>
    </record>

    <!-- Main Analytics Dashboard -->
    <record id="action_sales_analytics_dashboard" model="ir.actions.act_window">
        <field name="name">Analytics Dashboard</field>
        <field name="res_model">sales.dashboard</field>
        <field name="view_mode">kanban,form</field>
        <field name="view_id" ref="view_sales_dashboard_kanban"/>
        <field name="target">current</field>
    </record>

    <!-- Invoice Analytics Action -->
    <record id="action_invoice_analytics" model="ir.actions.act_window">
        <field name="name">Invoice &amp; Payment Analytics</field>
        <field name="res_model">sales.dashboard</field>
        <field name="view_mode">kanban,form</field>
        <field name="view_id" ref="view_sales_dashboard_kanban"/>
        <field name="target">current</field>
        <field name="context">{'default_show_invoice_analytics': True}</field>
    </record>

    <!-- Balance Analytics Action -->
    <record id="action_balance_analytics" model="ir.actions.act_window">
        <field name="name">Balance &amp; Receivables Analytics</field>
        <field name="res_model">sales.dashboard</field>
        <field name="view_mode">kanban,form</field>
        <field name="view_id" ref="view_sales_dashboard_kanban"/>
        <field name="target">current</field>
        <field name="context">{'default_show_balance_analytics': True}</field>
    </record>

    <!-- Top Performers Action -->
    <record id="action_sales_top_performers" model="ir.actions.act_window">
        <field name="name">Top Sales Performers</field>
        <field name="res_model">sales.dashboard.performer</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="target">current</field>
        <field name="context">{'search_default_group_by_dashboard': 1}</field>
    </record>

    <!-- Revenue Rankings Action -->
    <record id="action_revenue_rankings" model="ir.actions.act_window">
        <field name="name">Revenue Rankings</field>
        <field name="res_model">sales.dashboard.performer</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="view_id" ref="view_performer_revenue_kanban"/>
        <field name="target">current</field>
        <field name="domain">[('rank', '&lt;=', 10)]</field>
    </record>

    <!-- Main Menu -->
    <menuitem id="menu_sales_dashboard_main" name="📊 Sales Analytics Hub" parent="sale.sale_menu_root" sequence="2"/>

    <!-- Dashboard Sub-menus -->
    <menuitem id="menu_sales_analytics" name="📈 Analytics Dashboard" parent="menu_sales_dashboard_main" action="action_sales_analytics_dashboard" sequence="1"/>

    <menuitem id="menu_invoice_analytics" name="🧾 Invoice &amp; Payment Analytics" parent="menu_sales_dashboard_main" action="action_invoice_analytics" sequence="2"/>

    <menuitem id="menu_balance_analytics" name="💰 Balance &amp; Receivables" parent="menu_sales_dashboard_main" action="action_balance_analytics" sequence="3"/>

    <menuitem id="menu_top_performers" name="🏆 Top Performers" parent="menu_sales_dashboard_main" action="action_sales_top_performers" sequence="4"/>

    <menuitem id="menu_revenue_rankings" name="🚀 Revenue Rankings" parent="menu_sales_dashboard_main" action="action_revenue_rankings" sequence="5"/>

    <!-- Configuration Sub-menu -->
    <menuitem id="menu_dashboard_config" name="⚙️ Dashboard Configuration" parent="menu_sales_dashboard_main" action="action_sales_dashboard" sequence="10"/>

</odoo>

<!-- Dashboard Management Sub-menu -->
<menuitem id="menu_sales_dashboard_management" name="Dashboard Management" parent="menu_sales_dashboard_main" action="action_sales_dashboard" sequence="2"/>

<!-- Top Performers Sub-menu -->
<menuitem id="menu_sales_top_performers" name="Top Performers" parent="menu_sales_dashboard_main" action="action_sales_top_performers" sequence="3"/>

<!-- Reports Sub-menu -->
<menuitem id="menu_sales_dashboard_reports" name="Reports" parent="menu_sales_dashboard_main" sequence="4"/>
</odoo>