<?xml version="1.0" encoding="UTF-8" ?>
<!--    Template for dashboard-->
<templates id="template" xml:space="preserve">
    <t t-name="DashboardDashboard">
        <div class="o_sales_dashboard">
            <div class="o_dashboard_filters">
                <label>Booking Date:</label>
                <input type="date" t-model="state.date_from" t-on-change="onFilterChange"/>
                <input type="date" t-model="state.date_to" t-on-change="onFilterChange"/>
                <label>Sale Type:</label>
                <select t-model="state.sale_type_id" t-on-change="onFilterChange">
                    <option value="">All</option>
                    <t t-foreach="state.sale_types" t-as="stype">
                        <option t-att-value="stype.id">
                            <t t-esc="stype.name"/>
                        </option>
                    </t>
                </select>
            </div>
            <div class="o_dashboard_metrics">
                <div>Total Sales Value: <span t-esc="state.dashboard.total_sales_value"/>
                </div>
                <div>Average Sales Value: <span t-esc="state.dashboard.average_sales_value"/>
                </div>
                <div>Total Commission: <span t-esc="state.dashboard.total_commission"/>
                </div>
            </div>
            <div class="o_dashboard_ranking">
                <h4>Top Sales</h4>
                <table>
                    <thead>
                        <tr>
                            <th>Order</th>
                            <th>Value</th>
                            <th>Margin</th>
                            <th>Agent</th>
                            <th>Commission</th>
                            <th>Sale Type</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="state.dashboard.top_sales" t-as="sale">
                            <tr>
                                <td>
                                    <t t-esc="sale.name"/>
                                </td>
                                <td>
                                    <t t-esc="sale.amount_total"/>
                                </td>
                                <td>
                                    <t t-esc="sale.margin"/>
                                </td>
                                <td>
                                    <t t-esc="sale.agent_id.name"/>
                                </td>
                                <td>
                                    <t t-esc="sale.commission_amount"/>
                                </td>
                                <td>
                                    <t t-esc="sale.sale_type_id.name"/>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
            <div class="o_dashboard_sale_type_chart">
                <canvas id="salesTypeChart"></canvas>
            </div>
            <div class="o_dashboard_agent_commission">
                <h4>Agent Commission Ranking</h4>
                <table>
                    <thead>
                        <tr>
                            <th>Agent</th>
                            <th>Commission</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="state.dashboard.agent_commissions" t-as="agent">
                            <tr>
                                <td>
                                    <t t-esc="agent[0]"/>
                                </td>
                                <td>
                                    <t t-esc="agent[1]"/>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-sm-12 col-md-3">
            <div class="dashboard-card card-shadow quotation" t-on-click="on_dashboard_quotation_action">
                <div class="dashboard-card__icon-container bg-mauve-light d-flex justify-content-center align-items-center">
                    <img t-attf-src="./all_in_one_sales_kit/static/src/img/Quotations.png" style=" height: 70px;"/>
                </div>
                <div class="dashboard-card__details">
                    <h3>
                        <span>
                            <t t-esc="state.data.quotation"/>
                        </span>
                    </h3>
                    <h4>Quotations</h4>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-3">
            <div class="dashboard-card card-shadow my_sale_order" t-on-click="on_dashboard_my_sale_order_action">
                <div class="dashboard-card__icon-container bg-mauve-light d-flex justify-content-center align-items-center">
                    <img t-attf-src="./all_in_one_sales_kit/static/src/img/sales-orders.png" style=" height: 70px;"/>
                </div>
                <div class="dashboard-card__details">
                    <h3>
                        <span>
                            <t t-esc="state.data.my_sale_order_templates"/>
                        </span>
                    </h3>
                    <h4>Sale Orders</h4>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-3">
            <div class="dashboard-card card-shadow quotation_sent" t-on-click="on_dashboard_quotation_sent_action">
                <div class="dashboard-card__icon-container bg-mauve-light d-flex justify-content-center align-items-center">
                    <img t-attf-src="./all_in_one_sales_kit/static/src/img/Quotations-send.png" style=" height: 70px;"/>
                </div>
                <div class="dashboard-card__details">
                    <h3>
                        <span>
                            <t t-esc="state.data.quotation_sent"/>
                        </span>
                    </h3>
                    <h4>Quotation Sent</h4>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-3">
            <div class="dashboard-card card-shadow quotation_cancel" t-on-click="on_dashboard_quotation_cancel_action">
                <div class="dashboard-card__icon-container bg-mauve-light d-flex justify-content-center align-items-center">
                    <img t-attf-src="./all_in_one_sales_kit/static/src/img/Quotations-cancel.png" style=" height: 70px;"/>
                </div>
                <div class="dashboard-card__details">
                    <h3>
                        <span>
                            <t t-esc="state.data.quotation_cancel"/>
                        </span>
                    </h3>
                    <h4>Quotation Cancel</h4>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-3">
            <div class="dashboard-card card-shadow customers" t-on-click="on_dashboard_customers_action">
                <div class="dashboard-card__icon-container bg-mauve-light d-flex justify-content-center align-items-center">
                    <img t-attf-src="./all_in_one_sales_kit/static/src/img/custmers.png" style=" height: 70px;"/>
                </div>
                <div class="dashboard-card__details">
                    <h3>
                        <span>
                            <t t-esc="state.data.customers"/>
                        </span>
                    </h3>
                    <h4>Customers</h4>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-3">
            <div class="dashboard-card card-shadow products" t-on-click="on_dashboard_products_action">
                <div class="dashboard-card__icon-container bg-mauve-light d-flex justify-content-center align-items-center">
                    <img t-attf-src="./all_in_one_sales_kit/static/src/img/Products.png" style=" height: 70px;"/>
                </div>
                <div class="dashboard-card__details">
                    <h3>
                        <span>
                            <t t-esc="state.data.products"/>
                        </span>
                    </h3>
                    <h4>Products</h4>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-3">
            <div class="dashboard-card card-shadow to_invoice" t-on-click="on_dashboard_to_invoice_action">
                <div class="dashboard-card__icon-container bg-mauve-light d-flex justify-content-center align-items-center">
                    <img t-attf-src="./all_in_one_sales_kit/static/src/img/to-invoice.png" style=" height: 70px;"/>
                </div>
                <div class="dashboard-card__details">
                    <h3>
                        <span>
                            <t t-esc="state.data.to_invoice"/>
                        </span>
                    </h3>
                    <h4>To Invoice</h4>
                </div>
            </div>
        </div>
        <div style="display:flex;">
            <div class="col-md-6 card" style="margin:10px;">
                <!--card-body-->
                <center>
                    <h3>Top Customers</h3>
                    <div style="height:400px; width:400px">
                        <canvas t-ref="LeadCustomer"/>
                    </div>
                </center>
            </div>
            <div class="col-md-6 card" style="margin:10px;">
                <!--card-body-->
                <center>
                    <h3>Top Products</h3>
                    <div style="height:400px; width:400px">
                        <canvas t-ref="LeadProducts"/>
                    </div>
                </center>
            </div>
        </div>
        <div style="display:flex;">
            <div class="col-md-6 card" style="margin:10px;">
                <!--card-body-->
                <center>
                    <h3>Top Sale Orders</h3>
                    <div>
                        <canvas t-ref="LeadSaleOrders"/>
                    </div>
                </center>
            </div>
            <div class="col-md-6 card" style="margin:10px;padding-bottom:50px;">
                <!--card-body-->
                <center>
                    <h3>Sales Team Revenue</h3>
                    <div style="height:400px; width:400px">
                        <canvas t-ref="SalesTeamRevenue"/>
                    </div>
                </center>
            </div>
        </div>
        <div style="display:flex;">
            <div class="col-md-6 card" style="margin:10px;">
                <!--card-body-->
                <center>
                    <h3>Least Sold Products</h3>
                    <div>
                        <canvas t-ref="LeastSoldProduct"/>
                    </div>
                </center>
            </div>
            <div class="col-md-6 card" style="margin:10px;padding-bottom:50px;">
                <!--card-body-->
                <center>
                    <h3>My Monthly Quotation Count</h3>
                    <div>
                        <canvas t-ref="MonthlyQuotation"/>
                    </div>
                </center>
            </div>
        </div>
    </div>
</section>

</div>
</t>
<t t-name="LoginUser">
<section class="dashboard_main_section" id="main_section_login">
<div class="row">
    <div class="col-sm-12 mb-4">
        <div class="row">
            <div class="col-12 col-sm-12 col-md-4">
                <form class="form-group">
                    <span>Start Date:</span>
                    <input type="date" id="start_date" name="start_date"/>
                    <span>End Date:</span>
                    <input type="date" id="end_date" name="end_date"/>
                </form>
            </div>
        </div>
        <hr/>
    </div>
</div>
</section>
</t>
