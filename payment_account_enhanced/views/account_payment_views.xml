<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <data>

                <!-- Enhanced Payment Form View -->
                <record id="view_account_payment_form_enhanced" model="ir.ui.view">
                        <field name="name">account.payment.form.enhanced</field>
                        <field name="model">account.payment</field>
                        <field name="inherit_id" ref="account.view_account_payment_form"/>
                        <field name="priority" eval="90"/>
                        <field name="arch" type="xml">

                                <!-- Replace header with workflow statusbar -->
                                <xpath expr="//header" position="replace">
                                        <header>
                                                <!-- 4-Stage Approval Workflow Statusbar -->
                                                <field name="approval_state" widget="statusbar" statusbar_visible="draft,under_review,for_approval,for_authorization,approved,posted" statusbar_colors='{"draft":"secondary","under_review":"info","for_approval":"warning","for_authorization":"warning","approved":"success","posted":"success"}' invisible="approval_state in [False, '']"/>

                                                <!-- Legacy verification status for backward compatibility -->
                                                <field name="verification_status" widget="statusbar" statusbar_visible="pending,verified,rejected" statusbar_colors='{"pending":"info","verified":"success","rejected":"danger"}' invisible="approval_state not in [False, '']"/>

                                                <!-- Hidden fields for intelligent button conditions -->
                                                <field name="state" invisible="1"/>
                                                <field name="payment_type" invisible="1"/>
                                                <field name="can_verify" invisible="1"/>
                                                <field name="can_submit_for_review" invisible="1"/>
                                                <field name="can_review" invisible="1"/>
                                                <field name="can_approve" invisible="1"/>
                                                <field name="can_authorize" invisible="1"/>
                                                <field name="show_submit_button" invisible="1"/>
                                                <field name="show_review_button" invisible="1"/>
                                                <field name="show_approve_button" invisible="1"/>
                                                <field name="show_authorize_button" invisible="1"/>
                                                <field name="show_post_button" invisible="1"/>
                                                <field name="show_reject_button" invisible="1"/>
                                                <field name="show_verify_button" invisible="1"/>
                                                <field name="show_print_buttons" invisible="1"/>

                                                <!-- Intelligent 4-Stage Workflow Buttons -->
                                                <button name="action_submit_for_review" string="Submit for Review" type="object" class="btn-primary" invisible="not show_submit_button"/>

                                                <button name="action_review_payment" string="Review" type="object" class="btn-success" invisible="not show_review_button"/>

                                                <button name="action_approve_payment" string="Approve" type="object" class="btn-success" invisible="not show_approve_button"/>

                                                <button name="action_authorize_payment" string="Authorize" type="object" class="btn-success" invisible="not show_authorize_button"/>

                                                <button name="action_post" string="Post Payment" type="object" class="btn-primary" invisible="not show_post_button"/>

                                                <button name="action_reject_payment" string="Reject" type="object" class="btn-danger" invisible="not show_reject_button" confirm="Are you sure you want to reject this payment?"/>

                                                <!-- Legacy Verification Button -->
                                                <button name="action_verify_payment" string="Verify Payment" type="object" class="btn-success" invisible="not show_verify_button"/>

                                                <!-- Smart Print Buttons -->
                                                <button name="action_print_osus_voucher" string="OSUS Voucher" type="object" class="btn btn-outline-primary" invisible="not show_print_buttons"/>

                                                <button name="action_print_enhanced_voucher" string="Enhanced Voucher" type="object" class="btn btn-outline-primary" invisible="not show_print_buttons"/>

                                                <button name="action_print_compact_voucher" string="Compact Voucher" type="object" class="btn btn-outline-primary" invisible="state == 'draft'"/>

                                                <button name="action_print_receipt_voucher" string="Receipt Voucher" type="object" class="btn btn-outline-primary" invisible="state == 'draft'"/>
                                        </header>
                                </xpath>

                                <!-- Add voucher number field - safer approach -->
                                <xpath expr="//field[@name='name']" position="after">
                                        <field name="voucher_number" readonly="1" invisible="voucher_number == False"/>
                                </xpath>

                                <!-- Add remarks field in sheet -->
                                <xpath expr="//sheet" position="inside">
                                        <group invisible="remarks == False">
                                                <field name="remarks" string="Remarks" placeholder="Enter additional remarks..."/>
                                        </group>
                                </xpath>

                                <!-- Add enhanced tabs -->
                                <xpath expr="//sheet" position="inside">
                                        <notebook>
                                                <!-- Approval Workflow Tab -->
                                                <page string="Approval Workflow" name="approval_workflow" invisible="approval_state == False">
                                                        <group>
                                                                <group string="Workflow Status">
                                                                        <field name="approval_state" readonly="1"/>
                                                                        <field name="reviewer_id" readonly="1" invisible="reviewer_id == False"/>
                                                                        <field name="approver_id" readonly="1" invisible="approver_id == False"/>
                                                                        <field name="authorizer_id" readonly="1" invisible="payment_type != 'outbound' or authorizer_id == False"/>
                                                                        <field name="actual_approver_id" readonly="1" invisible="actual_approver_id == False"/>
                                                                </group>
                                                                <group string="Workflow Dates">
                                                                        <field name="reviewer_date" readonly="1" invisible="reviewer_date == False"/>
                                                                        <field name="approver_date" readonly="1" invisible="approver_date == False"/>
                                                                        <field name="authorizer_date" readonly="1" invisible="payment_type != 'outbound' or authorizer_date == False"/>
                                                                </group>
                                                        </group>

                                                        <!-- Approval History -->
                                                        <field name="approval_history_ids" readonly="1" nolabel="1" invisible="approval_history_ids == False">
                                                                <tree>
                                                                        <field name="approval_date"/>
                                                                        <field name="action_type"/>
                                                                        <field name="stage_from"/>
                                                                        <field name="stage_to"/>
                                                                        <field name="user_id"/>
                                                                        <field name="comments"/>
                                                                </tree>
                                                        </field>
                                                </page>

                                                <!-- QR Code and Verification Tab -->
                                                <page string="QR Verification" name="qr_verification" invisible="qr_code == False">
                                                        <group>
                                                                <group string="QR Code Settings">
                                                                        <field name="qr_in_report"/>
                                                                        <field name="qr_code" widget="image" options="{'size': [200, 200]}" readonly="1" invisible="qr_code == False"/>
                                                                </group>
                                                                <group string="Verification Status">
                                                                        <field name="verification_status" readonly="1"/>
                                                                </group>
                                                        </group>

                                                        <!-- QR Verification History -->
                                                        <field name="qr_verification_ids" readonly="1" nolabel="1" invisible="qr_verification_ids == False">
                                                                <tree>
                                                                        <field name="verification_date"/>
                                                                        <field name="verification_code"/>
                                                                        <field name="verification_method"/>
                                                                        <field name="verification_status"/>
                                                                        <field name="verifier_ip"/>
                                                                </tree>
                                                        </field>
                                                </page>
                                        </notebook>
                                </xpath>
                        </field>
                </record>

                <!-- Minimal Tree View Enhancement -->
                <record id="view_account_payment_tree_enhanced" model="ir.ui.view">
                        <field name="name">account.payment.tree.enhanced</field>
                        <field name="model">account.payment</field>
                        <field name="inherit_id" ref="account.view_account_payment_tree"/>
                        <field name="arch" type="xml">
                                <!-- Add voucher number after payment reference -->
                                <xpath expr="//field[@name='name']" position="after">
                                        <field name="voucher_number" optional="show" invisible="voucher_number == False"/>
                                </xpath>

                                <!-- Add approval state after state if it exists -->
                                <xpath expr="//field[@name='state']" position="after">
                                        <field name="approval_state" widget="badge" optional="show" decoration-info="approval_state == 'draft'" decoration-warning="approval_state in ['under_review', 'for_approval', 'for_authorization']" decoration-success="approval_state in ['approved', 'posted']" decoration-danger="approval_state == 'cancelled'"/>
                                </xpath>
                        </field>
                </record>

                <!-- Enhanced Payment Tree View Action -->
                <record id="action_account_payment_tree" model="ir.actions.act_window">
                        <field name="name">Payments</field>
                        <field name="res_model">account.payment</field>
                        <field name="view_mode">tree,form</field>
                        <field name="view_id" ref="view_account_payment_tree_enhanced"/>
                        <field name="context">{'create': True}</field>
                        <field name="domain">[]</field>
                        <field name="help" type="html">
                                <p class="o_view_nocontent_smiling_face">
                                        Create your first payment!
                                </p>
                                <p>
                                        Create payments to vendors or receive payments from customers.
                                        Payments go through an enhanced approval workflow for security.
                                </p>
                        </field>
                </record>

                <!-- Enhanced Payment Form View Action -->
                <record id="view_account_payment_form_action" model="ir.actions.act_window.view">
                        <field name="sequence" eval="2"/>
                        <field name="view_mode">form</field>
                        <field name="view_id" ref="view_account_payment_form_enhanced"/>
                        <field name="act_window_id" ref="action_account_payment_tree"/>
                </record>

        </data>
</odoo>