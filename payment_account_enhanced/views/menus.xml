<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ========================================== -->
    <!-- TOP-LEVEL EXECUTIVE MENU -->
    <!-- ========================================== -->
    
    <!-- Executive Payment Center - High-level menu for C-level quick access -->
    <menuitem id="menu_payment_executive_center" 
              name="Payment Center" 
              sequence="8" 
              groups="account.group_account_manager,payment_account_enhanced.group_payment_manager"
              web_icon="payment_account_enhanced,static/description/icon.png"/>

    <!-- Executive Quick Dashboard -->
    <menuitem id="menu_payment_executive_quick_dash" 
              name="Executive Dashboard" 
              parent="menu_payment_executive_center" 
              sequence="10" 
              action="payment_account_enhanced.action_payment_executive_quick_dashboard" 
              groups="account.group_account_manager,payment_account_enhanced.group_payment_manager"/>

    <!-- Needs Authorization - Critical items for executives -->
    <menuitem id="menu_payment_needs_authorization" 
              name="Needs Authorization" 
              parent="menu_payment_executive_center" 
              sequence="20" 
              action="payment_account_enhanced.action_account_payment_pending_approvals" 
              groups="payment_account_enhanced.group_payment_authorizer,payment_account_enhanced.group_payment_manager"/>

    <!-- Executive Payment View -->
    <menuitem id="menu_payment_executive_view" 
              name="All Payments" 
              parent="menu_payment_executive_center" 
              sequence="30" 
              action="payment_account_enhanced.action_account_payment_executive_enhanced" 
              groups="account.group_account_manager,payment_account_enhanced.group_payment_manager"/>

    <!-- ========================================== -->
    <!-- STANDARD PAYMENT MANAGEMENT MENU -->
    <!-- ========================================== -->

    <!-- Top Level Menu: Payment Management -->
    <menuitem id="menu_payment_management_root" name="Payment Management" sequence="10" groups="account.group_account_user"/>

    <!-- ========================================== -->
    <!-- EXECUTIVE / C-LEVEL SECTION -->
    <!-- ========================================== -->
    
    <!-- Executive Dashboard - High-level overview for C-level executives -->
    <menuitem id="menu_payment_executive_dashboard" 
              name="Executive Overview" 
              parent="menu_payment_management_root" 
              sequence="10" 
              action="payment_account_enhanced.action_payment_dashboard" 
              groups="account.group_account_manager,payment_account_enhanced.group_payment_manager"/>

    <!-- Executive Payment Summary - Quick access to key payment metrics -->
    <menuitem id="menu_payment_executive_summary" 
              name="Payment Summary" 
              parent="menu_payment_management_root" 
              sequence="15" 
              action="payment_account_enhanced.action_account_payment_executive_enhanced" 
              groups="account.group_account_manager,payment_account_enhanced.group_payment_manager"/>

    <!-- ========================================== -->
    <!-- OPERATIONAL MANAGEMENT SECTION -->
    <!-- ========================================== -->

    <!-- Standard Dashboard Menu -->
    <menuitem id="menu_payment_dashboard" 
              name="Operations Dashboard" 
              parent="menu_payment_management_root" 
              sequence="20" 
              action="payment_account_enhanced.action_payment_dashboard" 
              groups="account.group_account_user"/>

    <!-- Payments Submenu -->
    <menuitem id="menu_payment_management_payments" 
              name="All Payments" 
              parent="menu_payment_management_root" 
              sequence="30" 
              action="payment_account_enhanced.action_account_payment_tree" 
              groups="account.group_account_user"/>

    <!-- ========================================== -->
    <!-- APPROVAL & WORKFLOW SECTION -->
    <!-- ========================================== -->

    <!-- Pending Approvals - Quick access for managers -->
    <menuitem id="menu_payment_pending_approvals" 
              name="Pending Approvals" 
              parent="menu_payment_management_root" 
              sequence="35" 
              action="payment_account_enhanced.action_account_payment_pending_approvals" 
              groups="payment_account_enhanced.group_payment_reviewer,payment_account_enhanced.group_payment_approver,payment_account_enhanced.group_payment_authorizer"/>

    <!-- Approval History Submenu -->
    <menuitem id="menu_payment_management_approval_history" 
              name="Approval History" 
              parent="menu_payment_management_root" 
              sequence="40" 
              action="payment_account_enhanced.action_payment_approval_history" 
              groups="account.group_account_user"/>

    <!-- ========================================== -->
    <!-- VERIFICATION & SECURITY SECTION -->
    <!-- ========================================== -->

    <!-- QR Verification Submenu -->
    <menuitem id="menu_payment_management_qr_verification" 
              name="QR Verification" 
              parent="menu_payment_management_root" 
              sequence="50" 
              action="payment_account_enhanced.action_payment_qr_verification" 
              groups="account.group_account_user"/>

    <!-- ========================================== -->
    <!-- REPORTS & ANALYTICS SECTION -->
    <!-- ========================================== -->

    <!-- Payment Reports Menu -->
    <menuitem id="menu_payment_reports" 
              name="Reports &amp; Analytics" 
              parent="menu_payment_management_root" 
              sequence="60" 
              groups="account.group_account_user"/>

    <!-- Executive Payment Report -->
    <menuitem id="menu_payment_executive_report" 
              name="Executive Report" 
              parent="menu_payment_reports" 
              sequence="10" 
              action="payment_account_enhanced.action_payment_executive_report" 
              groups="account.group_account_manager,payment_account_enhanced.group_payment_manager"/>

    <!-- Payment Analytics -->
    <menuitem id="menu_payment_analytics" 
              name="Payment Analytics" 
              parent="menu_payment_reports" 
              sequence="20" 
              action="payment_account_enhanced.action_payment_analytics" 
              groups="account.group_account_user"/>

</odoo>
