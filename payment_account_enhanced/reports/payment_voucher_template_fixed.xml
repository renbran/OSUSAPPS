<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Clean Payment Voucher Template for Reports -->
        <template id="payment_voucher_template_clean">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <!-- Simple, clean voucher layout -->
                            <div class="row">
                                <div class="col-12 text-center mb-4">
                                    <h2><strong>Payment Voucher</strong></h2>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-6">
                                    <strong>Voucher #:</strong> <span t-field="doc.voucher_number"/>
                                </div>
                                <div class="col-6 text-right">
                                    <strong>Date:</strong> <span t-field="doc.date"/>
                                </div>
                            </div>

                            <table class="table table-bordered">
                                <tr>
                                    <td width="25%"><strong>Pay To:</strong></td>
                                    <td width="75%"><span t-field="doc.partner_id"/></td>
                                </tr>
                                <tr>
                                    <td><strong>Amount:</strong></td>
                                    <td><span t-field="doc.amount" t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}"/></td>
                                </tr>
                                <tr>
                                    <td><strong>Payment Method:</strong></td>
                                    <td><span t-field="doc.payment_method_line_id"/></td>
                                </tr>
                                <tr t-if="doc.ref">
                                    <td><strong>Reference:</strong></td>
                                    <td><span t-field="doc.ref"/></td>
                                </tr>
                                <tr t-if="doc.remarks">
                                    <td><strong>Remarks:</strong></td>
                                    <td><span t-field="doc.remarks"/></td>
                                </tr>
                            </table>

                            <!-- Approval information if available -->
                            <div t-if="doc.approval_state != 'draft'" class="mt-4">
                                <h5>Approval Details</h5>
                                <table class="table table-sm">
                                    <tr t-if="doc.reviewer_id">
                                        <td><strong>Reviewed By:</strong></td>
                                        <td><span t-field="doc.reviewer_id"/> - <span t-field="doc.reviewer_date"/></td>
                                    </tr>
                                    <tr t-if="doc.approver_id">
                                        <td><strong>Approved By:</strong></td>
                                        <td><span t-field="doc.approver_id"/> - <span t-field="doc.approver_date"/></td>
                                    </tr>
                                    <tr t-if="doc.authorizer_id">
                                        <td><strong>Authorized By:</strong></td>
                                        <td><span t-field="doc.authorizer_id"/> - <span t-field="doc.authorizer_date"/></td>
                                    </tr>
                                </table>
                            </div>

                            <!-- Simple signature lines -->
                            <div class="row mt-5">
                                <div class="col-4 text-center">
                                    <div style="border-top: 1px solid #000; width: 80%; margin: 50px auto 5px auto;">
                                        Prepared By
                                    </div>
                                </div>
                                <div class="col-4 text-center">
                                    <div style="border-top: 1px solid #000; width: 80%; margin: 50px auto 5px auto;">
                                        Approved By
                                    </div>
                                </div>
                                <div class="col-4 text-center">
                                    <div style="border-top: 1px solid #000; width: 80%; margin: 50px auto 5px auto;">
                                        Authorized By
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>