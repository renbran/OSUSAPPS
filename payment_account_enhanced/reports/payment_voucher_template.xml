<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- OSUS Branded Payment Voucher QWeb Template -->
        <template id="report_payment_voucher_osus">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <div class="article o_report_layout_standard">
                        <!-- Custom CSS for OSUS Branding -->
                        <style type="text/css">
                            @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700;800&amp;display=swap');
                            
                            /* OSUS Brand Colors */
                            :root {
                                --osus-burgundy-primary: #8B1538;
                                --osus-burgundy-secondary: #A41E3A;
                                --osus-burgundy-light: #C73E5A;
                                --osus-gold-primary: #D4AF37;
                                --osus-gold-secondary: #B8960C;
                                --osus-gold-light: #F5E67B;
                                --osus-cream: #FAF8F3;
                                --osus-dark: #2C2C2C;
                                --osus-grey: #666666;
                            }
                            
                            /* Reset and Base Styles */
                            * {
                                margin: 0;
                                padding: 0;
                                box-sizing: border-box;
                            }
                            
                            body, .article {
                                font-family: 'Montserrat', Arial, sans-serif !important;
                                background: linear-gradient(135deg, var(--osus-cream) 0%, #FFFFFF 100%);
                                color: var(--osus-dark);
                                line-height: 1.6;
                                font-size: 12px;
                            }
                            
                            /* Main Container */
                            .osus-voucher-container {
                                max-width: 210mm;
                                margin: 0 auto;
                                background: white;
                                box-shadow: 0 20px 60px rgba(139, 21, 56, 0.15);
                                border-radius: 12px;
                                overflow: hidden;
                                position: relative;
                            }
                            
                            /* Header with Gradient and Logo */
                            .osus-voucher-header {
                                background: linear-gradient(135deg, var(--osus-burgundy-primary) 0%, var(--osus-burgundy-secondary) 50%, var(--osus-burgundy-light) 100%);
                                color: white;
                                padding: 30px 40px;
                                position: relative;
                                overflow: hidden;
                            }
                            
                            .osus-voucher-header::before {
                                content: '';
                                position: absolute;
                                top: -50%;
                                right: -20%;
                                width: 200%;
                                height: 200%;
                                background: url('data:image/svg+xml,&lt;svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"&gt;&lt;circle cx="50" cy="50" r="40" fill="none" stroke="rgba(255,255,255,0.1)" stroke-width="0.5"/&gt;&lt;/svg&gt;') repeat;
                                opacity: 0.1;
                                transform: rotate(15deg);
                            }
                            
                            .osus-header-content {
                                position: relative;
                                z-index: 2;
                                display: flex;
                                justify-content: space-between;
                                align-items: flex-start;
                            }
                            
                            .osus-company-info h1 {
                                font-size: 24px;
                                font-weight: 700;
                                letter-spacing: 2px;
                                margin-bottom: 8px;
                                text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
                            }
                            
                            .osus-company-details {
                                font-size: 11px;
                                opacity: 0.95;
                                line-height: 1.5;
                                font-weight: 400;
                            }
                            
                            .osus-logo-section {
                                text-align: right;
                            }
                            
                            .osus-logo {
                                max-height: 60px;
                                max-width: 150px;
                                filter: brightness(0) invert(1);
                                opacity: 0.95;
                            }
                            
                            /* Document Title with Gold Accent */
                            .osus-document-title {
                                background: linear-gradient(135deg, var(--osus-gold-primary) 0%, var(--osus-gold-secondary) 100%);
                                padding: 25px 40px;
                                text-align: center;
                                position: relative;
                            }
                            
                            .osus-document-title::before {
                                content: '';
                                position: absolute;
                                top: 0;
                                left: 0;
                                right: 0;
                                height: 4px;
                                background: linear-gradient(90deg, var(--osus-burgundy-primary), var(--osus-gold-primary), var(--osus-burgundy-primary));
                            }
                            
                            .osus-document-title h2 {
                                color: white;
                                font-size: 32px;
                                font-weight: 800;
                                letter-spacing: 3px;
                                text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
                                margin: 0;
                            }
                            
                            /* Voucher Details Section */
                            .osus-voucher-body {
                                padding: 40px;
                            }
                            
                            .osus-details-grid {
                                display: grid;
                                grid-template-columns: 1fr 1fr;
                                gap: 30px;
                                margin-bottom: 30px;
                            }
                            
                            .osus-detail-card {
                                background: linear-gradient(135deg, #FFFFFF 0%, var(--osus-cream) 100%);
                                border: 1px solid rgba(139, 21, 56, 0.1);
                                border-radius: 12px;
                                padding: 25px;
                                box-shadow: 0 8px 25px rgba(139, 21, 56, 0.08);
                                position: relative;
                                overflow: hidden;
                            }
                            
                            .osus-detail-card::before {
                                content: '';
                                position: absolute;
                                top: 0;
                                left: 0;
                                width: 4px;
                                height: 100%;
                                background: linear-gradient(180deg, var(--osus-burgundy-primary), var(--osus-gold-primary));
                            }
                            
                            .osus-detail-row {
                                display: flex;
                                justify-content: space-between;
                                align-items: center;
                                padding: 8px 0;
                                border-bottom: 1px solid rgba(139, 21, 56, 0.05);
                            }
                            
                            .osus-detail-row:last-child {
                                border-bottom: none;
                            }
                            
                            .osus-detail-label {
                                font-weight: 600;
                                color: var(--osus-burgundy-primary);
                                font-size: 11px;
                                text-transform: uppercase;
                                letter-spacing: 0.5px;
                                flex: 0 0 40%;
                            }
                            
                            .osus-detail-value {
                                font-weight: 500;
                                color: var(--osus-dark);
                                text-align: right;
                                flex: 1;
                                font-size: 12px;
                            }
                            
                            /* Amount Section with Special Styling */
                            .osus-amount-section {
                                background: linear-gradient(135deg, var(--osus-gold-primary) 0%, var(--osus-gold-secondary) 100%);
                                margin: 30px 0;
                                padding: 30px;
                                border-radius: 15px;
                                text-align: center;
                                position: relative;
                                box-shadow: 0 15px 40px rgba(212, 175, 55, 0.25);
                            }
                            
                            .osus-amount-section::before {
                                content: '';
                                position: absolute;
                                top: -2px;
                                left: -2px;
                                right: -2px;
                                bottom: -2px;
                                background: linear-gradient(45deg, var(--osus-burgundy-primary), var(--osus-gold-primary), var(--osus-burgundy-secondary));
                                border-radius: 17px;
                                z-index: -1;
                            }
                            
                            .osus-amount-label {
                                color: white;
                                font-size: 14px;
                                font-weight: 600;
                                letter-spacing: 2px;
                                margin-bottom: 10px;
                                text-shadow: 1px 1px 2px rgba(0,0,0,0.3);
                            }
                            
                            .osus-amount-value {
                                color: white;
                                font-size: 36px;
                                font-weight: 800;
                                letter-spacing: 1px;
                                text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
                            }
                            
                            /* Signature Section */
                            .osus-signature-section {
                                margin-top: 50px;
                                padding-top: 30px;
                                border-top: 2px solid rgba(139, 21, 56, 0.1);
                            }
                            
                            .osus-signature-grid {
                                display: grid;
                                grid-template-columns: repeat(3, 1fr);
                                gap: 30px;
                            }
                            
                            .osus-signature-box {
                                text-align: center;
                                padding: 20px;
                                background: linear-gradient(135deg, #FFFFFF 0%, var(--osus-cream) 100%);
                                border-radius: 10px;
                                border: 1px solid rgba(139, 21, 56, 0.1);
                                position: relative;
                            }
                            
                            .osus-signature-title {
                                color: var(--osus-burgundy-primary);
                                font-size: 10px;
                                font-weight: 700;
                                text-transform: uppercase;
                                letter-spacing: 1px;
                                margin-bottom: 15px;
                            }
                            
                            .osus-signature-name {
                                font-weight: 600;
                                color: var(--osus-dark);
                                margin-bottom: 5px;
                                font-size: 11px;
                            }
                            
                            .osus-signature-date {
                                font-size: 9px;
                                color: var(--osus-grey);
                                font-weight: 400;
                            }
                            
                            .osus-signature-line {
                                border-bottom: 2px solid var(--osus-burgundy-primary);
                                width: 80%;
                                margin: 0 auto 8px auto;
                                height: 30px;
                            }
                            
                            .osus-signature-sublabel {
                                font-size: 8px;
                                color: var(--osus-grey);
                                text-transform: uppercase;
                                letter-spacing: 0.5px;
                                margin-bottom: 8px;
                            }
                            
                            /* Footer */
                            .osus-voucher-footer {
                                background: linear-gradient(135deg, var(--osus-dark) 0%, #1a1a1a 100%);
                                color: white;
                                padding: 25px 40px;
                                text-align: center;
                                font-size: 10px;
                                line-height: 1.6;
                            }
                            
                            .osus-footer-message {
                                font-weight: 500;
                                margin-bottom: 8px;
                                opacity: 0.9;
                            }
                            
                            .osus-footer-note {
                                font-weight: 300;
                                opacity: 0.7;
                                font-style: italic;
                            }
                            
                            /* Decorative Elements */
                            .osus-decorative-corner {
                                position: absolute;
                                width: 100px;
                                height: 100px;
                                background: radial-gradient(circle, rgba(212, 175, 55, 0.1) 0%, transparent 70%);
                            }
                            
                            .osus-decorative-corner.top-left {
                                top: -50px;
                                left: -50px;
                            }
                            
                            .osus-decorative-corner.bottom-right {
                                bottom: -50px;
                                right: -50px;
                            }
                            
                            /* Print Optimizations */
                            @media print {
                                body, .article {
                                    background: white !important;
                                }
                                
                                .osus-voucher-container {
                                    box-shadow: none;
                                    border-radius: 0;
                                }
                                
                                .osus-voucher-header,
                                .osus-document-title,
                                .osus-amount-section,
                                .osus-voucher-footer {
                                    -webkit-print-color-adjust: exact;
                                    color-adjust: exact;
                                    print-color-adjust: exact;
                                }
                                
                                .page {
                                    margin: 0;
                                    padding: 0;
                                }
                            }
                            
                            /* Responsive Design */
                            @media (max-width: 768px) {
                                .osus-voucher-body {
                                    padding: 20px;
                                }
                                
                                .osus-details-grid {
                                    grid-template-columns: 1fr;
                                    gap: 20px;
                                }
                                
                                .osus-signature-grid {
                                    grid-template-columns: 1fr;
                                    gap: 20px;
                                }
                                
                                .osus-document-title h2 {
                                    font-size: 24px;
                                }
                                
                                .osus-amount-value {
                                    font-size: 28px;
                                }
                            }
                        </style>

                        <!-- Main Voucher Container -->
                        <div class="osus-voucher-container">
                            <!-- Decorative Elements -->
                            <div class="osus-decorative-corner top-left"></div>
                            <div class="osus-decorative-corner bottom-right"></div>
                            
                            <!-- Header Section -->
                            <div class="osus-voucher-header">
                                <div class="osus-header-content">
                                    <div class="osus-company-info">
                                        <h1><span t-field="doc.company_id.name"/></h1>
                                        <div class="osus-company-details">
                                            <t t-if="doc.company_id.street">
                                                <div><span t-field="doc.company_id.street"/></div>
                                            </t>
                                            <t t-if="doc.company_id.city or doc.company_id.zip">
                                                <div>
                                                    <t t-if="doc.company_id.city"><span t-field="doc.company_id.city"/></t>
                                                    <t t-if="doc.company_id.zip">, <span t-field="doc.company_id.zip"/></t>
                                                </div>
                                            </t>
                                            <t t-if="doc.company_id.country_id">
                                                <div><span t-field="doc.company_id.country_id.name"/></div>
                                            </t>
                                            <t t-if="doc.company_id.vat">
                                                <div><strong>VAT:</strong> <span t-field="doc.company_id.vat"/></div>
                                            </t>
                                            <div><strong>REF:</strong> <span t-field="doc.name"/></div>
                                        </div>
                                    </div>
                                    <div class="osus-logo-section">
                                        <img src="https://osusproperties.com/wp-content/uploads/2025/02/OSUS-logotype-2.png" alt="OSUS Properties" class="osus-logo"/>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Document Title -->
                            <div class="osus-document-title">
                                <h2>
                                    <t t-if="doc.payment_type == 'outbound'">PAYMENT VOUCHER</t>
                                    <t t-elif="doc.payment_type == 'inbound'">RECEIPT VOUCHER</t>
                                    <t t-else="">PAYMENT VOUCHER</t>
                                </h2>
                            </div>
                            
                            <!-- Voucher Body -->
                            <div class="osus-voucher-body">
                                <!-- Details Grid -->
                                <div class="osus-details-grid">
                                    <!-- Recipient Information -->
                                    <div class="osus-detail-card">
                                        <div class="osus-detail-row">
                                            <span class="osus-detail-label">Issued To</span>
                                            <span class="osus-detail-value"><span t-field="doc.partner_id.name"/></span>
                                        </div>
                                        <div class="osus-detail-row">
                                            <span class="osus-detail-label">Address</span>
                                            <span class="osus-detail-value">
                                                <t t-if="doc.partner_id.street or doc.partner_id.city">
                                                    <t t-if="doc.partner_id.street"><span t-field="doc.partner_id.street"/></t>
                                                    <t t-if="doc.partner_id.city">
                                                        <t t-if="doc.partner_id.street">, </t>
                                                        <span t-field="doc.partner_id.city"/>
                                                    </t>
                                                </t>
                                                <t t-else="">-</t>
                                            </span>
                                        </div>
                                        <div class="osus-detail-row">
                                            <span class="osus-detail-label">Phone</span>
                                            <span class="osus-detail-value">
                                                <t t-if="doc.partner_id.phone">
                                                    <span t-field="doc.partner_id.phone"/>
                                                </t>
                                                <t t-else="">-</t>
                                            </span>
                                        </div>
                                    </div>
                                    
                                    <!-- Payment Information -->
                                    <div class="osus-detail-card">
                                        <div class="osus-detail-row">
                                            <span class="osus-detail-label">Voucher No</span>
                                            <span class="osus-detail-value"><span t-field="doc.name"/></span>
                                        </div>
                                        <div class="osus-detail-row">
                                            <span class="osus-detail-label">Date</span>
                                            <span class="osus-detail-value"><span t-field="doc.date" t-options="{'widget': 'date', 'format': 'dd MMMM yyyy'}"/></span>
                                        </div>
                                        <div class="osus-detail-row">
                                            <span class="osus-detail-label">Payment Method</span>
                                            <span class="osus-detail-value"><span t-field="doc.journal_id.name"/></span>
                                        </div>
                                        <t t-if="doc.ref">
                                            <div class="osus-detail-row">
                                                <span class="osus-detail-label">Reference</span>
                                                <span class="osus-detail-value"><span t-field="doc.ref"/></span>
                                            </div>
                                        </t>
                                        <t t-if="doc.partner_bank_id">
                                            <div class="osus-detail-row">
                                                <span class="osus-detail-label">Bank Details</span>
                                                <span class="osus-detail-value">
                                                    <span t-field="doc.partner_bank_id.acc_number"/>
                                                    <t t-if="doc.partner_bank_id.acc_holder_name">
                                                        (<span t-field="doc.partner_bank_id.acc_holder_name"/>)
                                                    </t>
                                                </span>
                                            </div>
                                        </t>
                                    </div>
                                </div>
                                
                                <!-- Amount Section -->
                                <div class="osus-amount-section">
                                    <div class="osus-amount-label">TOTAL AMOUNT</div>
                                    <div class="osus-amount-value">
                                        <span t-field="doc.amount" t-options="{'widget': 'monetary', 'display_currency': doc.currency_id}"/>
                                    </div>
                                </div>
                                
                                <!-- Signature Section -->
                                <div class="osus-signature-section">
                                    <div class="osus-signature-grid">
                                        <!-- Initiated By -->
                                        <div class="osus-signature-box">
                                            <div class="osus-signature-title">Initiated By</div>
                                            <div class="osus-signature-name"><span t-field="doc.create_uid.name"/></div>
                                            <div class="osus-signature-date"><span t-field="doc.create_date" t-options="{'widget': 'datetime', 'format': 'dd/MM/yyyy HH:mm'}"/></div>
                                        </div>
                                        
                                        <!-- Approved By -->
                                        <div class="osus-signature-box">
                                            <div class="osus-signature-title">Approved By</div>
                                            <t t-if="doc.state == 'posted'">
                                                <div class="osus-signature-name">
                                                    <t t-if="hasattr(doc, 'authorized_by') and doc.authorized_by">
                                                        <span t-field="doc.authorized_by"/>
                                                    </t>
                                                    <t t-else="">
                                                        <span t-field="doc.write_uid.name"/>
                                                    </t>
                                                </div>
                                                <div class="osus-signature-date"><span t-field="doc.write_date" t-options="{'widget': 'datetime', 'format': 'dd/MM/yyyy HH:mm'}"/></div>
                                            </t>
                                            <t t-else="">
                                                <div class="osus-signature-name" style="color: var(--osus-grey); font-style: italic;">Pending Approval</div>
                                            </t>
                                        </div>
                                        
                                        <!-- Received By -->
                                        <div class="osus-signature-box">
                                            <div class="osus-signature-title">Received By</div>
                                            <div class="osus-signature-line"></div>
                                            <div class="osus-signature-sublabel">Signature</div>
                                            <div class="osus-signature-line"></div>
                                            <div class="osus-signature-sublabel">Full Name</div>
                                            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 10px; margin-top: 15px;">
                                                <div>
                                                    <div class="osus-signature-line"></div>
                                                    <div class="osus-signature-sublabel">Date</div>
                                                </div>
                                                <div>
                                                    <div class="osus-signature-line"></div>
                                                    <div class="osus-signature-sublabel">Mobile</div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Footer -->
                            <div class="osus-voucher-footer">
                                <div class="osus-footer-message">
                                    Thank you for your business â€¢ For payment confirmation, please contact: 
                                    <t t-if="doc.company_id.phone">
                                        <span t-field="doc.company_id.phone"/>
                                    </t>
                                    <t t-else="">our office</t>
                                </div>
                                <div class="osus-footer-note">
                                    This is a computer-generated document. No physical signature or stamp required for system verification.
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </template>

        <!-- Paper Format Configuration -->
        <record id="paperformat_osus_voucher" model="report.paperformat">
            <field name="name">OSUS Payment Voucher Format</field>
            <field name="default" eval="False"/>
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">10</field>
            <field name="margin_bottom">10</field>
            <field name="margin_left">10</field>
            <field name="margin_right">10</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">0</field>
            <field name="dpi">300</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
        </record>
        
        <!-- Report Action -->
        <record id="action_report_payment_voucher_osus" model="ir.actions.report">
            <field name="name">OSUS Payment Voucher</field>
            <field name="model">account.payment</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">payment_account_enhanced.report_payment_voucher_osus</field>
            <field name="report_file">payment_account_enhanced.report_payment_voucher_osus</field>
            <field name="binding_model_id" ref="account.model_account_payment"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="payment_account_enhanced.paperformat_osus_voucher"/>
        </record>

        <!-- Enhanced Account Payment Model -->
        <record id="view_account_payment_form_enhanced" model="ir.ui.view">
            <field name="name">account.payment.form.enhanced</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="action_print_osus_voucher" 
                            string="Print OSUS Voucher" 
                            type="object" 
                            class="btn-primary"
                            options="{'invisible': [('state', '=', 'draft')]}"/>
                </xpath>
                <xpath expr="//field[@name='ref']" position="after">
                    <field name="remarks" placeholder="Additional remarks or memo for this payment"/>
                    <field name="authorized_by" readonly="1" options="{'invisible': [('state', '!=', 'posted')]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>