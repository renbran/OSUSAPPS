<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Security Groups for Payment Account Enhanced -->

        <!-- Payment Reviewer Group -->
        <record id="group_payment_reviewer" model="res.groups">
            <field name="name">Payment Reviewer</field>
            <field name="category_id" ref="base.module_category_accounting"/>
            <field name="comment">Users who can review and approve payments at first level</field>
            <field name="implied_ids" eval="[(4, ref('account.group_account_user'))]"/>
        </record>

        <!-- Payment Approver Group -->
        <record id="group_payment_approver" model="res.groups">
            <field name="name">Payment Approver</field>
            <field name="category_id" ref="base.module_category_accounting"/>
            <field name="comment">Users who can approve payments at second level</field>
            <field name="implied_ids" eval="[(4, ref('payment_account_enhanced.group_payment_reviewer'))]"/>
        </record>

        <!-- Payment Authorizer Group -->
        <record id="group_payment_authorizer" model="res.groups">
            <field name="name">Payment Authorizer</field>
            <field name="category_id" ref="base.module_category_accounting"/>
            <field name="comment">Users who can authorize payments for final posting</field>
            <field name="implied_ids" eval="[(4, ref('payment_account_enhanced.group_payment_approver'))]"/>
        </record>

        <!-- Record Rules for Payment Access Control -->

        <!-- Payment Draft/Under Review - Accessible by all account users -->
        <record id="payment_rule_draft_review" model="ir.rule">
            <field name="name">Payment: Draft and Under Review Access</field>
            <field name="model_id" ref="account.model_account_payment"/>
            <field name="domain_force">[('state', 'in', ['draft', 'under_review'])]</field>
            <field name="groups" eval="[(4, ref('account.group_account_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Payment For Approval - Accessible by reviewers and above -->
        <record id="payment_rule_for_approval" model="ir.rule">
            <field name="name">Payment: For Approval Access</field>
            <field name="model_id" ref="account.model_account_payment"/>
            <field name="domain_force">[('state', '=', 'for_approval')]</field>
            <field name="groups" eval="[(4, ref('payment_account_enhanced.group_payment_reviewer'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Payment For Authorization - Accessible by approvers and above -->
        <record id="payment_rule_for_authorization" model="ir.rule">
            <field name="name">Payment: For Authorization Access</field>
            <field name="model_id" ref="account.model_account_payment"/>
            <field name="domain_force">[('state', '=', 'for_authorization')]</field>
            <field name="groups" eval="[(4, ref('payment_account_enhanced.group_payment_approver'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Payment Approved - Accessible by authorizers -->
        <record id="payment_rule_approved" model="ir.rule">
            <field name="name">Payment: Approved Access</field>
            <field name="model_id" ref="account.model_account_payment"/>
            <field name="domain_force">[('state', '=', 'approved')]</field>
            <field name="groups" eval="[(4, ref('payment_account_enhanced.group_payment_authorizer'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Payment Posted - Read access for all account users -->
        <record id="payment_rule_posted" model="ir.rule">
            <field name="name">Payment: Posted Read Access</field>
            <field name="model_id" ref="account.model_account_payment"/>
            <field name="domain_force">[('state', '=', 'posted')]</field>
            <field name="groups" eval="[(4, ref('account.group_account_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
    </data>
</odoo>