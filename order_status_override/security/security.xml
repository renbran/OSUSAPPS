<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Custom groups -->
        <record id="group_sale_workflow_user" model="res.groups">
            <field name="name">Sales Workflow User</field>
            <field name="category_id" ref="base.module_category_sales_sales"/>
            <field name="implied_ids" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
        </record>
        
        <record id="group_sale_workflow_manager" model="res.groups">
            <field name="name">Sales Workflow Manager</field>
            <field name="category_id" ref="base.module_category_sales_sales"/>
            <field name="implied_ids" eval="[(4, ref('group_sale_workflow_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
        
        <!-- Record Rules -->
        <record id="rule_order_status_all" model="ir.rule">
            <field name="name">Order Status Multi-Company</field>
            <field name="model_id" ref="model_order_status"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>
    </data>
</odoo>