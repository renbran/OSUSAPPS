<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Initial Status (Only one should have is_initial=True) -->
        <record id="order_status_draft" model="order.status">
            <field name="name">Draft</field>
            <field name="code">draft</field>
            <field name="sequence">10</field>
            <field name="description">New order created</field>
            <field name="is_initial" eval="True"/>
            <field name="is_final">false</field>
            <field name="color">1</field>
        </record>

        <!-- Documentation Review Status -->
        <record id="order_status_documentation" model="order.status">
            <field name="name">Documentation Review</field>
            <field name="code">documentation_review</field>
            <field name="sequence">20</field>
            <field name="description">Documentation is being reviewed and prepared</field>
            <field name="responsible_type">documentation</field>
            <field name="color">2</field>
            <field name="is_initial" eval="False"/>
            <field name="is_final">false</field>
        </record>

        <!-- Commission Calculation Status -->
        <record id="order_status_commission" model="order.status">
            <field name="name">Commission Calculation</field>
            <field name="code">commission_calculation</field>
            <field name="sequence">30</field>
            <field name="description">Commission calculations are being processed</field>
            <field name="responsible_type">commission</field>
            <field name="color">3</field>
            <field name="is_initial" eval="False"/>
            <field name="is_final">false</field>
        </record>

        <!-- Final Review Status -->
        <record id="order_status_final_review" model="order.status">
            <field name="name">Final Review</field>
            <field name="code">final_review</field>
            <field name="sequence">35</field>
            <field name="description">Final management review and approval</field>
            <field name="responsible_type">final_review</field>
            <field name="color">6</field>
            <field name="is_initial" eval="False"/>
            <field name="is_final">false</field>
        </record>

        <!-- Approved Status (Final) -->
        <record id="order_status_approved" model="order.status">
            <field name="name">Done</field>
            <field name="code">approved</field>
            <field name="sequence">40</field>
            <field name="description">Order has been approved and completed</field>
            <field name="is_initial">false</field>
            <field name="is_final" eval="True"/>
            <field name="color">10</field>
        </record>

    </data>
</odoo>