<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Default Workflow Stages Configuration -->
        <record id="workflow_stage_draft" model="order.status">
            <field name="name">Draft</field>
            <field name="code">draft</field>
            <field name="sequence">10</field>
            <field name="is_initial">True</field>
            <field name="description">Initial draft stage for new orders</field>
            <field name="color">1</field>
        </record>

        <record id="workflow_stage_documentation" model="order.status">
            <field name="name">Documentation In-progress</field>
            <field name="code">documentation</field>
            <field name="sequence">20</field>
            <field name="description">Documentation and initial processing stage</field>
            <field name="responsible_type">documentation</field>
            <field name="color">2</field>
        </record>

        <record id="workflow_stage_commission" model="order.status">
            <field name="name">Commission Calculation In-progress</field>
            <field name="code">commission</field>
            <field name="sequence">30</field>
            <field name="description">Commission calculation and validation stage</field>
            <field name="responsible_type">commission</field>
            <field name="color">3</field>
        </record>

        <record id="workflow_stage_review" model="order.status">
            <field name="name">Final Review</field>
            <field name="code">review</field>
            <field name="sequence">40</field>
            <field name="description">Final review before approval</field>
            <field name="responsible_type">final_review</field>
            <field name="color">4</field>
        </record>

        <record id="workflow_stage_approved" model="order.status">
            <field name="name">Approved</field>
            <field name="code">approved</field>
            <field name="sequence">50</field>
            <field name="is_final">True</field>
            <field name="description">Final approved stage</field>
            <field name="color">10</field>
        </record>

        <!-- Define workflow transitions -->
        <record id="workflow_stage_draft" model="order.status">
            <field name="next_status_ids" eval="[(6, 0, [ref('workflow_stage_documentation')])]"/>
        </record>

        <record id="workflow_stage_documentation" model="order.status">
            <field name="next_status_ids" eval="[(6, 0, [ref('workflow_stage_commission'), ref('workflow_stage_draft')])]"/>
        </record>

        <record id="workflow_stage_commission" model="order.status">
            <field name="next_status_ids" eval="[(6, 0, [ref('workflow_stage_review'), ref('workflow_stage_draft')])]"/>
        </record>

        <record id="workflow_stage_review" model="order.status">
            <field name="next_status_ids" eval="[(6, 0, [ref('workflow_stage_approved'), ref('workflow_stage_draft')])]"/>
        </record>

    </data>
</odoo>