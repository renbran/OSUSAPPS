<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Report Wizard Form View -->
        <record id="view_order_status_report_wizard_form" model="ir.ui.view">
            <field name="name">order.status.report.wizard.form</field>
            <field name="model">order.status.report</field>
            <field name="arch" type="xml">
                <form string="Generate Order Status Report">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="report_type" widget="radio" options="{'horizontal': true}"/>
                            </h1>
                        </div>

                        <group>
                            <group string="Date Range">
                                <field name="date_from" required="1"/>
                                <field name="date_to" required="1"/>
                            </group>
                            <group string="Output Options">
                                <field name="output_format" widget="radio"/>
                                <field name="include_details"/>
                                <field name="include_history"/>
                                <field name="group_by_partner"/>
                            </group>
                        </group>

                        <group string="Filters">
                            <field name="partner_ids" widget="many2many_tags"/>
                            <field name="status_ids" widget="many2many_tags"/>
                            <field name="user_ids" widget="many2many_tags"/>
                        </group>
                    </sheet>

                    <footer>
                        <button name="action_generate_report" string="Generate Report" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Action to open report wizard -->
        <record id="action_order_status_report_wizard" model="ir.actions.act_window">
            <field name="name">Generate Order Reports</field>
            <field name="res_model">order.status.report</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_order_status_report_wizard_form"/>
        </record>

        <!-- Menu item -->
        <menuitem id="menu_order_status_reports" name="Order Status Reports" parent="sale.sale_menu_root" action="action_order_status_report_wizard" sequence="99"/>

        <!-- Alternative menu in settings -->
        <menuitem id="menu_order_status_reports_config" name="Order Reports" parent="sale.menu_sale_config" action="action_order_status_report_wizard" sequence="10"/>
    </data>
</odoo>
