<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Email Template for Documentation Review -->
        <record id="email_template_documentation_review" model="mail.template">
            <field name="name">Order Documentation Review Required</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="subject">Documentation Review Required for Order ${object.name}</field>
            <field name="email_to">${object.documentation_user_id.email}</field>
            <field name="body_html" type="html">
                <div style="font-family: Arial, sans-serif; max-width: 600px; margin: 0 auto;">
                    <div style="background-color: #1f4788; color: white; padding: 20px; text-align: center;">
                        <h2>Documentation Review Required</h2>
                    </div>

                    <div style="padding: 20px; background-color: #f8f9fa;">
                        <p>Hello ${object.documentation_user_id.name},</p>

                        <p>You have been assigned to review documentation for the following sales order:</p>

                        <div style="background-color: white; padding: 15px; border-left: 4px solid #1f4788; margin: 20px 0;">
                            <h3>Order Details:</h3>
                            <ul>
                                <li>
                                    <strong>Order Number:</strong> ${object.name}</li>
                                <li>
                                    <strong>Customer:</strong> ${object.partner_id.name}</li>
                                <li>
                                    <strong>Order Date:</strong> ${object.date_order}</li>
                                <li>
                                    <strong>Total Amount:</strong> ${object.currency_id.symbol}${object.amount_total}</li>
                                <li>
                                    <strong>Current Status:</strong> ${object.custom_status_id.name}</li>
                            </ul>
                        </div>

                        <p>
                            <strong>Required Actions:</strong>
                        </p>
                        <ul>
                            <li>Review all order documentation</li>
                            <li>Verify customer information and requirements</li>
                            <li>Ensure all necessary documents are complete</li>
                            <li>Move to next stage once review is complete</li>
                        </ul>

                        <div style="text-align: center; margin: 30px 0;">
                            <a href="/web#id=${object.id}&amp;view_type=form&amp;model=sale.order" style="background-color: #1f4788; color: white; padding: 12px 25px; text-decoration: none; border-radius: 5px; display: inline-block;">
                                View Order Details
                            </a>
                        </div>

                        <p>Please complete the documentation review at your earliest convenience.</p>

                        <p>Best regards,<br/>
Sales Team</p>
                    </div>

                    <div style="background-color: #6c757d; color: white; padding: 10px; text-align: center; font-size: 12px;">
                        This is an automated notification from your Order Management System
                    </div>
                </div>
            </field>
        </record>

        <!-- Email Template for Commission Calculation -->
        <record id="email_template_commission_calculation" model="mail.template">
            <field name="name">Commission Calculation Required</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="subject">Commission Calculation Required for Order ${object.name}</field>
            <field name="email_to">${object.commission_user_id.email}</field>
            <field name="body_html" type="html">
                <div style="font-family: Arial, sans-serif; max-width: 600px; margin: 0 auto;">
                    <div style="background-color: #9BBB59; color: white; padding: 20px; text-align: center;">
                        <h2>Commission Calculation Required</h2>
                    </div>

                    <div style="padding: 20px; background-color: #f8f9fa;">
                        <p>Hello ${object.commission_user_id.name},</p>

                        <p>You have been assigned to calculate commissions for the following sales order:</p>

                        <div style="background-color: white; padding: 15px; border-left: 4px solid #9BBB59; margin: 20px 0;">
                            <h3>Order Details:</h3>
                            <ul>
                                <li>
                                    <strong>Order Number:</strong> ${object.name}</li>
                                <li>
                                    <strong>Customer:</strong> ${object.partner_id.name}</li>
                                <li>
                                    <strong>Order Date:</strong> ${object.date_order}</li>
                                <li>
                                    <strong>Total Amount:</strong> ${object.currency_id.symbol}${object.amount_total}</li>
                                <li>
                                    <strong>Current Status:</strong> ${object.custom_status_id.name}</li>
                            </ul>
                        </div>

                        <p>
                            <strong>Commission Calculation Tasks:</strong>
                        </p>
                        <ul>
                            <li>Calculate Agent 1 and Agent 2 commissions</li>
                            <li>Determine Broker and Referrer commissions</li>
                            <li>Calculate Manager and Director commissions</li>
                            <li>Update commission amounts in the order</li>
                            <li>Verify total commission calculations</li>
                        </ul>

                        <div style="background-color: #fff3cd; padding: 10px; border-radius: 5px; margin: 15px 0;">
                            <strong>Note:</strong> Please ensure all commission calculations are accurate before proceeding to the next stage.
                        </div>

                        <div style="text-align: center; margin: 30px 0;">
                            <a href="/web#id=${object.id}&amp;view_type=form&amp;model=sale.order" style="background-color: #9BBB59; color: white; padding: 12px 25px; text-decoration: none; border-radius: 5px; display: inline-block;">
                                Calculate Commissions
                            </a>
                        </div>

                        <p>Please complete the commission calculations promptly.</p>

                        <p>Best regards,<br/>
Finance Team</p>
                    </div>

                    <div style="background-color: #6c757d; color: white; padding: 10px; text-align: center; font-size: 12px;">
                        This is an automated notification from your Order Management System
                    </div>
                </div>
            </field>
        </record>

        <!-- Email template for order rejection -->
        <record id="email_template_order_rejected" model="mail.template">
            <field name="name">Sales Order: Rejection Notification</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="subject">Order ${object.name} Requires Revision</field>
            <field name="email_from">${user.email_formatted | safe}</field>
            <field name="email_to">${object.partner_id.email_formatted | safe}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
        Dear ${object.partner_id.name},
                        <br/>
                        <br/>
        We regret to inform you that your order <strong>${object.name}</strong> requires some revisions before it can be processed.
                        <br/>
                        <br/>
        Order details:
                        <ul>
                            <li>Order Reference: ${object.name}</li>
                            <li>Order Date: ${object.date_order}</li>
                        </ul>
                        <br/>
        Our team will contact you shortly to discuss the necessary changes.
                        <br/>
                        <br/>
        If you have any questions in the meantime, please don't hesitate to contact us.
                        <br/>
                        <br/>
        Thank you for your understanding.
                        <br/>
                        <br/>
        Best regards,
                        <br/>
        ${user.name}
                    </p>
                </div>
            </field>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>