<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Order Status Tree View -->
        <record id="view_order_status_tree" model="ir.ui.view">
            <field name="name">order.status.tree</field>
            <field name="model">order.status</field>
            <field name="arch" type="xml">
                <tree string="Order Statuses" decoration-info="is_initial" decoration-success="is_final">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="responsible_type"/>
                    <field name="is_initial"/>
                    <field name="is_final"/>
                </tree>
            </field>
        </record>
        
        <!-- Order Status Form View -->
        <record id="view_order_status_form" model="ir.ui.view">
            <field name="name">order.status.form</field>
            <field name="model">order.status</field>
            <field name="arch" type="xml">
                <form string="Order Status">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" placeholder="e.g. Documentation"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="code" required="1"/>
                                <field name="sequence"/>
                                <field name="responsible_type"/>
                                <field name="color" widget="color_picker"/>
                            </group>
                            <group>
                                <field name="is_initial"/>
                                <field name="is_final"/>
                                <field name="active"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description" placeholder="Add a description for this status..."/>
                            </page>
                            <page string="Allowed Next Statuses">
                                <field name="next_status_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Order Status Search View -->
        <record id="view_order_status_search" model="ir.ui.view">
            <field name="name">order.status.search</field>
            <field name="model">order.status</field>
            <field name="arch" type="xml">
                <search string="Search Order Status">
                    <field name="name"/>
                    <field name="description"/>
                    <filter string="Initial Status" name="is_initial" domain="[('is_initial', '=', True)]"/>
                    <filter string="Final Status" name="is_final" domain="[('is_final', '=', True)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Responsible Type" name="group_by_responsible" context="{'group_by': 'responsible_type'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Order Status Action -->
        <record id="action_order_status" model="ir.actions.act_window">
            <field name="name">Order Statuses</field>
            <field name="res_model">order.status</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new order status
                </p>
                <p>
                    Define the various statuses for your sales order workflow.
                </p>
            </field>
        </record>
        
        <!-- Order Status History Views -->
        <record id="view_order_status_history_tree" model="ir.ui.view">
            <field name="name">order.status.history.tree</field>
            <field name="model">order.status.history</field>
            <field name="arch" type="xml">
                <tree string="Status History" create="false" delete="false">
                    <field name="create_date"/>
                    <field name="order_id"/>
                    <field name="previous_status_id"/>
                    <field name="status_id"/>
                    <field name="user_id"/>
                    <field name="notes"/>
                </tree>
            </field>
        </record>
        
        <record id="view_order_status_history_form" model="ir.ui.view">
            <field name="name">order.status.history.form</field>
            <field name="model">order.status.history</field>
            <field name="arch" type="xml">
                <form string="Status History Entry" create="false" edit="false">
                    <sheet>
                        <group>
                            <group>
                                <field name="create_date"/>
                                <field name="order_id"/>
                                <field name="user_id"/>
                            </group>
                            <group>
                                <field name="previous_status_id"/>
                                <field name="status_id"/>
                            </group>
                        </group>
                        <group string="Notes">
                            <field name="notes" nolabel="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Order Status History Action -->
        <record id="action_order_status_history" model="ir.actions.act_window">
            <field name="name">Status Change History</field>
            <field name="res_model">order.status.history</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_order_id': active_id}</field>
        </record>
        
        <!-- Menu Items -->
        <menuitem id="menu_order_status_config"
                  name="Order Status Workflow"
                  parent="sale.menu_sale_config"
                  sequence="10"/>
                  
        <menuitem id="menu_order_status"
                  name="Status Configuration"
                  parent="menu_order_status_config"
                  action="action_order_status"
                  sequence="1"/>
    </data>
</odoo>