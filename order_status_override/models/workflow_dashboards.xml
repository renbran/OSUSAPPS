<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Workflow Dashboard Action -->
    <record id="action_workflow_dashboard" model="ir.actions.act_window">
        <field name="name">Workflow Dashboard</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{
            'search_default_group_workflow_stage': 1,
            'search_default_my_assigned': 1,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No orders found in workflow!
            </p>
            <p>
                This dashboard shows all orders in various workflow stages.
                You can filter by assigned user or workflow stage.
            </p>
        </field>
    </record>

    <!-- Workflow Kanban View -->
    <record id="view_order_kanban_workflow" model="ir.ui.view">
        <field name="name">sale.order.kanban.workflow</field>
        <field name="model">sale.order</field>
        <field name="arch" type="xml">
            <kanban default_group_by="workflow_stage" class="o_kanban_small_column">
                <field name="workflow_stage"/>
                <field name="assigned_user_id"/>
                <field name="partner_id"/>
                <field name="amount_total"/>
                <field name="create_date"/>
                <field name="activity_ids"/>
                <field name="activity_state"/>

                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top mb16">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <br/>
                                        <small class="o_kanban_record_subtitle text-muted">
                                            <field name="partner_id"/>
                                        </small>
                                    </div>
                                    <div class="o_kanban_record_title">
                                        <field name="amount_total" widget="monetary"/>
                                    </div>
                                </div>

                                <div class="o_kanban_record_body">
                                    <field name="assigned_user_id" widget="many2one_avatar_user"/>
                                </div>

                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="activity_ids" widget="kanban_activity"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <small class="text-muted">
                                            <field name="create_date" widget="date"/>
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Menu Item for Workflow Dashboard -->
    <menuitem id="menu_workflow_dashboard" name="Workflow Dashboard" parent="sale.sale_menu_root" action="action_workflow_dashboard" sequence="15"/>

    <!-- My Assigned Orders Action -->
    <record id="action_my_assigned_orders" model="ir.actions.act_window">
        <field name="name">My Assigned Orders</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="domain">[('assigned_user_id', '=', uid), ('workflow_stage', '!=', 'approved')]</field>
        <field name="context">{}</field>
    </record>

    <!-- Menu for My Assigned Orders -->
    <menuitem id="menu_my_assigned_orders" name="My Assigned Orders" parent="sale.sale_menu_root" action="action_my_assigned_orders" sequence="16"/>

    <!-- Workflow Statistics Action -->
    <record id="action_workflow_statistics" model="ir.actions.act_window">
        <field name="name">Workflow Statistics</field>
        <field name="res_model">order.status.history</field>
        <field name="view_mode">graph,pivot,tree</field>
        <field name="domain">[]</field>
        <field name="context">{
            'search_default_group_by_stage': 1,
            'search_default_this_month': 1,
        }</field>
    </record>

    <!-- Workflow Statistics Graph View -->
    <record id="view_order_status_history_graph" model="ir.ui.view">
        <field name="name">order.status.history.graph</field>
        <field name="model">order.status.history</field>
        <field name="arch" type="xml">
            <graph string="Workflow Statistics" type="bar">
                <field name="stage_name" type="col"/>
                <field name="create_date" type="row" interval="month"/>
            </graph>
        </field>
    </record>

    <!-- Workflow Statistics Pivot View -->
    <record id="view_order_status_history_pivot" model="ir.ui.view">
        <field name="name">order.status.history.pivot</field>
        <field name="model">order.status.history</field>
        <field name="arch" type="xml">
            <pivot string="Workflow Analysis">
                <field name="stage_name" type="row"/>
                <field name="create_date" type="col" interval="month"/>
                <field name="duration_days" type="measure"/>
            </pivot>
        </field>
    </record>

</odoo>