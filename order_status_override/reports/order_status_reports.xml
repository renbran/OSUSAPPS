<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Report Actions -->
        <record id="report_commission_payout" model="ir.actions.report">
            <field name="name">Commission Payout Report</field>
            <field name="model">sale.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">order_status_override.commission_payout_report_template</field>
            <field name="report_file">order_status_override.commission_payout_report_template</field>
            <field name="print_report_name">'Commission Report - %s' % object.name</field>
            <field name="paperformat_id" ref="base.paperformat_us"/>
        </record>

        <!-- Professional Tabular Commission Report Template -->
        <template id="commission_payout_report_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <!-- Professional Commission Report CSS Styles -->
                        <style>
                            @page {
                                margin: 8mm;
                                size: A4;
                            }
                            
                            .commission-container {
                                font-family: Arial, sans-serif;
                                background: white;
                                font-size: 12px;
                                line-height: 1.4;
                                color: #000;
                            }
                            
                            .report-header {
                                background: linear-gradient(135deg, #800020, #a0002a);
                                color: white;
                                padding: 15px 20px;
                                margin: 0 0 15px 0;
                                border-radius: 8px;
                                text-align: center;
                            }
                            
                            .report-title {
                                font-size: 24px;
                                font-weight: bold;
                                margin: 0;
                                text-transform: uppercase;
                                letter-spacing: 2px;
                            }
                            
                            .report-subtitle {
                                font-size: 14px;
                                margin: 5px 0 0 0;
                                color: #ffd700;
                                font-weight: 500;
                            }
                            
                            .commission-table {
                                width: 100%;
                                border-collapse: collapse;
                                margin: 20px 0;
                                font-size: 11px;
                            }
                            
                            .commission-table th,
                            .commission-table td {
                                border: 1px solid #800020;
                                padding: 6px;
                                text-align: left;
                            }
                            
                            .commission-table th {
                                background: linear-gradient(135deg, #800020, #a0002a);
                                color: #ffd700;
                                font-weight: bold;
                                text-align: center;
                                text-transform: uppercase;
                                font-size: 10px;
                            }
                            
                            .section-header {
                                background: linear-gradient(135deg, #800020, #a0002a);
                                color: #ffd700;
                                font-weight: bold;
                                text-align: center;
                                text-transform: uppercase;
                                font-size: 12px;
                            }
                            
                            .customer-row {
                                background: linear-gradient(135deg, #fff9e6, #f5f5f5);
                                color: #800020;
                                font-weight: bold;
                            }
                            
                            .main-order-row {
                                background-color: #f8f9fa;
                                font-weight: 500;
                            }
                            
                            .subtotal-row {
                                background: linear-gradient(135deg, #ffd700, #ffed4e);
                                color: #800020;
                                font-weight: bold;
                            }
                            
                            .grand-total-row {
                                background: linear-gradient(135deg, #800020, #a0002a);
                                color: #ffd700;
                                font-weight: bold;
                            }
                            
                            .amount-cell {
                                text-align: right;
                                font-weight: 600;
                            }
                            
                            .rate-cell {
                                text-align: center;
                                font-weight: 600;
                            }
                            
                            .highlight-amount {
                                color: #800020;
                                font-weight: bold;
                            }
                            
                            .status-badge {
                                padding: 3px 8px;
                                border-radius: 12px;
                                font-size: 9px;
                                font-weight: bold;
                                text-transform: uppercase;
                            }
                            
                            .status-inprogress {
                                background: #fff3cd;
                                color: #856404;
                            }
                            
                            .status-approved {
                                background: #d4edda;
                                color: #155724;
                            }
                            
                            .status-paid {
                                background: #d1ecf1;
                                color: #0c5460;
                            }
                            
                            .status-draft {
                                background: #f8d7da;
                                color: #721c24;
                            }
                            
                            .footer-section {
                                background: linear-gradient(135deg, #800020, #a0002a);
                                color: white;
                                text-align: center;
                                padding: 10px 15px;
                                font-size: 10px;
                                margin: 15px 0 0 0;
                                border-radius: 6px;
                            }
                            
                            .footer-title {
                                font-size: 12px;
                                font-weight: bold;
                                margin-bottom: 3px;
                                color: #ffd700;
                            }
                        </style>

                        <div class="commission-container">
                            <!-- Header Section -->
                            <div class="report-header">
                                <h1 class="report-title">Commission Payout Report</h1>
                                <div class="report-subtitle">
                                    Order: <strong>
                                    <span t-field="o.name"/>
                                </strong> | 
                                    Date: <strong>
                                <span t-field="o.date_order" t-options="{'widget': 'date'}"/>
                            </strong>
                        </div>
                    </div>

                    <table class="commission-table">
                        <!-- Customer Information Row -->
                        <tr class="customer-row">
                            <td colspan="2">
                                <strong>CUSTOMER NAME</strong>
                            </td>
                            <td colspan="4">
                                <span t-field="o.partner_id.name"/>
                            </td>
                        </tr>

                        <!-- Headers -->
                        <tr>
                            <th>BUYER</th>
                            <th>PROJECT</th>
                            <th>UNIT</th>
                            <th>SALES VALUE</th>
                            <th>RATE (%)</th>
                            <th>TOTAL AMOUNT</th>
                        </tr>

                        <!-- Main Order Row -->
                        <tr class="main-order-row">
                            <td>
                                <span t-field="o.partner_id.name"/>
                            </td>
                            <td>
                                <span t-field="o.project_id.name"/>
                            </td>
                            <td>
                                <span t-field="o.unit_id.name"/>
                            </td>
                            <td class="amount-cell">
                                <t t-esc="'{:,.2f}'.format(o.amount_total or 0)"/>
                            </td>
                            <td class="rate-cell">-</td>
                            <td class="amount-cell">
                                <t t-esc="'{:,.2f}'.format(o.amount_total or 0)"/>
                            </td>
                        </tr>

                        <!-- External Commission Section -->
                        <tr class="section-header">
                            <td colspan="6">EXTERNAL COMMISSION</td>
                        </tr>

                        <!-- External Commission Headers -->
                        <tr>
                            <th>NAME</th>
                            <th>VENDOR TYPE</th>
                            <th>BASE CALCULATION</th>
                            <th>RATE (%)</th>
                            <th>TOTAL AMOUNT</th>
                            <th>STATUS</th>
                        </tr>

                        <!-- Broker -->
                        <tr t-if="o.broker_partner_id">
                            <td>BROKER</td>
                            <td>BROKER</td>
                            <td class="amount-cell">
                                <t t-esc="'{:,.2f}'.format(o.amount_total or 0)"/>
                            </td>
                            <td class="rate-cell">
                                <t t-esc="'{:.2f}'.format(o.broker_rate or 0)"/>
                            </td>
                            <td class="amount-cell highlight-amount">
                                <t t-esc="'{:,.2f}'.format(o.broker_amount or 0)"/>
                            </td>
                            <td>
                                <span class="status-badge status-inprogress">In progress</span>
                            </td>
                        </tr>

                        <!-- Referrer -->
                        <tr t-if="o.referrer_partner_id">
                            <td>REFERRER</td>
                            <td>REFERRER</td>
                            <td class="amount-cell">
                                <t t-esc="'{:,.2f}'.format(o.amount_total or 0)"/>
                            </td>
                            <td class="rate-cell">
                                <t t-esc="'{:.2f}'.format(o.referrer_rate or 0)"/>
                            </td>
                            <td class="amount-cell highlight-amount">
                                <t t-esc="'{:,.2f}'.format(o.referrer_amount or 0)"/>
                            </td>
                            <td>
                                <span class="status-badge status-approved">Approved</span>
                            </td>
                        </tr>

                        <!-- Kickback -->
                        <tr t-if="o.cashback_partner_id">
                            <td>KICKBACK</td>
                            <td>KICKBACK</td>
                            <td class="amount-cell">
                                <t t-esc="'{:,.2f}'.format(o.amount_total or 0)"/>
                            </td>
                            <td class="rate-cell">
                                <t t-esc="'{:.2f}'.format(o.cashback_rate or 0)"/>
                            </td>
                            <td class="amount-cell highlight-amount">
                                <t t-esc="'{:,.2f}'.format(o.cashback_amount or 0)"/>
                            </td>
                            <td>
                                <span class="status-badge status-paid">Paid</span>
                            </td>
                        </tr>

                        <!-- Others -->
                        <tr t-if="o.other_external_partner_id">
                            <td>OTHERS</td>
                            <td>OTHERS</td>
                            <td class="amount-cell">
                                <t t-esc="'{:,.2f}'.format(o.amount_total or 0)"/>
                            </td>
                            <td class="rate-cell">
                                <t t-esc="'{:.2f}'.format(o.other_external_rate or 0)"/>
                            </td>
                            <td class="amount-cell highlight-amount">
                                <t t-esc="'{:,.2f}'.format(o.other_external_amount or 0)"/>
                            </td>
                            <td>
                                <span class="status-badge status-draft">Draft</span>
                            </td>
                        </tr>

                        <!-- External Subtotal -->
                        <tr class="subtotal-row">
                            <td colspan="4">
                                <strong>SUBTOTAL</strong>
                            </td>
                            <td class="amount-cell">
                                <strong>
                                    <t t-esc="'{:,.2f}'.format(o.total_external_commission_amount or 0)"/>
                                </strong>
                            </td>
                            <td></td>
                        </tr>

                        <!-- Internal Commission Section -->
                        <tr class="section-header">
                            <td colspan="6">INTERNAL COMMISSION</td>
                        </tr>

                        <!-- Agent 1 -->
                        <tr t-if="o.agent1_partner_id">
                            <td>AGENT 1</td>
                            <td>AGENT1</td>
                            <td class="amount-cell">
                                <t t-esc="'{:,.2f}'.format(o.amount_total or 0)"/>
                            </td>
                            <td class="rate-cell">
                                <t t-esc="'{:.2f}'.format(o.agent1_rate or 0)"/>
                            </td>
                            <td class="amount-cell highlight-amount">
                                <t t-esc="'{:,.2f}'.format(o.agent1_amount or 0)"/>
                            </td>
                            <td>
                                <span class="status-badge status-inprogress">In progress</span>
                            </td>
                        </tr>

                        <!-- Agent 2 -->
                        <tr t-if="o.agent2_partner_id">
                            <td>AGENT 2</td>
                            <td>AGENT 2</td>
                            <td class="amount-cell">
                                <t t-esc="'{:,.2f}'.format(o.amount_total or 0)"/>
                            </td>
                            <td class="rate-cell">
                                <t t-esc="'{:.2f}'.format(o.agent2_rate or 0)"/>
                            </td>
                            <td class="amount-cell highlight-amount">
                                <t t-esc="'{:,.2f}'.format(o.agent2_amount or 0)"/>
                            </td>
                            <td>
                                <span class="status-badge status-approved">Approved</span>
                            </td>
                        </tr>

                        <!-- Manager -->
                        <tr t-if="o.manager_partner_id">
                            <td>MANAGER</td>
                            <td>MANAGER</td>
                            <td class="amount-cell">
                                <t t-esc="'{:,.2f}'.format(o.amount_total or 0)"/>
                            </td>
                            <td class="rate-cell">
                                <t t-esc="'{:.2f}'.format(o.manager_rate or 0)"/>
                            </td>
                            <td class="amount-cell highlight-amount">
                                <t t-esc="'{:,.2f}'.format(o.manager_amount or 0)"/>
                            </td>
                            <td>
                                <span class="status-badge status-paid">Paid</span>
                            </td>
                        </tr>

                        <!-- Director -->
                        <tr t-if="o.director_partner_id">
                            <td>DIRECTOR</td>
                            <td>DIRECTOR</td>
                            <td class="amount-cell">
                                <t t-esc="'{:,.2f}'.format(o.amount_total or 0)"/>
                            </td>
                            <td class="rate-cell">
                                <t t-esc="'{:.2f}'.format(o.director_rate or 0)"/>
                            </td>
                            <td class="amount-cell highlight-amount">
                                <t t-esc="'{:,.2f}'.format(o.director_amount or 0)"/>
                            </td>
                            <td>
                                <span class="status-badge status-draft">Draft</span>
                            </td>
                        </tr>

                        <!-- Internal Subtotal -->
                        <tr class="subtotal-row">
                            <td colspan="4">
                                <strong>SUBTOTAL</strong>
                            </td>
                            <td class="amount-cell">
                                <strong>
                                    <t t-esc="'{:,.2f}'.format(o.total_internal_commission_amount or 0)"/>
                                </strong>
                            </td>
                            <td></td>
                        </tr>

                        <!-- Grand Total -->
                        <tr class="grand-total-row">
                            <td colspan="4">
                                <strong>GRAND TOTAL</strong>
                            </td>
                            <td class="amount-cell">
                                <strong>
                                    <t t-esc="'{:,.2f}'.format(o.total_commission_amount or 0)"/>
                                </strong>
                            </td>
                            <td></td>
                        </tr>

                        <!-- VAT Amount -->
                        <tr>
                            <td colspan="4">
                                <strong>VAT AMOUNT</strong>
                            </td>
                            <td class="amount-cell">
                                <strong>
                                    <t t-esc="'{:,.2f}'.format(o.amount_tax or 0)"/>
                                </strong>
                            </td>
                            <td></td>
                        </tr>

                        <!-- Net Commission -->
                        <tr class="grand-total-row">
                            <td colspan="4">
                                <strong>NET COMMISSION</strong>
                            </td>
                            <td class="amount-cell">
                                <strong>
                                    <t t-esc="'{:,.2f}'.format((o.total_commission_amount or 0) + (o.amount_tax or 0))"/>
                                </strong>
                            </td>
                            <td></td>
                        </tr>
                    </table>

                    <!-- Meta Information -->
                    <div class="footer-section">
                        <div class="footer-title">Commission Payout Report - Confidential Document</div>
                        <div>This is a computer-generated commission report. All amounts are subject to verification and final approval.</div>
                        <div style="font-size: 9px; margin-top: 4px; opacity: 0.8; color: #ffd700;">
                                    OSUS Real Estate Brokerage LLC | Dubai, UAE | License No: RERA-1234567
                        </div>
                        <div style="margin-top: 8px; font-size: 9px; font-style: italic;">
                                    Generated on <span t-esc="datetime.datetime.now().strftime('%Y-%m-%d %H:%M:%S')"/>
 by <span t-field="o.create_uid.name"/>
                    </div>
                </div>
            </div>
        </div>
    </t>
</t>
</template>

</data>
</odoo>
