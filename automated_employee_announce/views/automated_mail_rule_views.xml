<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_automated_mail_rule_form" model="ir.ui.view">
        <field name="name">automated.mail.rule.form</field>
        <field name="model">automated.mail.rule</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_test_rule" type="object" string="Test Rule" class="oe_highlight"/>
                    <field name="active" widget="boolean_toggle"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" placeholder="Rule Name..."/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="model_id"/>
                            <field name="rule_type"/>
                            <field name="mail_template_id"/>
                        </group>
                        <group>
                            <field name="send_to_all_employees"/>
                            <field name="days_before"/>
                            <field name="last_run" readonly="1"/>
                        </group>
                    </group>
                    <group string="Statistics">
                        <group>
                            <field name="last_run_count" readonly="1"/>
                            <field name="total_sent" readonly="1"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_automated_mail_rule_tree" model="ir.ui.view">
        <field name="name">automated.mail.rule.tree</field>
        <field name="model">automated.mail.rule</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="model_id"/>
                <field name="rule_type"/>
                <field name="active" widget="boolean_toggle"/>
                <field name="last_run"/>
                <field name="last_run_count"/>
                <field name="total_sent"/>
            </tree>
        </field>
    </record>

    <record id="view_automated_mail_rule_search" model="ir.ui.view">
        <field name="name">automated.mail.rule.search</field>
        <field name="model">automated.mail.rule</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="model_id"/>
                <field name="rule_type"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="Birthday Rules" name="birthday" domain="[('rule_type', '=', 'birthday')]"/>
                <filter string="Anniversary Rules" name="anniversary" domain="[('rule_type', '=', 'work_anniversary')]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Rule Type" name="group_rule_type" domain="[]" context="{'group_by': 'rule_type'}"/>
                    <filter string="Model" name="group_model" domain="[]" context="{'group_by': 'model_id'}"/>
                    <filter string="Active" name="group_active" domain="[]" context="{'group_by': 'active'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_automated_mail_rule" model="ir.actions.act_window">
        <field name="name">Automated Mail Rules</field>
        <field name="res_model">automated.mail.rule</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first automated mail rule!
            </p>
            <p>
                Automated mail rules allow you to send scheduled emails for employee birthdays, work anniversaries, and other events.
            </p>
            <p>
                Configure the rule type, target model, and mail template to get started.
            </p>
        </field>
    </record>
</odoo>