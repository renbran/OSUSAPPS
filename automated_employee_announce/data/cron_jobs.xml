<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Automated Mail Rules Cron Job -->
        <record id="ir_cron_automated_mail_rules" model="ir.cron">
            <field name="name">Automated Mail Rules: Run All Active Rules</field>
            <field name="model_id" ref="model_automated_mail_rule"/>
            <field name="state">code</field>
            <field name="code">model.run_all_active_rules()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall">False</field>
            <field name="active">True</field>
            <field name="priority">5</field>
            <field name="user_id" ref="base.user_root"/>
        </record>

