<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Configuration Settings View -->
    <record id="view_free_ai_agent_config_settings" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.free.ai.agent</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Free AI Agent" string="Free AI Agent" data-key="free_ai_agent">
                    
                    <h2>General Settings</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="ai_agent_enabled"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="ai_agent_enabled"/>
                                <div class="text-muted">
                                    Enable AI Agents functionality in this Odoo instance
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="default_ai_provider_id" string="Default AI Provider"/>
                                <field name="default_ai_provider_id" class="oe_inline"/>
                                <button name="test_default_provider" string="Test Connection" 
                                        type="object" class="btn-link" icon="fa-plug"/>
                            </div>
                        </div>
                    </div>

                    <h2>Usage Limits</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="max_requests_per_hour"/>
                                <field name="max_requests_per_hour" class="oe_inline"/>
                                <div class="text-muted">
                                    Maximum AI requests per hour per user (0 = unlimited)
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="max_tokens_per_request"/>
                                <field name="max_tokens_per_request" class="oe_inline"/>
                                <div class="text-muted">
                                    Maximum tokens per AI request
                                </div>
                            </div>
                        </div>
                    </div>

                    <h2>Data Management</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="auto_cleanup_enabled"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="auto_cleanup_enabled"/>
                                <div class="text-muted">
                                    Automatically cleanup old response history records
                                </div>
                                <div class="content-group" invisible="not auto_cleanup_enabled">
                                    <div class="mt16">
                                        <label for="cleanup_days" class="col-lg-3 o_light_label" string="Keep records for"/>
                                        <field name="cleanup_days" class="oe_inline"/> days
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                            </div>
                            <div class="o_setting_right_pane">
                                <button name="cleanup_old_records_now" string="Cleanup Now" 
                                        type="object" class="btn-secondary"/>
                                <div class="text-muted">
                                    Manually cleanup old response history records
                                </div>
                            </div>
                        </div>
                    </div>

                    <h2>Notifications</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="notify_on_agent_failure"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="notify_on_agent_failure"/>
                                <div class="text-muted">
                                    Send notifications when agents fail to execute
                                </div>
                                <div class="content-group" invisible="not notify_on_agent_failure">
                                    <div class="mt16">
                                        <label for="failure_notification_user_ids" class="col-lg-3 o_light_label"/>
                                        <field name="failure_notification_user_ids" widget="many2many_tags"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <h2>Quick Setup</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                            </div>
                            <div class="o_setting_right_pane">
                                <button name="create_sample_agents" string="Create Sample Agents" 
                                        type="object" class="btn-secondary"/>
                                <div class="text-muted">
                                    Create sample AI agents for testing and demonstration
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </xpath>
        </field>
    </record>

    <!-- Configuration Settings Action -->
    <record id="action_free_ai_agent_config_settings" model="ir.actions.act_window">
        <field name="name">Free AI Agent Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module': 'free_ai_agent'}</field>
    </record>

</odoo>