<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit invoice form view to replace quantity field with percentage display -->
        <record id="view_move_form_inherit_percentage" model="ir.ui.view">
            <field name="name">account.move.form.inherit.percentage</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <!-- Replace quantity field in invoice lines with percentage widget -->
                <xpath expr="//field[@name='invoice_line_ids']//field[@name='quantity']" position="replace">
                    <field name="quantity_percentage" 
                           widget="percentage" 
                           string="Quantity" 
                           options="{'digits': [16, 6]}"
                           attrs="{'readonly': [('parent_state', '!=', 'draft')]}"/>
                </xpath>
            </field>
        </record>

        <!-- Inherit bill form view to replace quantity field with percentage display -->
        <record id="view_move_form_supplier_inherit_percentage" model="ir.ui.view">
            <field name="name">account.move.form.supplier.inherit.percentage</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <!-- Also replace in supplier bill lines for consistency -->
                <xpath expr="//field[@name='line_ids']//field[@name='quantity']" position="replace">
                    <field name="quantity_percentage" 
                           widget="percentage" 
                           string="Quantity" 
                           options="{'digits': [16, 6]}"
                           attrs="{'readonly': [('parent_state', '!=', 'draft')]}"/>
                </xpath>
            </field>
        </record>

        <!-- Inherit tree view for invoice lines -->
        <record id="view_move_line_tree_inherit_percentage" model="ir.ui.view">
            <field name="name">account.move.line.tree.inherit.percentage</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='quantity']" position="replace">
                    <field name="quantity_percentage" 
                           widget="percentage" 
                           string="Quantity" 
                           options="{'digits': [16, 6]}"/>
                </xpath>
            </field>
        </record>

        <!-- Inherit search view to include percentage field -->
        <record id="view_account_move_line_filter_inherit_percentage" model="ir.ui.view">
            <field name="name">account.move.line.select.inherit.percentage</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_account_move_line_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='quantity']" position="after">
                    <field name="quantity_percentage" string="Quantity %"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>