<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Agent Commission Tree View -->
    <record id="view_hr_agent_commission_tree" model="ir.ui.view">
        <field name="name">hr.agent.commission.tree</field>
        <field name="model">hr.agent.commission</field>
        <field name="arch" type="xml">
            <tree string="Agent Commissions">
                <field name="agent_id"/>
                <field name="property_type"/>
                <field name="commission_type"/>
                <field name="commission_percentage"/>
                <field name="fixed_amount"/>
            </tree>
        </field>
    </record>

    <!-- Agent Commission Form View -->
    <record id="view_hr_agent_commission_form" model="ir.ui.view">
        <field name="name">hr.agent.commission.form</field>
        <field name="model">hr.agent.commission</field>
        <field name="arch" type="xml">
            <form string="Agent Commission">
                <sheet>
                    <group>
                        <group>
                            <field name="agent_id"/>
                            <field name="property_type"/>
                        </group>
                        <group>
                            <field name="commission_type"/>
                            <field name="commission_percentage" 
                                invisible_if="commission_type == 'fixed'" 
                                required_if="commission_type == 'percentage'"/>
                            <field name="fixed_amount" 
                                invisible_if="commission_type == 'percentage'" 
                                required_if="commission_type == 'fixed'"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Agent Commission Action -->
    <record id="action_hr_agent_commission" model="ir.actions.act_window">
        <field name="name">Agent Commissions</field>
        <field name="res_model">hr.agent.commission</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first agent commission rule!
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_hr_agent_commission"
              name="Agent Commissions"
              parent="hr.menu_human_resources_configuration"
              action="action_hr_agent_commission"
              sequence="100"/>
</odoo>
