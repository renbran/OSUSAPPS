<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Annual Leave -->
        <record id="leave_type_annual" model="uae.leave.type">
            <field name="name">Annual Leave</field>
            <field name="code">ANNUAL</field>
            <field name="max_days">30</field>
            <field name="is_paid">True</field>
            <field name="payment_type">full</field>
            <field name="is_annual">True</field>
            <field name="sequence">1</field>
        </record>

        <!-- Sick Leave -->
        <record id="leave_type_sick" model="uae.leave.type">
            <field name="name">Sick Leave</field>
            <field name="code">SICK</field>
            <field name="max_days">90</field>
            <field name="is_paid">True</field>
            <field name="payment_type">split</field>
            <field name="full_pay_days">15</field>
            <field name="half_pay_days">30</field>
            <field name="unpaid_days">45</field>
            <field name="requires_documentation">True</field>
            <field name="sequence">2</field>
        </record>

        <!-- Maternity Leave -->
        <record id="leave_type_maternity" model="uae.leave.type">
            <field name="name">Maternity Leave</field>
            <field name="code">MAT</field>
            <field name="max_days">60</field>
            <field name="is_paid">True</field>
            <field name="payment_type">split</field>
            <field name="full_pay_days">45</field>
            <field name="half_pay_days">15</field>
            <field name="requires_documentation">True</field>
            <field name="sequence">3</field>
        </record>

        <!-- Parental Leave -->
        <record id="leave_type_parental" model="uae.leave.type">
            <field name="name">Parental Leave</field>
            <field name="code">PAR</field>
            <field name="max_days">5</field>
            <field name="is_paid">True</field>
            <field name="payment_type">full</field>
            <field name="requires_documentation">True</field>
            <field name="validity_in_months">6</field>
            <field name="sequence">4</field>
        </record>

        <!-- Bereavement Leave (Spouse) -->
        <record id="leave_type_bereavement_spouse" model="uae.leave.type">
            <field name="name">Bereavement Leave (Spouse)</field>
            <field name="code">BER_SP</field>
            <field name="max_days">5</field>
            <field name="is_paid">True</field>
            <field name="payment_type">full</field>
            <field name="requires_documentation">True</field>
            <field name="sequence">5</field>
        </record>

        <!-- Bereavement Leave (Family) -->
        <record id="leave_type_bereavement_family" model="uae.leave.type">
            <field name="name">Bereavement Leave (Family)</field>
            <field name="code">BER_FAM</field>
            <field name="max_days">3</field>
            <field name="is_paid">True</field>
            <field name="payment_type">full</field>
            <field name="requires_documentation">True</field>
            <field name="sequence">6</field>
        </record>

        <!-- Hajj Leave -->
        <record id="leave_type_hajj" model="uae.leave.type">
            <field name="name">Hajj Leave</field>
            <field name="code">HAJJ</field>
            <field name="max_days">30</field>
            <field name="is_paid">False</field>
            <field name="payment_type">unpaid</field>
            <field name="is_religious">True</field>
            <field name="requires_documentation">True</field>
            <field name="sequence">7</field>
        </record>

        <!-- Study Leave -->
        <record id="leave_type_study" model="uae.leave.type">
            <field name="name">Study Leave</field>
            <field name="code">STUDY</field>
            <field name="max_days">10</field>
            <field name="is_paid">True</field>
            <field name="payment_type">full</field>
            <field name="is_study">True</field>
            <field name="for_uae_national_only">True</field>
            <field name="requires_documentation">True</field>
            <field name="sequence">8</field>
        </record>
    </data>
</odoo>
