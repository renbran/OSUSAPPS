<?xml version="1.0" encoding="utf-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="rental_management.RentalPropertyDashboard">
        <div class="o_rental_property_dashboard container-fluid align-item-center py-4 border-bottom bg-view">
                 <div class="row gap-3 gap-lg-0 mx-4 mb-4">
                    <div class="col-12 col-lg-5 col-xl-5 col-xxl-4 flex-grow-1 flex-lg-grow-0 flex-shrink-0">
                        <div class="grid gap-1">
                            <div class="g-col-3 g-col-sm-4 d-flex align-items-center justify-content-end text-end justify-content-lg-start text-lg-start">
                                All
                            </div>
                            <div class="g-col-9 g-col-sm-8 grid gap-1">
                                <div class="g-col-6 p-0" title="All Available Properties">
                                    <div class="card m-1 p-3 text-center custom-card bg-available" t-on-click="() => this.viewAllProperties('available')">
                                      <h4 class="bg-available mb-1"><t t-out="this.state.property_data.available_prop_count"/></h4>
                                        <div class="fw-bold">Available</div>
                                    </div>
                                </div>
                                <div class="g-col-6 p-0" title="All On Rent Properties">
                                     <div class="card m-1 p-3 text-center custom-card bg-rent" t-on-click="() => this.viewAllProperties('on_lease')">
                                      <h4 class="bg-rent mb-1"><t t-out="this.state.property_data.on_lease_prop_count"/></h4>
                                         <div class="fw-bold">On Rent</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="grid gap-1">
                            <div class="g-col-3 g-col-sm-4 d-flex align-items-center justify-content-end text-end justify-content-lg-start text-lg-start">
                                Property Types
                            </div>
                            <div class="g-col-9 g-col-sm-8 grid gap-1">
                                <div class="g-col-6 mx-1 text-center" style="width: 150px;" title="Available">
                                    <div class="d-flex flex-wrap justify-content-between">
                                        <div class="property_type_box bg-land" t-on-click="() => this.viewProperties('available','land')">
                                            <t t-out="this.state.property_data.available_land_prop_count"/>
                                        </div>
                                        <div class="property_type_box bg-residential" t-on-click="() => this.viewProperties('available','residential')">
                                            <t t-out="this.state.property_data.available_residential_prop_count"/>
                                        </div>
                                        <div class="property_type_box bg-commercial" t-on-click="() => this.viewProperties('available','commercial')">
                                            <t t-out="this.state.property_data.available_commercial_prop_count"/>
                                        </div>
                                        <div class="property_type_box bg-industrial" t-on-click="() => this.viewProperties('available','industrial')">
                                            <t t-out="this.state.property_data.available_industrial_prop_count"/>
                                        </div>
                                    </div>
                                 </div>
                                 <div class="g-col-6 mx-1 text-center" style="width: 150px;" title="On lease">
                                    <div class="d-flex flex-wrap justify-content-between">
                                        <div class="property_type_box bg-land" t-on-click="() => this.viewProperties('on_lease','land')">
                                            <t t-out="this.state.property_data.on_lease_land_prop_count"/>
                                        </div>
                                        <div class="property_type_box bg-residential" t-on-click="() => this.viewProperties('on_lease','residential')">
                                            <t t-out="this.state.property_data.on_lease_residential_prop_count"/>
                                        </div>
                                        <div class="property_type_box bg-commercial" t-on-click="() => this.viewProperties('on_lease','commercial')">
                                            <t t-out="this.state.property_data.on_lease_commercial_prop_count"/>
                                        </div>
                                        <div class="property_type_box bg-industrial" t-on-click="() => this.viewProperties('on_lease','industrial')">
                                            <t t-out="this.state.property_data.on_lease_industrial_prop_count"/>
                                        </div>
                                    </div>
                                 </div>

                            </div>
                        </div>
                    </div>
                     <div class="col-12 col-lg-5 col-xl-5 col-xxl-4 flex-grow-1 flex-lg-grow-0 flex-shrink-0">
                        <div class="grid">
                            <div class="g-col-12 g-col-sm-12 grid gap-1">
                                <div class="g-col-4 p-0" title="All On Sale Properties">
                                    <div class="card m-1 p-3 text-center bg-sale custom-card" t-on-click="() => this.viewAllProperties('sale')">
                                      <h4 class="bg-sale mb-1"><t t-out="this.state.property_data.sale_prop_count"/></h4>
                                        <div class="fw-bold">Sale</div>
                                    </div>
                                </div>
                                <div class="g-col-4 p-0" title="All Booked Properties">
                                    <div class="card m-1 p-3 text-center custom-card bg-booked" t-on-click="() => this.viewAllProperties('booked')">
                                        <h4 class="bg-booked mb-1"><t t-out="this.state.property_data.booked_prop_count"/></h4>
                                        <div class="fw-bold">Booked</div>
                                    </div>
                                </div>
                                <div class="g-col-4 p-0" title="All Sold Properties">
                                    <div class="card m-1 p-3 text-center custom-card bg-sold" t-on-click="() => this.viewAllProperties('sold')">
                                        <h4 class="bg-sold mb-1"><t t-out="this.state.property_data.sold_prop_count"/></h4>
                                        <div class="fw-bold bg-sold">Sold</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                         <div class="grid">
                            <div class="g-col-12 g-col-sm-12 grid gap-1">
                                <div class="g-col-4 mx-1 text-center" style="width: 150px;" title="Sale">
                                    <div class="d-flex flex-wrap justify-content-between">
                                        <div class="property_type_box bg-land" t-on-click="() => this.viewProperties('sale','land')">
                                            <t t-out="this.state.property_data.sale_land_prop_count"/>
                                        </div>
                                        <div class="property_type_box bg-residential" t-on-click="() => this.viewProperties('sale','residential')">
                                            <t t-out="this.state.property_data.sale_residential_prop_count"/>
                                        </div>
                                        <div class="property_type_box bg-commercial" t-on-click="() => this.viewProperties('sale','commercial')">
                                            <t t-out="this.state.property_data.sale_commercial_prop_count"/>
                                        </div>
                                        <div class="property_type_box bg-industrial" t-on-click="() => this.viewProperties('sale','industrial')">
                                            <t t-out="this.state.property_data.sale_industrial_prop_count"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="g-col-4 mx-1 text-center" style="width: 150px;" title="Booked">
                                   <div class="d-flex flex-wrap justify-content-between">
                                        <div class="property_type_box bg-land" t-on-click="() => this.viewProperties('booked','land')">
                                            <t t-out="this.state.property_data.booked_land_prop_count"/>
                                        </div>
                                        <div class="property_type_box bg-residential" t-on-click="() => this.viewProperties('booked','residential')">
                                            <t t-out="this.state.property_data.booked_residential_prop_count"/>
                                        </div>
                                        <div class="property_type_box bg-commercial" t-on-click="() => this.viewProperties('booked','commercial')">
                                            <t t-out="this.state.property_data.booked_commercial_prop_count"/>
                                        </div>
                                        <div class="property_type_box bg-industrial" t-on-click="() => this.viewProperties('booked','industrial')">
                                            <t t-out="this.state.property_data.booked_industrial_prop_count"/>
                                        </div>
                                    </div>
                                 </div>
                                <div class="g-col-4 mx-1 text-center" style="width: 150px;" title="Sold">
                                    <div class="d-flex flex-wrap justify-content-between">
                                        <div class="property_type_box bg-land" t-on-click="() => this.viewProperties('sold','land')">
                                            <t t-out="this.state.property_data.sold_land_prop_count"/>
                                        </div>
                                        <div class="property_type_box bg-residential" t-on-click="() => this.viewProperties('sold','residential')">
                                            <t t-out="this.state.property_data.sold_residential_prop_count"/>
                                        </div>
                                        <div class="property_type_box bg-commercial" t-on-click="() => this.viewProperties('sold','commercial')">
                                            <t t-out="this.state.property_data.sold_commercial_prop_count"/>
                                        </div>
                                        <div class="property_type_box bg-industrial" t-on-click="() => this.viewProperties('sold','industrial')">
                                            <t t-out="this.state.property_data.sold_industrial_prop_count"/>
                                        </div>
                                    </div>
                                 </div>
                            </div>
                         </div>
                     </div>
                     <div class="col-12 col-lg-5 col-xl-5 col-xxl-4 flex-grow-1 flex-lg-grow-0 flex-shrink-0 mt-1">
                        <div class="d-flex flex-column">
                            <div class="d-flex mb-1 gap-2">
                                <div class="card mx-1 p-3 text-center custom-card bg-total" t-on-click="() => this.viewAllProperties('all')" title="Total Properties">
                                    <h4 class="bg-total mb-1">
                                        <t t-out="this.state.property_data.total_prop_count"/>
                                    </h4>
                                    <div class="fw-bold">Total</div>
                                </div>
                                <div class="card p-3 mx-1 text-center custom-card bg-draft" t-on-click="() => this.viewAllProperties('draft')" title="Draft Properties">
                                    <h4 class="bg-draft mb-1"><t t-out="this.state.property_data.draft_prop_count"/></h4>
                                    <div class="fw-bold">Draft</div>
                                </div>
                            </div>
                            <div class="d-flex gap-2">
                                <div class="text-center mx-1" style="width: 150px;" title="Total Properties">
                                    <div class="d-flex flex-wrap justify-content-between">
                                        <div class="property_type_box bg-land" t-on-click="() => this.viewProperties('all','land')">
                                            <t t-out="this.state.property_data.total_land_prop_count"/>
                                        </div>
                                        <div class="property_type_box bg-residential" t-on-click="() => this.viewProperties('all','residential')">
                                            <t t-out="this.state.property_data.total_residential_prop_count"/>
                                        </div>
                                        <div class="property_type_box bg-commercial" t-on-click="() => this.viewProperties('all','commercial')">
                                            <t t-out="this.state.property_data.total_commercial_prop_count"/>
                                        </div>
                                        <div class="property_type_box bg-industrial" t-on-click="() => this.viewProperties('all','industrial')">
                                            <t t-out="this.state.property_data.total_industrial_prop_count"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="text-center mx-1" style="width: 150px;" title="Draft Properties">
                                   <div class="d-flex flex-wrap justify-content-between">
                                        <div class="property_type_box bg-land" t-on-click="() => this.viewProperties('draft','land')">
                                            <t t-out="this.state.property_data.draft_land_prop_count"/>
                                        </div>
                                        <div class="property_type_box bg-residential" t-on-click="() => this.viewProperties('draft','residential')">
                                            <t t-out="this.state.property_data.draft_residential_prop_count"/>
                                        </div>
                                        <div class="property_type_box bg-commercial" t-on-click="() => this.viewProperties('draft','commercial')">
                                            <t t-out="this.state.property_data.draft_commercial_prop_count"/>
                                        </div>
                                        <div class="property_type_box bg-industrial" t-on-click="() => this.viewProperties('draft','industrial')">
                                            <t t-out="this.state.property_data.draft_industrial_prop_count"/>
                                        </div>
                                   </div>
                                </div>
                            </div>
                        </div>
                     </div>
                 </div>
                <div class="row mt-2">
                    <div class="d-flex justify-content-center">
                        <div class="d-flex m-1 align-items-center text-center">
                            <div class="legend_box bg-land"/><span class="px-2 text-center">Land</span>
                        </div>
                        <div class="d-flex m-1 align-items-center text-center">
                            <div class="legend_box bg-residential"/><span class="px-2">Residential</span>
                        </div>
                        <div class="d-flex m-1 align-items-center text-center">
                            <div class="legend_box bg-commercial"/><span class="px-2">Commercial</span>
                        </div>
                        <div class="d-flex m-1 align-items-center text-center">
                            <div class="legend_box bg-industrial"/><span class="px-2">Industrial</span>
                        </div>
                    </div>

                </div>
        </div>
    </t>

</templates>
