# Odoo 17 MCP Server Configuration
# Copy this file to .env and customize for your environment

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=odoo
DB_PASSWORD=odoo
DB_NAME=odoo
DB_TIMEOUT=30
DB_MAX_CONNECTIONS=10

# ============================================================================
# DOCKER CONFIGURATION
# ============================================================================
COMPOSE_FILE=docker-compose.yml
ODOO_SERVICE=odoo
DB_SERVICE=db
# Use 'docker compose' (v2) instead of 'docker-compose' (v1)
USE_DOCKER_COMPOSE_V2=true
COMPOSE_TIMEOUT=300

# ============================================================================
# PATH CONFIGURATION
# ============================================================================
# Windows local development paths
ODOO_ADDONS_PATH=d:/RUNNING APPS/ready production/latest/OSUSAPPS
LOG_PATH=./logs

# For Docker setups, use paths like:
# ODOO_ADDONS_PATH=/mnt/extra-addons
# LOG_PATH=/var/log/odoo

# Backup directory (relative or absolute path)
BACKUP_PATH=./backups

# Temporary files (leave empty to use system temp)
TEMP_PATH=

# ============================================================================
# ODOO CONFIGURATION
# ============================================================================
ODOO_VERSION=17.0
ODOO_ADMIN_PASSWORD=admin
ODOO_LANG=en_US
ODOO_TIMEZONE=UTC
ODOO_HTTP_PORT=8069
ODOO_LONGPOLLING_PORT=8072
ODOO_WORKERS=4
ODOO_MAX_CRON_THREADS=2

# ============================================================================
# CODE QUALITY CONFIGURATION
# ============================================================================
FLAKE8_MAX_LINE_LENGTH=88
FLAKE8_IGNORE=E203,W503,E501
PYLINT_DISABLE=C0114,C0115,C0116
BLACK_LINE_LENGTH=88
ENABLE_AUTO_FIX=false
ENABLE_PRE_COMMIT=true

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
# Set LOG_FILE to write logs to file, leave empty for console only
LOG_FILE=
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
SECURITY_INPUT_VALIDATION=true
SECURITY_MAX_QUERY_LENGTH=10000
SECURITY_MAX_TIMEOUT=300
SECURITY_COMMAND_WHITELIST=true

# ============================================================================
# PERFORMANCE CONFIGURATION
# ============================================================================
PERF_ENABLE_CACHING=true
PERF_CACHE_TTL=300
PERF_MAX_CACHE_SIZE=1000
PERF_CONNECTION_POOLING=true
PERF_ASYNC_SUBPROCESS=true
PERF_MAX_CONCURRENT=5

# ============================================================================
# DEVELOPMENT / PRODUCTION MODE
# ============================================================================
DEBUG=false
ENVIRONMENT=development  # or 'production', 'staging'
