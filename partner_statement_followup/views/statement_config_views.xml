<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Partner Statement Configuration Views -->
    <record id="view_res_partner_statement_config_tree" model="ir.ui.view">
        <field name="name">res.partner.statement.config.tree</field>
        <field name="model">res.partner.statement.config</field>
        <field name="arch" type="xml">
            <tree string="Statement Configurations">
                <field name="name"/>
                <field name="company_id"/>
                <field name="auto_followup"/>
                <field name="send_email"/>
                <field name="create_activity"/>
            </tree>
        </field>
    </record>

    <record id="view_res_partner_statement_config_form" model="ir.ui.view">
        <field name="name">res.partner.statement.config.form</field>
        <field name="model">res.partner.statement.config</field>
        <field name="arch" type="xml">
            <form string="Statement Configuration">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Configuration Name"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Ageing Configuration">
                            <group>
                                <group string="Ageing Buckets (Days)">
                                    <field name="ageing_bucket_1"/>
                                    <field name="ageing_bucket_2"/>
                                    <field name="ageing_bucket_3"/>
                                    <field name="ageing_bucket_4"/>
                                </group>
                            </group>
                        </page>

                        <page string="Follow-up Settings">
                            <group>
                                <group string="Automation">
                                    <field name="auto_followup"/>
                                    <field name="send_email"/>
                                    <field name="create_activity"/>
                                </group>
                                <group string="Timing">
                                    <field name="days_between_levels"/>
                                    <field name="max_followup_level"/>
                                </group>
                            </group>
                        </page>

                        <page string="Statement Settings">
                            <group>
                                <group string="Display Options">
                                    <field name="include_reconciled"/>
                                    <field name="show_payment_details"/>
                                </group>
                                <group string="Period">
                                    <field name="statement_period_days"/>
                                </group>
                            </group>
                        </page>

                        <page string="Email Settings">
                            <group>
                                <group>
                                    <field name="followup_email_from"/>
                                    <field name="accounts_team_email"/>
                                </group>
                                <group>
                                    <field name="cc_accounts_team"/>
                                </group>
                            </group>
                        </page>

                        <page string="Report Settings">
                            <group>
                                <field name="statement_logo"/>
                                <field name="statement_footer"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for Statement Configuration -->
    <record id="action_res_partner_statement_config" model="ir.actions.act_window">
        <field name="name">Statement Configuration</field>
        <field name="res_model">res.partner.statement.config</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_res_partner_statement_config_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new statement configuration
            </p>
            <p>
                Configure statement and follow-up settings for partner statements.
            </p>
        </field>
    </record>
</odoo>
