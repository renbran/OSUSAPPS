<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Batch Follow-up Wizard Views -->

    <!-- Batch Follow-up Wizard Form View -->
    <record id="view_batch_followup_wizard_form" model="ir.ui.view">
        <field name="name">batch.followup.wizard.form</field>
        <field name="model">batch.followup.wizard</field>
        <field name="arch" type="xml">
            <form string="Batch Follow-up">
                <sheet>
                    <div class="oe_title">
                        <h1>Automated Follow-up Campaign</h1>
                        <p>Send automated follow-up communications to overdue customers</p>
                    </div>

                    <group>
                        <group name="selection">
                            <field name="partner_ids" widget="many2many_tags" placeholder="Select partners (leave empty for all overdue customers)"/>
                            <field name="overdue_days_min"/>
                            <field name="overdue_days_max"/>
                            <field name="minimum_amount"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>

                        <group name="communication">
                            <field name="followup_level_id" required="1"/>
                            <field name="communication_method" widget="radio"/>
                            <field name="email_template_id" attrs="{'invisible': [('communication_method', '!=', 'email')],
                                           'required': [('communication_method', '=', 'email')]}"/>
                            <field name="sms_template_id" attrs="{'invisible': [('communication_method', '!=', 'sms')],
                                           'required': [('communication_method', '=', 'sms')]}"/>
                        </group>
                    </group>

                    <group name="options">
                        <group>
                            <field name="schedule_date"/>
                            <field name="auto_send"/>
                            <field name="test_mode"/>
                            <field name="exclude_weekends"/>
                        </group>

                        <group>
                            <field name="create_activities"/>
                            <field name="activity_type_id" attrs="{'invisible': [('create_activities', '=', False)]}"/>
                            <field name="update_payment_terms"/>
                            <field name="block_future_sales"/>
                        </group>
                    </group>

                    <separator string="Preview Partners"/>
                    <field name="preview_partner_ids" readonly="1">
                        <tree>
                            <field name="name"/>
                            <field name="total_due"/>
                            <field name="days_overdue"/>
                            <field name="last_followup_date"/>
                            <field name="followup_level"/>
                            <field name="email" attrs="{'column_invisible': [('parent.communication_method', '!=', 'email')]}"/>
                            <field name="mobile" attrs="{'column_invisible': [('parent.communication_method', '!=', 'sms')]}"/>
                        </tree>
                    </field>
                </sheet>
                <footer>
                    <button name="action_refresh_preview" string="Refresh Preview" type="object" class="btn-secondary"/>
                    <button name="action_process_followup" string="Process Follow-up" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Follow-up Level Configuration Form -->
    <record id="view_followup_level_form" model="ir.ui.view">
        <field name="name">followup.level.form</field>
        <field name="model">followup.level</field>
        <field name="arch" type="xml">
            <form string="Follow-up Level">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Follow-up Level Name"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="sequence"/>
                            <field name="delay_days"/>
                            <field name="active"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>

                        <group>
                            <field name="auto_execute"/>
                            <field name="block_sales"/>
                            <field name="credit_hold"/>
                            <field name="escalate_to_legal"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Email Configuration">
                            <group>
                                <field name="email_template_id"/>
                                <field name="send_email"/>
                                <field name="email_subject"/>
                            </group>
                            <field name="email_body" widget="html"/>
                        </page>

                        <page string="SMS Configuration">
                            <group>
                                <field name="sms_template_id"/>
                                <field name="send_sms"/>
                            </group>
                            <field name="sms_body" widget="text"/>
                        </page>

                        <page string="Actions">
                            <group>
                                <field name="create_activity"/>
                                <field name="activity_type_id" attrs="{'invisible': [('create_activity', '=', False)]}"/>
                                <field name="activity_note"/>
                                <field name="assign_to_user_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Follow-up Level Tree View -->
    <record id="view_followup_level_tree" model="ir.ui.view">
        <field name="name">followup.level.tree</field>
        <field name="model">followup.level</field>
        <field name="arch" type="xml">
            <tree string="Follow-up Levels" default_order="sequence">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="delay_days"/>
                <field name="send_email"/>
                <field name="send_sms"/>
                <field name="block_sales"/>
                <field name="active"/>
            </tree>
        </field>
    </record>
</odoo>
