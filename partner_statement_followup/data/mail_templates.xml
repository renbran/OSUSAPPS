<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Follow-up Level 1 Template -->
        <record id="followup_level_1_template" model="mail.template">
            <field name="name">Follow-up Level 1: Friendly Reminder</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="subject">Friendly Payment Reminder - {{ object.name }}</field>
            <field name="email_from">noreply@yourcompany.com</field>
            <field name="email_to">{{ object.email }}</field>
            <field name="body_html"><![CDATA[
<div style="margin: 0px; padding: 0px; font-family: Arial, sans-serif;">
    <table border="0" cellpadding="0" cellspacing="0" style="padding-top: 16px; background-color: #FFFFFF; font-family: Arial, sans-serif; color: #454748; width: 100%; border-collapse:separate;">
        <tr>
            <td align="center">
                <table border="0" cellpadding="0" cellspacing="0" width="590" style="padding: 16px; background-color: white; color: #454748; border-collapse:separate;">
                    <tbody>
                        <!-- Header -->
                        <tr>
                            <td align="center" style="min-height: 50px;">
                                <img src="/logo.png" style="padding: 0px; margin: 0px; height: auto; width: 120px;" alt="Company Logo"/>
                            </td>
                        </tr>
                        <!-- Title -->
                        <tr>
                            <td style="padding-top: 20px;">
                                <h2 style="color: #875A7B; margin: 0px;">Friendly Payment Reminder</h2>
                            </td>
                        </tr>
                        <!-- Content -->
                        <tr>
                            <td style="padding-top: 20px; line-height: 18px;">
                                <p>Dear {{ object.name }},</p>
                                <p>We hope this message finds you well. This is a friendly reminder that some invoices on your account are now overdue.</p>
                                <p>We understand that oversights happen, and we wanted to bring this to your attention in case it was simply overlooked.</p>
                                <p><strong>Outstanding Balance: {{ "%.2f"|format(object.balance_due_company_currency) }} {{ object.company_id.currency_id.symbol }}</strong></p>
                                <p>Please review the attached statement and arrange payment at your earliest convenience.</p>
                                <p>If you have any questions or need to discuss payment arrangements, please don't hesitate to contact us.</p>
                                <p>Thank you for your prompt attention to this matter.</p>
                                <br/>
                                <p>Best regards,<br/>Accounts Receivable Department</p>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </td>
        </tr>
    </table>
</div>
            ]]></field>
            <field name="report_template" ref="partner_statement_followup.action_report_partner_statement"/>
            <field name="auto_delete" eval="True"/>
        </record>

        <!-- Follow-up Level 2 Template -->
        <record id="followup_level_2_template" model="mail.template">
            <field name="name">Follow-up Level 2: Urgent Payment Request</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="subject">URGENT: Payment Required - {{ object.name }}</field>
            <field name="email_from">noreply@yourcompany.com</field>
            <field name="email_to">{{ object.email }}</field>
            <field name="body_html"><![CDATA[
<div style="margin: 0px; padding: 0px; font-family: Arial, sans-serif;">
    <table border="0" cellpadding="0" cellspacing="0" style="padding-top: 16px; background-color: #FFFFFF; font-family: Arial, sans-serif; color: #454748; width: 100%; border-collapse:separate;">
        <tr>
            <td align="center">
                <table border="0" cellpadding="0" cellspacing="0" width="590" style="padding: 16px; background-color: white; color: #454748; border-collapse:separate;">
                    <tbody>
                        <!-- Header -->
                        <tr>
                            <td align="center" style="min-height: 50px;">
                                <img src="/logo.png" style="padding: 0px; margin: 0px; height: auto; width: 120px;" alt="Company Logo"/>
                            </td>
                        </tr>
                        <!-- Title -->
                        <tr>
                            <td style="padding-top: 20px;">
                                <h2 style="color: #D9534F; margin: 0px;">URGENT: Payment Required</h2>
                            </td>
                        </tr>
                        <!-- Content -->
                        <tr>
                            <td style="padding-top: 20px; line-height: 18px;">
                                <p>Dear {{ object.name }},</p>
                                <p><strong style="color: #D9534F;">URGENT NOTICE:</strong> Your account is now significantly overdue.</p>
                                <p>Despite our previous reminder, the following amount remains outstanding:</p>
                                <p><strong style="color: #D9534F; font-size: 16px;">Outstanding Balance: {{ "%.2f"|format(object.balance_due_company_currency) }} {{ object.company_id.currency_id.symbol }}</strong></p>
                                <p><strong>Immediate action is required to avoid:</strong></p>
                                <ul>
                                    <li>Suspension of services</li>
                                    <li>Additional late fees</li>
                                    <li>Referral to collection agency</li>
                                </ul>
                                <p>Please arrange payment within 48 hours or contact us immediately to discuss payment arrangements.</p>
                                <p>If payment has already been made, please disregard this notice and provide proof of payment.</p>
                                <br/>
                                <p>Regards,<br/>Accounts Receivable Department<br/>Phone: [Your Phone Number]</p>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </td>
        </tr>
    </table>
</div>
            ]]></field>
            <field name="report_template" ref="partner_statement_followup.action_report_partner_statement"/>
            <field name="auto_delete" eval="True"/>
        </record>

        <!-- Follow-up Level 3 Template -->
        <record id="followup_level_3_template" model="mail.template">
            <field name="name">Follow-up Level 3: Final Notice</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="subject">FINAL NOTICE: Legal Action Pending - {{ object.name }}</field>
            <field name="email_from">noreply@yourcompany.com</field>
            <field name="email_to">{{ object.email }}</field>
            <field name="body_html"><![CDATA[
<div style="margin: 0px; padding: 0px; font-family: Arial, sans-serif;">
    <table border="0" cellpadding="0" cellspacing="0" style="padding-top: 16px; background-color: #FFFFFF; font-family: Arial, sans-serif; color: #454748; width: 100%; border-collapse:separate;">
        <tr>
            <td align="center">
                <table border="0" cellpadding="0" cellspacing="0" width="590" style="padding: 16px; background-color: white; color: #454748; border-collapse:separate;">
                    <tbody>
                        <!-- Header -->
                        <tr>
                            <td align="center" style="min-height: 50px;">
                                <img src="/logo.png" style="padding: 0px; margin: 0px; height: auto; width: 120px;" alt="Company Logo"/>
                            </td>
                        </tr>
                        <!-- Title -->
                        <tr>
                            <td style="padding-top: 20px;">
                                <h2 style="color: #8B0000; margin: 0px;">FINAL NOTICE - LEGAL ACTION PENDING</h2>
                            </td>
                        </tr>
                        <!-- Content -->
                        <tr>
                            <td style="padding-top: 20px; line-height: 18px;">
                                <p>Dear {{ object.name }},</p>
                                <p><strong style="color: #8B0000;">FINAL NOTICE:</strong> This is our final attempt to collect the overdue amount on your account.</p>
                                <p><strong style="color: #8B0000; font-size: 18px;">Total Outstanding: {{ "%.2f"|format(object.balance_due_company_currency) }} {{ object.company_id.currency_id.symbol }}</strong></p>
                                <p><strong style="color: #8B0000;">Unless payment is received within 72 hours, we will be forced to:</strong></p>
                                <ul>
                                    <li><strong>Suspend all services immediately</strong></li>
                                    <li><strong>Transfer your account to our collection agency</strong></li>
                                    <li><strong>Initiate legal proceedings to recover the debt</strong></li>
                                    <li><strong>Report the delinquency to credit bureaus</strong></li>
                                </ul>
                                <p>These actions may result in additional fees, legal costs, and negative impact on your credit rating.</p>
                                <p><strong>IMMEDIATE ACTION REQUIRED:</strong> Contact us today to avoid these consequences.</p>
                                <p>If you believe this notice is in error, please contact us immediately with documentation.</p>
                                <br/>
                                <p>Collections Department<br/>Phone: [Your Phone Number]<br/>Email: collections@yourcompany.com</p>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </td>
        </tr>
    </table>
</div>
            ]]></field>
            <field name="report_template" ref="partner_statement_followup.action_report_partner_statement"/>
            <field name="auto_delete" eval="True"/>
        </record>

    </data>
</odoo>
