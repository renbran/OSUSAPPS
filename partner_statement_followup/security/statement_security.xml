<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Security Groups -->
        <record id="group_statement_user" model="res.groups">
            <field name="name">Statement User</field>
            <field name="category_id" ref="base.module_category_accounting"/>
            <field name="implied_ids" eval="[(4, ref('account.group_account_invoice'))]"/>
        </record>
        
        <record id="group_statement_manager" model="res.groups">
            <field name="name">Statement Manager</field>
            <field name="category_id" ref="base.module_category_accounting"/>
            <field name="implied_ids" eval="[(4, ref('partner_statement_followup.group_statement_user'))]"/>
            <field name="implied_ids" eval="[(4, ref('account.group_account_manager'))]"/>
        </record>

        <!-- Record Rules -->
        
        <!-- Partner Statement Config - Multi-company -->
        <record id="statement_config_company_rule" model="ir.rule">
            <field name="name">Partner Statement Config: company rule</field>
            <field name="model_id" ref="model_res_partner_statement_config"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('base.group_multi_company'))]"/>
        </record>

        <!-- Followup History - Multi-company -->
        <record id="followup_history_company_rule" model="ir.rule">
            <field name="name">Partner Followup History: company rule</field>
            <field name="model_id" ref="model_res_partner_followup_history"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('base.group_multi_company'))]"/>
        </record>

        <!-- Partner access for statement users -->
        <record id="partner_statement_user_rule" model="ir.rule">
            <field name="name">Partner Statement User Rule</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="domain_force">[
                '|', 
                ('company_id', '=', False), 
                ('company_id', 'in', company_ids)
            ]</field>
            <field name="groups" eval="[(4, ref('partner_statement_followup.group_statement_user'))]"/>
        </record>

        <!-- Account move line access for statement users -->
        <record id="account_move_line_statement_user_rule" model="ir.rule">
            <field name="name">Account Move Line Statement User Rule</field>
            <field name="model_id" ref="account.model_account_move_line"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('partner_statement_followup.group_statement_user'))]"/>
        </record>

    </data>
</odoo>
