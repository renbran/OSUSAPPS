<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Commission Lines Tree View -->
        <record id="view_commission_lines_tree" model="ir.ui.view">
            <field name="name">commission.lines.tree</field>
            <field name="model">commission.lines</field>
            <field name="arch" type="xml">
                <tree string="Commission Lines" default_order="date desc"
                      decoration-muted="status=='cancelled'"
                      decoration-info="status=='draft'"
                      decoration-warning="status=='calculated'"
                      decoration-success="status in ['approved','confirmed','paid']">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="date"/>
                    <field name="sale_order_id"/>
                    <field name="partner_id"/>
                    <field name="commission_type"/>
                    <field name="commission_group" invisible="1"/>
                    <field name="calculation_method"/>
                    <field name="commission_rate"/>
                    <field name="commission_amount" sum="Total Commission"/>
                    <field name="status" widget="badge"
                           decoration-muted="status=='cancelled'"
                           decoration-info="status=='draft'"
                           decoration-warning="status=='calculated'"
                           decoration-success="status in ['approved','confirmed','paid']"/>
                    <field name="payment_method"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <button name="action_calculate" type="object" string="Calculate"
                            icon="fa-calculator" invisible="status != 'draft'"/>
                    <button name="action_approve" type="object" string="Approve"
                            icon="fa-check" invisible="status != 'calculated'"
                            groups="commission_unified.group_commission_manager"/>
                    <button name="action_process_payment" type="object" string="Process Payment"
                            icon="fa-money" invisible="status not in ['approved','confirmed']"
                            groups="commission_unified.group_commission_manager"/>
                </tree>
            </field>
        </record>

        <!-- Commission Lines Form View -->
        <record id="view_commission_lines_form" model="ir.ui.view">
            <field name="name">commission.lines.form</field>
            <field name="model">commission.lines</field>
            <field name="arch" type="xml">
                <form string="Commission Line">
                    <header>
                        <button name="action_calculate" type="object" string="Calculate"
                                class="oe_highlight" invisible="status != 'draft'"/>
                        <button name="action_approve" type="object" string="Approve"
                                class="oe_highlight" invisible="status != 'calculated'"
                                groups="commission_unified.group_commission_manager"/>
                        <button name="action_confirm" type="object" string="Confirm"
                                class="oe_highlight" invisible="status != 'approved'"
                                groups="commission_unified.group_commission_manager"/>
                        <button name="action_process_payment" type="object" string="Process Payment"
                                class="oe_highlight" invisible="status not in ['confirmed','approved']"
                                groups="commission_unified.group_commission_manager"/>
                        <button name="action_cancel" type="object" string="Cancel"
                                invisible="status in ['paid','cancelled']"/>
                        <button name="action_reset_to_draft" type="object" string="Reset to Draft"
                                invisible="status in ['draft','paid']"/>
                        <field name="status" widget="statusbar"
                               statusbar_visible="draft,calculated,approved,confirmed,paid"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_sale_order" type="object"
                                    class="oe_stat_button" icon="fa-shopping-cart">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Sale Order</span>
                                </div>
                            </button>
                            <button name="action_view_invoice" type="object"
                                    class="oe_stat_button" icon="fa-file-text-o"
                                    invisible="not invoice_id">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Invoice</span>
                                </div>
                            </button>
                            <button name="action_view_purchase_order" type="object"
                                    class="oe_stat_button" icon="fa-shopping-cart"
                                    invisible="not purchase_order_id">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Purchase Order</span>
                                </div>
                            </button>
                        </div>

                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                            <h3>
                                <field name="description" placeholder="Commission Description"/>
                            </h3>
                        </div>

                        <group>
                            <group string="Commission Details">
                                <field name="sale_order_id" required="1"/>
                                <field name="partner_id" required="1"/>
                                <field name="sales_person_id"/>
                                <field name="date"/>
                                <field name="commission_type" required="1"/>
                                <field name="commission_group" readonly="1"/>
                            </group>
                            <group string="Calculation">
                                <field name="calculation_method" required="1"/>
                                <field name="commission_rate"/>
                                <field name="base_amount" readonly="1"/>
                                <field name="commission_amount"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                        </group>

                        <group>
                            <group string="Payment Information">
                                <field name="payment_method"/>
                                <field name="invoice_id" readonly="1"/>
                                <field name="purchase_order_id" readonly="1"/>
                                <field name="journal_entry_id" readonly="1"/>
                            </group>
                            <group string="Workflow Information">
                                <field name="date_calculated" readonly="1"/>
                                <field name="date_approved" readonly="1"/>
                                <field name="approved_by" readonly="1"/>
                                <field name="confirmed_by" readonly="1"/>
                                <field name="date_paid" readonly="1"/>
                            </group>
                        </group>

                        <group string="Additional Information" groups="base.group_no_one">
                            <group>
                                <field name="source_module" readonly="1"/>
                                <field name="original_record_id" readonly="1"/>
                                <field name="migrated_date" readonly="1"/>
                            </group>
                            <group>
                                <field name="commission_rule_id" readonly="1"/>
                                <field name="product_id" readonly="1"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Notes">
                                <field name="notes" placeholder="Internal notes about this commission..."/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Commission Lines Kanban View -->
        <record id="view_commission_lines_kanban" model="ir.ui.view">
            <field name="name">commission.lines.kanban</field>
            <field name="model">commission.lines</field>
            <field name="arch" type="xml">
                <kanban default_group_by="status" class="o_kanban_small_column">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="commission_amount"/>
                    <field name="status"/>
                    <field name="commission_type"/>
                    <field name="currency_id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="name"/>
                                            </strong>
                                        </div>
                                        <span class="badge badge-pill">
                                            <field name="commission_type"/>
                                        </span>
                                    </div>
                                    <div class="o_kanban_record_body">
                                        <field name="partner_id"/>
                                        <br/>
                                        <strong>
                                            <field name="commission_amount" widget="monetary"/>
                                        </strong>
                                    </div>
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <field name="date"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Commission Lines Search View -->
        <record id="view_commission_lines_search" model="ir.ui.view">
            <field name="name">commission.lines.search</field>
            <field name="model">commission.lines</field>
            <field name="arch" type="xml">
                <search string="Commission Lines">
                    <field name="name" string="Reference"/>
                    <field name="partner_id" string="Partner"/>
                    <field name="sale_order_id" string="Sale Order"/>
                    <field name="sales_person_id" string="Sales Person"/>
                    <field name="description" string="Description"/>

                    <filter string="Draft" name="draft" domain="[('status','=','draft')]"/>
                    <filter string="Calculated" name="calculated" domain="[('status','=','calculated')]"/>
                    <filter string="Approved" name="approved" domain="[('status','=','approved')]"/>
                    <filter string="Confirmed" name="confirmed" domain="[('status','=','confirmed')]"/>
                    <filter string="Paid" name="paid" domain="[('status','=','paid')]"/>
                    <filter string="Cancelled" name="cancelled" domain="[('status','=','cancelled')]"/>

                    <separator/>
                    <filter string="External" name="external" domain="[('commission_group','=','external')]"/>
                    <filter string="Internal" name="internal" domain="[('commission_group','=','internal')]"/>
                    <filter string="Legacy" name="legacy" domain="[('commission_group','=','legacy')]"/>
                    <filter string="Rule Based" name="rule_based" domain="[('commission_group','=','rule_based')]"/>

                    <separator/>
                    <filter string="This Month" name="this_month"
                            domain="[('date','&gt;=',context_today().replace(day=1))]"/>
                    <filter string="Last Month" name="last_month"
                            domain="[('date','&gt;=',context_today().replace(day=1) - relativedelta(months=1)),
                                     ('date','&lt;',context_today().replace(day=1))]"/>
                    <filter string="This Year" name="this_year"
                            domain="[('date','&gt;=',context_today().replace(month=1,day=1))]"/>

                    <separator/>
                    <filter string="My Commissions" name="my_commissions"
                            domain="[('sales_person_id','=',uid)]"/>

                    <group expand="0" string="Group By">
                        <filter string="Status" name="group_status" context="{'group_by':'status'}"/>
                        <filter string="Commission Type" name="group_type" context="{'group_by':'commission_type'}"/>
                        <filter string="Commission Group" name="group_group" context="{'group_by':'commission_group'}"/>
                        <filter string="Partner" name="group_partner" context="{'group_by':'partner_id'}"/>
                        <filter string="Sales Person" name="group_salesperson" context="{'group_by':'sales_person_id'}"/>
                        <filter string="Sale Order" name="group_sale_order" context="{'group_by':'sale_order_id'}"/>
                        <filter string="Date" name="group_date" context="{'group_by':'date'}"/>
                        <filter string="Company" name="group_company" context="{'group_by':'company_id'}" groups="base.group_multi_company"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Commission Lines Pivot View -->
        <record id="view_commission_lines_pivot" model="ir.ui.view">
            <field name="name">commission.lines.pivot</field>
            <field name="model">commission.lines</field>
            <field name="arch" type="xml">
                <pivot string="Commission Analysis">
                    <field name="commission_group" type="row"/>
                    <field name="status" type="col"/>
                    <field name="commission_amount" type="measure"/>
                </pivot>
            </field>
        </record>

        <!-- Commission Lines Graph View -->
        <record id="view_commission_lines_graph" model="ir.ui.view">
            <field name="name">commission.lines.graph</field>
            <field name="model">commission.lines</field>
            <field name="arch" type="xml">
                <graph string="Commission Trends" type="line">
                    <field name="date" interval="month"/>
                    <field name="commission_amount" type="measure"/>
                </graph>
            </field>
        </record>

        <!-- Commission Lines Action -->
        <record id="action_commission_lines" model="ir.actions.act_window">
            <field name="name">Commission Lines</field>
            <field name="res_model">commission.lines</field>
            <field name="view_mode">tree,kanban,form,pivot,graph</field>
            <field name="search_view_id" ref="view_commission_lines_search"/>
            <field name="context">{'search_default_this_month': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first commission line!
                </p>
                <p>
                    Commission lines are created automatically when sale orders are confirmed,
                    or you can create them manually for special cases.
                </p>
            </field>
        </record>

    </data>
</odoo>