<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Security Groups -->
        <record id="group_commission_statement_manager" model="res.groups">
            <field name="name">Commission Statement Manager</field>
            <field name="category_id" ref="base.module_category_sales_management"/>
            <field name="comment">Can access all commission reports and statements</field>
        </record>

        <record id="group_commission_statement_user" model="res.groups">
            <field name="name">Commission Statement User</field>
            <field name="category_id" ref="base.module_category_sales_management"/>
            <field name="comment">Can view commission reports for own records</field>
        </record>

        <!-- Access Rights for Commission Statement Wizard -->
        <record id="access_commission_statement_wizard_user" model="ir.model.access">
            <field name="name">commission.statement.wizard.user</field>
            <field name="model_id" ref="model_commission_statement_wizard"/>
            <field name="group_id" ref="group_commission_statement_user"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="access_commission_statement_wizard_manager" model="ir.model.access">
            <field name="name">commission.statement.wizard.manager</field>
            <field name="model_id" ref="model_commission_statement_wizard"/>
            <field name="group_id" ref="group_commission_statement_manager"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Access Rights for Commission Statement Preview -->
        <record id="access_commission_statement_preview_user" model="ir.model.access">
            <field name="name">commission.statement.report.preview.user</field>
            <field name="model_id" ref="model_commission_statement_report_preview"/>
            <field name="group_id" ref="group_commission_statement_user"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="access_commission_statement_preview_manager" model="ir.model.access">
            <field name="name">commission.statement.report.preview.manager</field>
            <field name="model_id" ref="model_commission_statement_report_preview"/>
            <field name="group_id" ref="group_commission_statement_manager"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Access Rights for Commission Statement Preview Line -->
        <record id="access_commission_statement_preview_line_user" model="ir.model.access">
            <field name="name">commission.statement.report.preview.line.user</field>
            <field name="model_id" ref="model_commission_statement_report_preview_line"/>
            <field name="group_id" ref="group_commission_statement_user"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="access_commission_statement_preview_line_manager" model="ir.model.access">
            <field name="name">commission.statement.report.preview.line.manager</field>
            <field name="model_id" ref="model_commission_statement_report_preview_line"/>
            <field name="group_id" ref="group_commission_statement_manager"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Record Rules for Commission Statement Wizard -->
        <record id="commission_statement_wizard_rule_user" model="ir.rule">
            <field name="name">Commission Statement Wizard: User Rule</field>
            <field name="model_id" ref="model_commission_statement_wizard"/>
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_commission_statement_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="commission_statement_wizard_rule_manager" model="ir.rule">
            <field name="name">Commission Statement Wizard: Manager Rule</field>
            <field name="model_id" ref="model_commission_statement_wizard"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_commission_statement_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Record Rules for Commission Statement Preview -->
        <record id="commission_statement_preview_rule_user" model="ir.rule">
            <field name="name">Commission Statement Preview: User Rule</field>
            <field name="model_id" ref="model_commission_statement_report_preview"/>
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_commission_statement_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
