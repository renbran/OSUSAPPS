<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Deep Ocean Invoice Report Template -->
    <record id="action_report_deep_ocean_invoice" model="ir.actions.report">
        <field name="name">Deep Ocean Invoice</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">osus_deep_ocean_reports.deep_ocean_invoice_document</field>
        <field name="report_file">osus_deep_ocean_reports.deep_ocean_invoice_document</field>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="osus_deep_ocean_reports.paperformat_deep_ocean"/>
    </record>

    <!-- Deep Ocean Receipt Report Template -->
    <record id="action_report_deep_ocean_receipt" model="ir.actions.report">
        <field name="name">Deep Ocean Receipt</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">osus_deep_ocean_reports.deep_ocean_receipt_document</field>
        <field name="report_file">osus_deep_ocean_reports.deep_ocean_receipt_document</field>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="osus_deep_ocean_reports.paperformat_deep_ocean"/>
    </record>

    <!-- Deep Ocean Invoice Template -->
    <template id="deep_ocean_invoice_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <div class="deep-ocean-report deep-ocean-fade-in">
                    
                    <!-- Header Section -->
                    <div class="deep-ocean-header">
                        <div class="company-info">
                            <div class="company-details">
                                <h1><span t-field="o.company_id.name"/></h1>
                                <div class="tagline">
                                    <span t-field="o.company_tagline"/>
                                </div>
                                <p><strong>Address:</strong> <span t-field="o.company_id.street"/>, <span t-field="o.company_id.city"/></p>
                                <p><strong>Phone:</strong> <span t-field="o.company_id.phone"/></p>
                                <p><strong>Email:</strong> <span t-field="o.company_id.email"/></p>
                                <p><strong>TRN:</strong> <span t-field="o.company_id.vat"/></p>
                            </div>
                            <div class="company-logo">
                                <img t-if="o.company_id.logo" 
                                     t-att-src="image_data_uri(o.company_id.logo)" 
                                     class="company-logo"
                                     alt="Company Logo"/>
                            </div>
                        </div>
                    </div>

                    <!-- Document Title -->
                    <div class="deep-ocean-title">
                        <h1>Tax Invoice</h1>
                        <div class="document-number">
                            Invoice Number: <span t-field="o.name"/>
                        </div>
                        <div class="document-date">
                            Date: <span t-field="o.invoice_date" t-options="{'widget': 'date', 'format': 'dd MMMM yyyy'}"/>
                        </div>
                        <t t-if="o.business_analytics_ref">
                            <div class="deep-ocean-analytics-badge">
                                Analytics Ref: <span t-field="o.business_analytics_ref"/>
                            </div>
                        </t>
                    </div>

                    <!-- Content Container -->
                    <div class="deep-ocean-content">
                        
                        <!-- Document Details -->
                        <div class="deep-ocean-details">
                            <div class="deep-ocean-details-grid">
                                <!-- Bill To Section -->
                                <div class="deep-ocean-detail-section">
                                    <h3>Bill To</h3>
                                    <div class="detail-item">
                                        <span class="detail-label">Company:</span>
                                        <span class="detail-value"><span t-field="o.partner_id.name"/></span>
                                    </div>
                                    <div class="detail-item">
                                        <span class="detail-label">Address:</span>
                                        <span class="detail-value">
                                            <div t-field="o.partner_id" 
                                                 t-options='{"widget": "contact", "fields": ["address"], "no_marker": True}'/>
                                        </span>
                                    </div>
                                    <t t-if="o.partner_id.vat">
                                        <div class="detail-item">
                                            <span class="detail-label">TRN:</span>
                                            <span class="detail-value"><span t-field="o.partner_id.vat"/></span>
                                        </div>
                                    </t>
                                </div>

                                <!-- Invoice Details Section -->
                                <div class="deep-ocean-detail-section">
                                    <h3>Invoice Details</h3>
                                    <div class="detail-item">
                                        <span class="detail-label">Invoice Date:</span>
                                        <span class="detail-value">
                                            <span t-field="o.invoice_date" t-options="{'widget': 'date', 'format': 'dd/mm/yyyy'}"/>
                                        </span>
                                    </div>
                                    <div class="detail-item">
                                        <span class="detail-label">Due Date:</span>
                                        <span class="detail-value">
                                            <span t-field="o.invoice_date_due" t-options="{'widget': 'date', 'format': 'dd/mm/yyyy'}"/>
                                        </span>
                                    </div>
                                    <t t-if="o.invoice_payment_ref">
                                        <div class="detail-item">
                                            <span class="detail-label">Payment Ref:</span>
                                            <span class="detail-value"><span t-field="o.invoice_payment_ref"/></span>
                                        </div>
                                    </t>
                                    <t t-if="o.technical_expertise_level">
                                        <div class="detail-item">
                                            <span class="detail-label">Expertise Level:</span>
                                            <span class="detail-value">
                                                <span t-field="o.technical_expertise_level" class="deep-ocean-analytics-badge"/>
                                            </span>
                                        </div>
                                    </t>
                                </div>
                            </div>

                            <!-- Enterprise Consultation Notes -->
                            <t t-if="o.enterprise_consultation_notes">
                                <div class="deep-ocean-consultation-note">
                                    <strong>Enterprise Consultation Notes:</strong><br/>
                                    <span t-field="o.enterprise_consultation_notes"/>
                                </div>
                            </t>
                        </div>

                        <!-- Invoice Lines Table -->
                        <div class="table-responsive">
                            <table class="deep-ocean-table">
                                <thead>
                                    <tr>
                                        <th class="text-left">Description</th>
                                        <th class="text-center">Quantity</th>
                                        <th class="text-right">Unit Price</th>
                                        <th class="text-right">Tax</th>
                                        <th class="text-right">Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="o.invoice_line_ids" t-as="line">
                                        <tr>
                                            <td>
                                                <span t-field="line.name"/>
                                                <t t-if="line.product_id.default_code">
                                                    <br/><small>Code: <span t-field="line.product_id.default_code"/></small>
                                                </t>
                                            </td>
                                            <td class="text-center">
                                                <span t-field="line.quantity"/>
                                                <span t-field="line.product_uom_id.name" groups="uom.group_uom"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="line.price_unit" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_ids))"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="line.price_subtotal" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>

                        <!-- Totals Section -->
                        <div class="deep-ocean-totals">
                            <div class="deep-ocean-totals-grid">
                                <!-- Amount in Words -->
                                <div class="deep-ocean-amount-words">
                                    <h4>Amount in Words</h4>
                                    <p><span t-field="o.amount_total_words_deep_ocean"/></p>
                                </div>

                                <!-- Totals Table -->
                                <table class="deep-ocean-totals-table">
                                    <tr>
                                        <td>Subtotal:</td>
                                        <td><span t-field="o.amount_untaxed" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/></td>
                                    </tr>
                                    <t t-foreach="o.amount_by_group" t-as="amount_by_group">
                                        <tr>
                                            <td><span t-esc="amount_by_group[0]"/>:</td>
                                            <td><span t-esc="amount_by_group[1]" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/></td>
                                        </tr>
                                    </t>
                                    <tr>
                                        <td><strong>Total:</strong></td>
                                        <td><strong><span t-field="o.amount_total" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/></strong></td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                        <!-- QR Code Section -->
                        <t t-if="o.deep_ocean_qr_image">
                            <div class="deep-ocean-qr-section">
                                <div class="flex-grow-1">
                                    <p><strong>Scan QR Code for Digital Verification</strong></p>
                                    <p>This invoice contains embedded verification data for enhanced security and analytics tracking.</p>
                                    <div class="deep-ocean-brand-mark">
                                        Deep Ocean Professional Reports
                                    </div>
                                </div>
                                <div class="deep-ocean-qr-code">
                                    <img t-att-src="image_data_uri(o.deep_ocean_qr_image)" 
                                         alt="Invoice QR Code"/>
                                    <p>Document Verification</p>
                                </div>
                            </div>
                        </t>

                    </div>

                    <!-- Footer -->
                    <div class="deep-ocean-footer">
                        <div class="footer-content">
                            <div class="footer-text">
                                Thank you for choosing our professional services.
                            </div>
                            <div class="footer-branding">
                                OSUS Deep Ocean Reports - Conveys Trust, Stability &amp; Technical Expertise
                            </div>
                        </div>
                    </div>

                </div>
            </t>
        </t>
    </template>

</odoo>