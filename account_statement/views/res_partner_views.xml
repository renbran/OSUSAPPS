<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Add Account Statement button to Partner form -->
        <record id="view_partner_form_account_statement" model="ir.ui.view">
            <field name="name">res.partner.form.account.statement</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button class="oe_stat_button" type="action" 
                            name="%(account_statement.action_account_statement_from_partner)d"
                            icon="fa-file-text-o" 
                            context="{'default_partner_id': active_id}"
                            groups="account.group_account_user,account.group_account_manager">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_text">Account</span>
                            <span class="o_stat_text">Statement</span>
                        </div>
                    </button>
                </div>
            </field>
        </record>

        <!-- Account Statement Wizard Action from Partner -->
        <record id="action_account_statement_from_partner" model="ir.actions.act_window">
            <field name="name">Generate Account Statement</field>
            <field name="res_model">account.statement.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="account_statement.view_account_statement_wizard_form"/>
            <field name="target">new</field>
            <field name="context">{'default_partner_id': active_id}</field>
        </record>
    </data>
</odoo>
