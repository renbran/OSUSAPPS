<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Security Groups -->
        <record id="group_account_statement_user" model="res.groups">
            <field name="name">Account Statement User</field>
            <field name="category_id" ref="base.module_category_accounting_accounting"/>
            <field name="implied_ids" eval="[(4, ref('account.group_account_user'))]"/>
        </record>

        <record id="group_account_statement_contacts_user" model="res.groups">
            <field name="name">Account Statement Contacts User</field>
            <field name="category_id" ref="base.module_category_sales_sales"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Record Rules -->
        <record id="account_statement_comp_rule" model="ir.rule">
            <field name="name">Account Statement Multi-Company</field>
            <field name="model_id" ref="model_account_statement"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

        <record id="account_statement_user_rule" model="ir.rule">
            <field name="name">Account Statement User Rule</field>
            <field name="model_id" ref="model_account_statement"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_account_statement_contacts_user'))]"/>
        </record>
    </data>
</odoo>
