<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Extended Partner Form View -->
    <record id="view_partner_form_commission" model="ir.ui.view">
        <field name="name">res.partner.form.commission</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            
            <!-- Add Commission Button Box -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" type="object" 
                        name="action_view_commission_allocations" 
                        icon="fa-money"
                        attrs="{'invisible': [('is_commission_partner', '=', False)]}">
                    <field name="commission_allocation_count" widget="statinfo" 
                           string="Commissions"/>
                </button>
                <button class="oe_stat_button" type="object" 
                        name="action_view_commission_summary" 
                        icon="fa-bar-chart"
                        attrs="{'invisible': [('is_commission_partner', '=', False)]}">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value">
                            <field name="total_commission_amount" widget="monetary"/>
                        </span>
                        <span class="o_stat_text">Total Commission</span>
                    </div>
                </button>
            </xpath>

            <!-- Add Commission Tab -->
            <xpath expr="//notebook" position="inside">
                <page string="Commission Setup" name="commission_setup" 
                      attrs="{'invisible': [('is_commission_partner', '=', False)]}">
                    
                    <group>
                        <group name="commission_basic">
                            <field name="is_commission_partner"/>
                            <field name="commission_payment_method" 
                                   attrs="{'invisible': [('is_commission_partner', '=', False)]}"/>
                            <field name="default_commission_rule_id" 
                                   attrs="{'invisible': [('is_commission_partner', '=', False)]}"
                                   domain="[('active', '=', True)]"/>
                        </group>
                        <group name="commission_advanced">
                            <field name="commission_auto_calculate" 
                                   attrs="{'invisible': [('is_commission_partner', '=', False)]}"/>
                            <field name="commission_bank_account_id" 
                                   attrs="{'invisible': [('commission_payment_method', '!=', 'bank_transfer')]}"/>
                        </group>
                    </group>

                    <separator string="Commission Rules" 
                               attrs="{'invisible': [('is_commission_partner', '=', False)]}"/>
                    <field name="commission_rule_ids" 
                           attrs="{'invisible': [('is_commission_partner', '=', False)]}"
                           context="{'default_partner_ids': [(4, active_id)]}">
                        <tree>
                            <field name="name"/>
                            <field name="commission_category"/>
                            <field name="calculation_type"/>
                            <field name="commission_rate" attrs="{'invisible': [('calculation_type', '==', 'fixed')]}"/>
                            <field name="fixed_amount" attrs="{'invisible': [('calculation_type', '!=', 'fixed')]}"/>
                            <field name="active"/>
                        </tree>
                    </field>

                    <separator string="Recent Commission Allocations" 
                               attrs="{'invisible': [('is_commission_partner', '=', False)]}"/>
                    <field name="commission_allocation_ids" 
                           attrs="{'invisible': [('is_commission_partner', '=', False)]}"
                           readonly="1">
                        <tree limit="10">
                            <field name="sale_order_id"/>
                            <field name="commission_rule_id"/>
                            <field name="base_amount"/>
                            <field name="commission_amount"/>
                            <field name="state"/>
                            <field name="sale_date"/>
                        </tree>
                    </field>
                </page>
            </xpath>

            <!-- Add Commission Statistics Tab -->
            <xpath expr="//notebook" position="inside">
                <page string="Commission Statistics" name="commission_statistics" 
                      attrs="{'invisible': [('is_commission_partner', '=', False)]}">
                    
                    <group>
                        <group name="current_period">
                            <separator string="Current Period"/>
                            <field name="current_period_commission"/>
                            <field name="current_period_allocations"/>
                        </group>
                        <group name="total_stats">
                            <separator string="All Time"/>
                            <field name="total_commission_amount"/>
                            <field name="commission_allocation_count"/>
                        </group>
                    </group>

                    <group>
                        <group name="category_breakdown">
                            <separator string="Commission by Category"/>
                            <field name="legacy_commission_amount"/>
                            <field name="external_commission_amount"/>
                            <field name="internal_commission_amount"/>
                            <field name="management_commission_amount"/>
                            <field name="bonus_commission_amount"/>
                            <field name="referral_commission_amount"/>
                            <field name="sales_commission_amount"/>
                        </group>
                        <group name="status_breakdown">
                            <separator string="Commission by Status"/>
                            <field name="draft_commission_amount"/>
                            <field name="calculated_commission_amount"/>
                            <field name="confirmed_commission_amount"/>
                            <field name="processed_commission_amount"/>
                            <field name="paid_commission_amount"/>
                        </group>
                    </group>

                    <separator string="Last Update"/>
                    <field name="commission_stats_last_update" readonly="1"/>
                    <button name="action_update_commission_stats" string="Update Statistics" 
                            type="object" class="btn-secondary"/>
                </page>
            </xpath>

        </field>
    </record>

    <!-- Partner Tree View with Commission Info -->
    <record id="view_partner_tree_commission" model="ir.ui.view">
        <field name="name">res.partner.tree.commission</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='display_name']" position="after">
                <field name="is_commission_partner" string="Commission"/>
                <field name="total_commission_amount" string="Total Commission" 
                       attrs="{'invisible': [('is_commission_partner', '=', False)]}"/>
                <field name="commission_allocation_count" string="Allocations" 
                       attrs="{'invisible': [('is_commission_partner', '=', False)]}"/>
            </xpath>
        </field>
    </record>

    <!-- Partner Search View with Commission Filters -->
    <record id="view_partner_search_commission" model="ir.ui.view">
        <field name="name">res.partner.search.commission</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='supplier']" position="after">
                <separator/>
                <filter name="commission_partners" string="Commission Partners" 
                        domain="[('is_commission_partner', '=', True)]"/>
                <filter name="auto_calculate" string="Auto Calculate" 
                        domain="[('commission_auto_calculate', '=', True)]"/>
            </xpath>
        </field>
    </record>

    <!-- Commission Partner Action -->
    <record id="action_commission_partners" model="ir.actions.act_window">
        <field name="name">Commission Partners</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('is_commission_partner', '=', True)]</field>
        <field name="context">{
            'search_default_commission_partners': 1,
            'default_is_commission_partner': True
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first commission partner
            </p>
            <p>
                Commission partners are individuals or entities who receive commissions
                based on sales or other activities. Set up their commission rules and
                payment methods here.
            </p>
        </field>
    </record>

</odoo>