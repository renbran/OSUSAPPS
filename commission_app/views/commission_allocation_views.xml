<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Commission Allocation Tree View -->
    <record id="view_commission_allocation_tree" model="ir.ui.view">
        <field name="name">commission.allocation.tree</field>
        <field name="model">commission.allocation</field>
        <field name="arch" type="xml">
            <tree string="Commission Allocations" 
                  decoration-info="state == 'draft'" 
                  decoration-warning="state == 'calculated'"
                  decoration-success="state == 'paid'"
                  decoration-muted="state == 'cancelled'">
                <field name="sequence" widget="handle"/>
                <field name="sale_order_id"/>
                <field name="partner_id"/>
                <field name="commission_rule_id"/>
                <field name="commission_period_id"/>
                <field name="base_amount"/>
                <field name="commission_rate"/>
                <field name="commission_amount"/>
                <field name="state" decoration-bf="1"/>
                <field name="sale_date"/>
                <field name="currency_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Commission Allocation Form View -->
    <record id="view_commission_allocation_form" model="ir.ui.view">
        <field name="name">commission.allocation.form</field>
        <field name="model">commission.allocation</field>
        <field name="arch" type="xml">
            <form string="Commission Allocation">
                <header>
                    <button name="action_calculate" string="Calculate" type="object" 
                            states="draft" class="btn-primary"/>
                    <button name="action_confirm" string="Confirm" type="object" 
                            states="calculated" class="btn-primary"/>
                    <button name="action_process" string="Process" type="object" 
                            states="confirmed" class="btn-primary"/>
                    <button name="action_pay" string="Pay" type="object" 
                            states="processed" class="btn-primary"/>
                    <button name="action_cancel" string="Cancel" type="object" 
                            states="draft,calculated,confirmed"/>
                    <button name="action_reset_to_draft" string="Reset to Draft" type="object" 
                            states="cancelled"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,calculated,confirmed,processed,paid"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" 
                                name="action_view_sale_order" icon="fa-shopping-cart">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Sale Order</span>
                            </div>
                        </button>
                    </div>
                    
                    <group>
                        <group name="main_info">
                            <field name="sequence" groups="base.group_no_one"/>
                            <field name="sale_order_id"/>
                            <field name="partner_id"/>
                            <field name="commission_rule_id"/>
                            <field name="commission_period_id"/>
                        </group>
                        <group name="amounts">
                            <field name="base_amount"/>
                            <field name="commission_rate"/>
                            <field name="fixed_amount" 
                                   attrs="{'invisible': [('commission_rule_id.calculation_type', '!=', 'fixed')]}"/>
                            <field name="commission_amount"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>

                    <group name="sale_info">
                        <group name="sale_details">
                            <field name="customer_id" readonly="1"/>
                            <field name="salesperson_id" readonly="1"/>
                            <field name="sale_date" readonly="1"/>
                            <field name="sale_amount_total" readonly="1"/>
                        </group>
                        <group name="payment_info">
                            <field name="payment_date" readonly="1"/>
                            <field name="payment_move_id" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Description" name="description">
                            <field name="description" placeholder="Additional notes for this commission allocation..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Commission Allocation Search View -->
    <record id="view_commission_allocation_search" model="ir.ui.view">
        <field name="name">commission.allocation.search</field>
        <field name="model">commission.allocation</field>
        <field name="arch" type="xml">
            <search string="Commission Allocations">
                <field name="sale_order_id"/>
                <field name="partner_id"/>
                <field name="commission_rule_id"/>
                <field name="commission_period_id"/>
                <separator/>
                <filter name="draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                <filter name="calculated" string="Calculated" domain="[('state', '=', 'calculated')]"/>
                <filter name="confirmed" string="Confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter name="processed" string="Processed" domain="[('state', '=', 'processed')]"/>
                <filter name="paid" string="Paid" domain="[('state', '=', 'paid')]"/>
                <separator/>
                <filter name="this_month" string="This Month" 
                        domain="[('sale_date', '&gt;=', (context_today() - relativedelta(months=1)).strftime('%Y-%m-01')),
                                ('sale_date', '&lt;', (context_today().replace(day=1) + relativedelta(months=1)).strftime('%Y-%m-%d'))]"/>
                <filter name="this_quarter" string="This Quarter" 
                        domain="[('sale_date', '&gt;=', (context_today() - relativedelta(months=2)).strftime('%Y-%m-01')),
                                ('sale_date', '&lt;', (context_today().replace(day=1) + relativedelta(months=1)).strftime('%Y-%m-%d'))]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter name="group_partner" string="Partner" context="{'group_by': 'partner_id'}"/>
                    <filter name="group_rule" string="Commission Rule" context="{'group_by': 'commission_rule_id'}"/>
                    <filter name="group_period" string="Period" context="{'group_by': 'commission_period_id'}"/>
                    <filter name="group_state" string="State" context="{'group_by': 'state'}"/>
                    <filter name="group_sale_date" string="Sale Date" context="{'group_by': 'sale_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Commission Allocation Kanban View -->
    <record id="view_commission_allocation_kanban" model="ir.ui.view">
        <field name="name">commission.allocation.kanban</field>
        <field name="model">commission.allocation</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state">
                <field name="partner_id"/>
                <field name="sale_order_id"/>
                <field name="commission_amount"/>
                <field name="state"/>
                <field name="currency_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_title">
                                    <field name="display_name"/>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div>Partner: <field name="partner_id"/></div>
                                    <div>Amount: <field name="commission_amount" widget="monetary"/></div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Commission Allocation Pivot View -->
    <record id="view_commission_allocation_pivot" model="ir.ui.view">
        <field name="name">commission.allocation.pivot</field>
        <field name="model">commission.allocation</field>
        <field name="arch" type="xml">
            <pivot string="Commission Analysis">
                <field name="commission_period_id" type="row"/>
                <field name="partner_id" type="row"/>
                <field name="commission_rule_id" type="col"/>
                <field name="commission_amount" type="measure"/>
                <field name="base_amount" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Commission Allocation Graph View -->
    <record id="view_commission_allocation_graph" model="ir.ui.view">
        <field name="name">commission.allocation.graph</field>
        <field name="model">commission.allocation</field>
        <field name="arch" type="xml">
            <graph string="Commission Trends">
                <field name="sale_date" type="row" interval="month"/>
                <field name="commission_amount" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Commission Allocation Action -->
    <record id="action_commission_allocation" model="ir.actions.act_window">
        <field name="name">Commission Allocations</field>
        <field name="res_model">commission.allocation</field>
        <field name="view_mode">tree,form,kanban,pivot,graph</field>
        <field name="search_view_id" ref="view_commission_allocation_search"/>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first commission allocation
            </p>
            <p>
                Commission allocations are automatically created when sale orders are confirmed.
                You can also manually create allocations for special cases.
            </p>
        </field>
    </record>

</odoo>