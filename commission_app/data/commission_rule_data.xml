<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Standard Sales Commission Rule -->
        <record id="commission_rule_sales_standard" model="commission.rule">
            <field name="name">Standard Sales Commission</field>
            <field name="code">SALES_STD</field>
            <field name="sequence">10</field>
            <field name="calculation_type">percentage</field>
            <field name="default_rate">5.0</field>
            <field name="base_calculation">total</field>
            <field name="commission_category">sales</field>
            <field name="partner_type">any</field>
            <field name="description">Standard 5% commission on sales total</field>
        </record>

        <!-- High Volume Sales Commission Rule -->
        <record id="commission_rule_sales_high_volume" model="commission.rule">
            <field name="name">High Volume Sales Commission</field>
            <field name="code">SALES_HV</field>
            <field name="sequence">20</field>
            <field name="calculation_type">percentage</field>
            <field name="default_rate">7.5</field>
            <field name="base_calculation">total</field>
            <field name="commission_category">sales</field>
            <field name="partner_type">salesperson</field>
            <field name="minimum_amount">10000</field>
            <field name="description">Enhanced 7.5% commission for sales above $10,000</field>
        </record>

        <!-- Referral Commission Rule -->
        <record id="commission_rule_referral" model="commission.rule">
            <field name="name">Referral Commission</field>
            <field name="code">REFERRAL</field>
            <field name="sequence">30</field>
            <field name="calculation_type">percentage</field>
            <field name="default_rate">2.0</field>
            <field name="base_calculation">total</field>
            <field name="commission_category">referral</field>
            <field name="partner_type">referrer</field>
            <field name="description">2% commission for customer referrals</field>
        </record>

        <!-- Management Override Commission Rule -->
        <record id="commission_rule_management" model="commission.rule">
            <field name="name">Management Override Commission</field>
            <field name="code">MGMT</field>
            <field name="sequence">40</field>
            <field name="calculation_type">percentage</field>
            <field name="default_rate">1.5</field>
            <field name="base_calculation">total</field>
            <field name="commission_category">management</field>
            <field name="partner_type">manager</field>
            <field name="description">1.5% management override commission</field>
        </record>

        <!-- Fixed Bonus Commission Rule -->
        <record id="commission_rule_bonus_fixed" model="commission.rule">
            <field name="name">Fixed Bonus Commission</field>
            <field name="code">BONUS_FIXED</field>
            <field name="sequence">50</field>
            <field name="calculation_type">fixed</field>
            <field name="fixed_amount">500.00</field>
            <field name="base_calculation">total</field>
            <field name="commission_category">bonus</field>
            <field name="partner_type">any</field>
            <field name="minimum_amount">50000</field>
            <field name="description">$500 fixed bonus for sales above $50,000</field>
        </record>

    </data>
</odoo>