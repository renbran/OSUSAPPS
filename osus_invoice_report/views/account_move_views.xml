<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Account Move (Invoice/Bill) Form View Enhancement -->
    <record id="view_move_form_inherit_osus_invoice" model="ir.ui.view">
        <field name="name">account.move.form.osus.invoice</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Add custom print buttons in header -->
            <xpath expr="//header" position="inside">
                <button name="action_print_custom_invoice" 
                        string="Print OSUS Invoice" 
                        type="object" 
                        class="btn-secondary"
                        visibility="move_type == 'out_invoice' and state in ['posted', 'draft']"/>
                <button name="action_print_custom_bill" 
                        string="Print OSUS Bill" 
                        type="object" 
                        class="btn-secondary"
                        visibility="move_type == 'in_invoice' and state in ['posted', 'draft']"/>
                <button name="action_print_custom_receipt" 
                        string="Print OSUS Receipt" 
                        type="object" 
                        class="btn-secondary"
                        visibility="move_type == 'out_refund' and state in ['posted', 'draft']"/>
            </xpath>

            <!-- Add Deal Tracking tab after other_info -->
            <xpath expr="//notebook" position="inside">
                <page string="Deal Information" name="deal_info" 
                      visibility="move_type in ['out_invoice', 'out_refund']">
                    <group string="Property Deal Information">
                        <group>
                            <field name="is_property_deal"/>
                            <field name="booking_date" visibility="is_property_deal"/>
                            <field name="deal_id" visibility="is_property_deal"/>
                        </group>
                        <group>
                            <field name="sale_value" widget="monetary" visibility="is_property_deal"/>
                            <field name="developer_commission" widget="percentage" visibility="is_property_deal"/>
                            <field name="commission_amount" widget="monetary" visibility="is_property_deal"/>
                        </group>
                    </group>
                    
                    <group string="Property Details" visibility="is_property_deal">
                        <group>
                            <field name="buyer_id" options="{'quick_create': True, 'create_edit': True}"/>
                            <field name="project_id" options="{'quick_create': True, 'create_edit': True}"/>
                        </group>
                        <group>
                            <field name="unit_id" options="{'quick_create': True, 'create_edit': True}"/>
                        </group>
                    </group>
                </page>

                <page string="Report Settings" name="report_settings">
                    <group string="QR Code Settings">
                        <field name="qr_in_report"/>
                        <field name="qr_image" widget="image" visibility="qr_in_report"/>
                    </group>
                    
                    <group string="Computed Fields">
                        <field name="amount_total_words" readonly="1"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Account Move Tree View Enhancement -->
    <record id="view_move_tree_inherit_osus_invoice" model="ir.ui.view">
        <field name="name">account.move.tree.osus.invoice</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_tree"/>
        <field name="arch" type="xml">
            <!-- Add deal tracking fields after invoice date -->
            <xpath expr="//field[@name='invoice_date']" position="after">
                <field name="booking_date" optional="hide"/>
                <field name="deal_id" optional="hide"/>
                <field name="is_property_deal" optional="hide"/>
            </xpath>
            
            <!-- Add property fields after partner -->
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="buyer_id" optional="hide"/>
                <field name="project_id" optional="hide"/>
                <field name="unit_id" optional="hide"/>
            </xpath>
        </field>
    </record>

    <!-- Account Move Search View Enhancement -->
    <record id="view_account_invoice_filter_inherit_osus" model="ir.ui.view">
        <field name="name">account.move.select.osus</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <!-- Add deal tracking filters -->
            <xpath expr="//filter[@name='late']" position="after">
                <separator/>
                <filter string="Property Deals" name="property_deals" 
                        domain="[('is_property_deal', '=', True)]"/>
                <filter string="Regular Invoices" name="regular_invoices" 
                        domain="[('is_property_deal', '=', False)]"/>
            </xpath>
            
            <!-- Add search fields -->
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="buyer_id"/>
                <field name="project_id"/>
                <field name="unit_id"/>
                <field name="deal_id"/>
                <field name="booking_date"/>
            </xpath>
        </field>
    </record>
</odoo>
