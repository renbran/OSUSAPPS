<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Reviewer: can see draft and reviewed payments -->
    <record id="payment_reviewed_rule" model="ir.rule">
        <field name="name">Payments: Reviewer Stage</field>
        <field name="model_id" ref="account.model_account_payment"/>
        <field name="domain_force">[('state', 'in', ['draft', 'reviewed'])]</field>
        <field name="groups" eval="[(4, ref('account_payment_approval.group_payment_reviewer'))]"/>
    </record>
    <!-- Approver: can see reviewed and approved payments -->
    <record id="payment_approved_rule" model="ir.rule">
        <field name="name">Payments: Approver Stage</field>
        <field name="model_id" ref="account.model_account_payment"/>
        <field name="domain_force">[('state', 'in', ['reviewed', 'approved'])]</field>
        <field name="groups" eval="[(4, ref('account_payment_approval.group_payment_approver'))]"/>
    </record>
    <!-- Authorizer: can see approved and authorized payments -->
    <record id="payment_authorized_rule" model="ir.rule">
        <field name="name">Payments: Authorizer Stage</field>
        <field name="model_id" ref="account.model_account_payment"/>
        <field name="domain_force">[('state', 'in', ['approved', 'authorized'])]</field>
        <field name="groups" eval="[(4, ref('account_payment_approval.group_payment_authorizer'))]"/>
    </record>
    <!-- Poster: can see authorized and posted payments -->
    <record id="payment_posted_rule" model="ir.rule">
        <field name="name">Payments: Poster Stage</field>
        <field name="model_id" ref="account.model_account_payment"/>
        <field name="domain_force">[('state', 'in', ['authorized', 'posted'])]</field>
        <field name="groups" eval="[(4, ref('account_payment_approval.group_payment_poster'))]"/>
    </record>
</odoo>
