<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="verify_payment_template" name="Payment Verification">
        <t t-if="valid">
            <div class="alert alert-success">Payment is authentic</div>
        </t>
        <t t-if="not valid">
            <div class="alert alert-danger">Invalid or tampered payment</div>
        </t>
        <div>
            <strong>Payment Ref:</strong> <span t-esc="payment.name"/>
            <strong>Date:</strong> <span t-esc="payment.date"/>
            <strong>Amount:</strong> <span t-esc="payment.amount"/>
            <strong>Partner:</strong> <span t-esc="payment.partner_id.name"/>
            <strong>Status:</strong> <span t-esc="payment.state"/>
        </div>
    </template>
</odoo>
