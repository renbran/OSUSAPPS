<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Security Groups -->
    <record id="group_new_app_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="base.module_category_services"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_new_app_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="base.module_category_services"/>
        <field name="implied_ids" eval="[(4, ref('group_new_app_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <!-- Record Rules -->
    <record id="new_app_model_user_rule" model="ir.rule">
        <field name="name">New App Model: User: see own records</field>
        <field name="model_id" ref="model_new_app_model"/>
        <field name="domain_force">[('user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_new_app_user'))]"/>
    </record>

    <record id="new_app_model_manager_rule" model="ir.rule">
        <field name="name">New App Model: Manager: see all records</field>
        <field name="model_id" ref="model_new_app_model"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_new_app_manager'))]"/>
    </record>

</odoo>
