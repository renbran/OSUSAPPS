<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Calendar Extended Security Groups -->
    <record id="group_calendar_user" model="res.groups">
        <field name="name">Calendar User</field>
        <field name="category_id" ref="base.module_category_productivity"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="comment">Can create and manage own calendar events and internal meetings</field>
    </record>
    
    <record id="group_calendar_manager" model="res.groups">
        <field name="name">Calendar Manager</field>
        <field name="category_id" ref="base.module_category_productivity"/>
        <field name="implied_ids" eval="[(4, ref('group_calendar_user'))]"/>
        <field name="comment">Can approve meetings, manage resources, and configure calendar settings</field>
    </record>
    
    <!-- Record Rules for Internal Meetings -->
    <record id="calendar_internal_meeting_rule_user" model="ir.rule">
        <field name="name">Internal Meeting: User Access</field>
        <field name="model_id" ref="model_calendar_internal_meeting"/>
        <field name="domain_force">[
            '|', '|',
            ('organizer_id', '=', user.id),
            ('attendee_ids.user_id', '=', user.id),
            ('is_public', '=', True)
        ]</field>
        <field name="groups" eval="[(4, ref('group_calendar_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>
    
    <record id="calendar_internal_meeting_rule_organizer" model="ir.rule">
        <field name="name">Internal Meeting: Organizer Access</field>
        <field name="model_id" ref="model_calendar_internal_meeting"/>
        <field name="domain_force">[('organizer_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_calendar_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>
    
    <record id="calendar_internal_meeting_rule_manager" model="ir.rule">
        <field name="name">Internal Meeting: Manager Full Access</field>
        <field name="model_id" ref="model_calendar_internal_meeting"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_calendar_manager'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>
    
    <!-- Record Rules for Department Groups -->
    <record id="calendar_department_group_rule_user" model="ir.rule">
        <field name="name">Department Group: User Read Access</field>
        <field name="model_id" ref="model_calendar_department_group"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_calendar_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>
    
    <record id="calendar_department_group_rule_manager" model="ir.rule">
        <field name="name">Department Group: Manager Full Access</field>
        <field name="model_id" ref="model_calendar_department_group"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_calendar_manager'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

</odoo>
