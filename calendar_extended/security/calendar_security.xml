<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Calendar Extended Security Groups -->
        
        <!-- Calendar User Group -->
        <record id="group_calendar_user" model="res.groups">
            <field name="name">Calendar User</field>
            <field name="category_id" ref="base.module_category_hidden"/>
            <field name="comment">Can create and manage own meeting announcements</field>
        </record>
        
        <!-- Calendar Manager Group -->
        <record id="group_calendar_manager" model="res.groups">
            <field name="name">Calendar Manager</field>
            <field name="category_id" ref="base.module_category_hidden"/>
            <field name="implied_ids" eval="[(4, ref('group_calendar_user'))]"/>
            <field name="comment">Can approve meeting announcements and manage calendar settings</field>
        </record>
        
        <!-- Add Calendar Manager to HR Manager -->
        <record id="hr.group_hr_manager" model="res.groups">
            <field name="implied_ids" eval="[(4, ref('group_calendar_manager'))]"/>
        </record>
        
        <!-- Calendar Announcement Record Rules -->
        
        <!-- User can see own announcements -->
        <record id="calendar_announcement_user_rule" model="ir.rule">
            <field name="name">Calendar Announcement: User Access</field>
            <field name="model_id" ref="model_calendar_announcement"/>
            <field name="domain_force">[('submitted_by', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_calendar_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
        
        <!-- Manager can see all announcements -->
        <record id="calendar_announcement_manager_rule" model="ir.rule">
            <field name="name">Calendar Announcement: Manager Access</field>
            <field name="model_id" ref="model_calendar_announcement"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_calendar_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
    </data>
</odoo>
