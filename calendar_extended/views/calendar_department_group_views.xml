<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Department Group Tree View -->
    <record id="view_calendar_department_group_tree" model="ir.ui.view">
        <field name="name">calendar.department.group.tree</field>
        <field name="model">calendar.department.group</field>
        <field name="arch" type="xml">
            <tree string="Department Groups">
                <field name="name"/>
                <field name="manager_id"/>
                <field name="department_ids" widget="many2many_tags"/>
                <field name="is_active" widget="boolean_toggle"/>
                <field name="auto_approve" widget="boolean_toggle"/>
                <button name="action_create_meeting" type="object" 
                        string="Create Meeting" icon="fa-calendar-plus-o"
                        class="oe_highlight"/>
            </tree>
        </field>
    </record>

    <!-- Department Group Form View -->
    <record id="view_calendar_department_group_form" model="ir.ui.view">
        <field name="name">calendar.department.group.form</field>
        <field name="model">calendar.department.group</field>
        <field name="arch" type="xml">
            <form string="Department Group">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_create_meeting" type="object"
                                class="oe_stat_button" icon="fa-calendar-plus-o">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Create</span>
                                <span class="o_stat_text">Meeting</span>
                            </div>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Group Name..."/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="manager_id"/>
                            <field name="is_active"/>
                            <field name="auto_approve"/>
                        </group>
                    </group>
                    
                    <group string="Description">
                        <field name="description" nolabel="1" colspan="2"/>
                    </group>
                    
                    <notebook>
                        <page string="Departments" name="departments">
                            <field name="department_ids" nolabel="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="manager_id"/>
                                    <field name="member_ids" string="Members Count" widget="many2many_counter"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Additional Employees" name="employees">
                            <field name="employee_ids" nolabel="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="job_id"/>
                                    <field name="department_id"/>
                                    <field name="work_email"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Department Group Kanban View -->
    <record id="view_calendar_department_group_kanban" model="ir.ui.view">
        <field name="name">calendar.department.group.kanban</field>
        <field name="model">calendar.department.group</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column">
                <field name="name"/>
                <field name="manager_id"/>
                <field name="department_ids"/>
                <field name="employee_ids"/>
                <field name="is_active"/>
                <field name="auto_approve"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <div class="o_kanban_record_subtitle">
                                        Manager: <field name="manager_id"/>
                                    </div>
                                    <div class="o_kanban_record_body">
                                        <div>
                                            <i class="fa fa-building-o"/> 
                                            <t t-esc="record.department_ids.raw_value.length"/> departments
                                        </div>
                                        <div>
                                            <i class="fa fa-users"/> 
                                            <t t-esc="record.employee_ids.raw_value.length"/> additional employees
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="oe_kanban_footer">
                                <div class="oe_kanban_footer_left">
                                    <t t-if="record.auto_approve.raw_value">
                                        <span class="badge badge-success">Auto Approve</span>
                                    </t>
                                </div>
                                <div class="oe_kanban_footer_right">
                                    <button name="action_create_meeting" type="object" 
                                            class="btn btn-primary btn-sm">
                                        <i class="fa fa-calendar-plus-o"/> Meeting
                                    </button>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action for Department Groups -->
    <record id="action_calendar_department_group" model="ir.actions.act_window">
        <field name="name">Department Groups</field>
        <field name="res_model">calendar.department.group</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create department groups for easy meeting invitations
            </p>
            <p>
                Set up groups of departments and employees to quickly invite
                them to internal meetings.
            </p>
        </field>
    </record>

</odoo>
