<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- SCHOLARIX Individual Agent Statement Template -->
    <template id="scholarix_agent_statement_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="statement">
                <t t-call="web.external_layout">
                    <div class="page">
                        <!-- Custom CSS for SCHOLARIX branding -->
                        <style>
                            .scholarix-header {
                                background: linear-gradient(135deg, #2E86AB 0%, #A23B72 100%);
                                color: white;
                                padding: 25px;
                                margin-bottom: 25px;
                                border-radius: 8px;
                                text-align: center;
                            }
                            .scholarix-logo {
                                font-size: 28px;
                                font-weight: bold;
                                letter-spacing: 2px;
                                margin-bottom: 8px;
                            }
                            .agent-info-card {
                                background: #f8f9fa;
                                border-left: 4px solid #2E86AB;
                                padding: 20px;
                                margin: 20px 0;
                            }
                            .summary-grid {
                                display: grid;
                                grid-template-columns: repeat(4, 1fr);
                                gap: 20px;
                                margin: 20px 0;
                            }
                            .summary-item {
                                text-align: center;
                                padding: 15px;
                                background: white;
                                border: 2px solid #2E86AB;
                                border-radius: 8px;
                            }
                            .summary-value {
                                font-size: 20px;
                                font-weight: bold;
                                color: #2E86AB;
                                margin-bottom: 5px;
                            }
                            .summary-label {
                                font-size: 12px;
                                color: #6c757d;
                                text-transform: uppercase;
                            }
                            .commission-table th {
                                background: #2E86AB;
                                color: white;
                                font-weight: bold;
                                text-align: center;
                                padding: 10px 6px;
                                border: 1px solid #2E86AB;
                            }
                            .commission-table td {
                                padding: 8px 6px;
                                border: 1px solid #dee2e6;
                                text-align: center;
                            }
                            .commission-breakdown {
                                background: #f8f9fa;
                                padding: 15px;
                                border-radius: 5px;
                                margin: 15px 0;
                            }
                            .payment-info {
                                background: #e7f3ff;
                                border: 1px solid #2E86AB;
                                border-radius: 5px;
                                padding: 15px;
                                margin: 15px 0;
                            }
                            .status-pending { color: #ffc107; font-weight: bold; }
                            .status-paid { color: #28a745; font-weight: bold; }
                            .status-cancelled { color: #dc3545; font-weight: bold; }
                            @media print {
                                .scholarix-header {
                                    background: #2E86AB !important;
                                    -webkit-print-color-adjust: exact;
                                    color-adjust: exact;
                                }
                                .commission-table th {
                                    background: #2E86AB !important;
                                    color: white !important;
                                    -webkit-print-color-adjust: exact;
                                    color-adjust: exact;
                                }
                            }
                        </style>

                        <!-- Report Header -->
                        <div class="scholarix-header">
                            <div class="scholarix-logo">SCHOLARIX</div>
                            <div style="font-size: 16px; margin-bottom: 10px;">Individual Commission Statement</div>
                            <div style="font-size: 14px;">
                                Period: <strong>
                                <span t-field="statement.period_start"/>
 to <span t-field="statement.period_end"/>
                            </strong>
                        </div>
                        <div style="font-size: 12px; opacity: 0.8; margin-top: 5px;">
                                Generated on <span t-esc="datetime.datetime.now().strftime('%B %d, %Y at %I:%M %p')"/>
                        </div>
                    </div>

                    <!-- Agent Information -->
                    <div class="agent-info-card">
                        <div class="row">
                            <div class="col-8">
                                <h4 style="color: #2E86AB; margin-bottom: 15px;">
                                    <i class="fa fa-user"/>
 Agent Information
                                </h4>
                                <div style="margin-left: 20px;">
                                    <strong style="font-size: 18px;">
                                        <span t-field="statement.agent_id.name"/>
                                    </strong>
                                    <br/>
                                    <t t-if="statement.agent_id.street">
                                        <i class="fa fa-map-marker"/>
                                        <span t-field="statement.agent_id.street"/>
                                        <br/>
                                    </t>
                                    <t t-if="statement.agent_id.street2">
                                        <span t-field="statement.agent_id.street2"/>
                                        <br/>
                                    </t>
                                    <t t-if="statement.agent_id.city or statement.agent_id.zip">
                                        <span t-field="statement.agent_id.zip"/>
                                        <span t-field="statement.agent_id.city"/>
                                        <br/>
                                    </t>
                                    <t t-if="statement.agent_email">
                                        <i class="fa fa-envelope"/>
                                        <span t-field="statement.agent_email"/>
                                        <br/>
                                    </t>
                                    <t t-if="statement.agent_phone">
                                        <i class="fa fa-phone"/>
                                        <span t-field="statement.agent_phone"/>
                                    </t>
                                </div>
                            </div>
                            <div class="col-4">
                                <h4 style="color: #2E86AB; margin-bottom: 15px;">Statement Details</h4>
                                <div style="margin-left: 20px;">
                                    <strong>Statement ID:</strong>
                                    <span t-field="statement.id"/>
                                    <br/>
                                    <strong>Orders:</strong>
                                    <span t-field="statement.order_count"/>
                                    <br/>
                                    <strong>Status:</strong>
                                    <span t-att-class="'status-' + statement.payment_status">
                                        <span t-field="statement.payment_status"/>
                                    </span>
                                    <br/>
                                    <strong>Currency:</strong>
                                    <span t-field="statement.currency_id.name"/>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Commission Summary -->
                    <h4 style="color: #2E86AB; margin-bottom: 15px;">Commission Summary</h4>
                    <div class="summary-grid">
                        <div class="summary-item">
                            <div class="summary-value">$                                <span t-esc="'{:,.2f}'.format(statement.total_sales)"/>
                            </div>
                            <div class="summary-label">Total Sales</div>
                        </div>
                        <div class="summary-item">
                            <div class="summary-value">
                                <span t-esc="'{:.2f}'.format(statement.commission_rate)"/>
%</div>
                            <div class="summary-label">Avg Rate</div>
                        </div>
                        <div class="summary-item">
                            <div class="summary-value">$                                <span t-esc="'{:,.2f}'.format(statement.gross_commission)"/>
                            </div>
                            <div class="summary-label">Gross Commission</div>
                        </div>
                        <div class="summary-item">
                            <div class="summary-value">$                                <span t-esc="'{:,.2f}'.format(statement.net_commission)"/>
                            </div>
                            <div class="summary-label">Net Commission</div>
                        </div>
                    </div>

                    <!-- Commission Type Breakdown -->
                    <div class="commission-breakdown">
                        <h5 style="color: #2E86AB; margin-bottom: 15px;">Commission Type Breakdown</h5>
                        <div class="row">
                            <div class="col-4">
                                <div class="text-center">
                                    <h6 style="color: #28a745;">Direct Sales (5%)</h6>
                                    <div style="font-size: 18px; font-weight: bold;">
                                            $                                        <span t-esc="'{:,.2f}'.format(statement.direct_sales_commission)"/>
                                    </div>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="text-center">
                                    <h6 style="color: #ffc107;">Referral Bonus (2%)</h6>
                                    <div style="font-size: 18px; font-weight: bold;">
                                            $                                        <span t-esc="'{:,.2f}'.format(statement.referral_bonus)"/>
                                    </div>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="text-center">
                                    <h6 style="color: #17a2b8;">Team Override (1%)</h6>
                                    <div style="font-size: 18px; font-weight: bold;">
                                            $                                        <span t-esc="'{:,.2f}'.format(statement.team_override)"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Order Details -->
                    <h4 style="color: #2E86AB; margin: 25px 0 15px 0;">Order Details</h4>
                    <table class="table commission-table" style="width: 100%; font-size: 11px;">
                        <thead>
                            <tr>
                                <th style="width: 15%;">Order Reference</th>
                                <th style="width: 12%;">Date</th>
                                <th style="width: 25%;">Customer / Client Ref</th>
                                <th style="width: 12%;">Order Amount</th>
                                <th style="width: 12%;">Direct Sales</th>
                                <th style="width: 12%;">Referral</th>
                                <th style="width: 12%;">Team</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="total_order_amount" t-value="0"/>
                            <t t-set="total_direct" t-value="0"/>
                            <t t-set="total_referral" t-value="0"/>
                            <t t-set="total_team" t-value="0"/>

                            <t t-foreach="statement.commission_line_ids" t-as="line">
                                <t t-set="total_order_amount" t-value="total_order_amount + line.order_amount"/>
                                <t t-set="total_direct" t-value="total_direct + line.direct_sales_commission"/>
                                <t t-set="total_referral" t-value="total_referral + line.referral_commission"/>
                                <t t-set="total_team" t-value="total_team + line.team_commission"/>

                                <tr>
                                    <td>
                                        <span t-field="line.order_reference"/>
                                    </td>
                                    <td>
                                        <span t-field="line.order_date"/>
                                    </td>
                                    <td style="text-align: left;">
                                        <span t-field="line.customer_id.name"/>
                                        <t t-if="line.client_order_ref">
                                            <br/>
                                            <small class="text-muted">Ref: <span t-field="line.client_order_ref"/></small>
                                        </t>
                                    </td>
                                    <td>$                                        <span t-esc="'{:,.2f}'.format(line.order_amount)"/>
                                    </td>
                                    <td>$                                        <span t-esc="'{:,.2f}'.format(line.direct_sales_commission)"/>
                                    </td>
                                    <td>$                                        <span t-esc="'{:,.2f}'.format(line.referral_commission)"/>
                                    </td>
                                    <td>$                                        <span t-esc="'{:,.2f}'.format(line.team_commission)"/>
                                    </td>
                                </tr>
                            </t>

                            <!-- Totals Row -->
                            <tr style="background: #f8f9fa; font-weight: bold; border-top: 3px solid #2E86AB;">
                                <td colspan="3" style="text-align: left;">TOTALS</td>
                                <td>$                                    <span t-esc="'{:,.2f}'.format(total_order_amount)"/>
                                </td>
                                <td>$                                    <span t-esc="'{:,.2f}'.format(total_direct)"/>
                                </td>
                                <td>$                                    <span t-esc="'{:,.2f}'.format(total_referral)"/>
                                </td>
                                <td>$                                    <span t-esc="'{:,.2f}'.format(total_team)"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <!-- Payment Information -->
                    <div class="payment-info">
                        <h5 style="color: #2E86AB; margin-bottom: 10px;">
                            <i class="fa fa-credit-card"/>
 Payment Information
                        </h5>
                        <div class="row">
                            <div class="col-6">
                                <strong>Gross Commission:</strong> $                                <span t-esc="'{:,.2f}'.format(statement.gross_commission)"/>
                                <br/>
                                <strong>Less: Deductions:</strong> $                                <span t-esc="'{:,.2f}'.format(statement.deductions)"/>
                                <br/>
                                <strong style="font-size: 16px; color: #2E86AB;">Net Amount Payable:</strong>
                                <strong style="font-size: 16px;">$                                    <span t-esc="'{:,.2f}'.format(statement.net_commission)"/>
                                </strong>
                            </div>
                            <div class="col-6">
                                <strong>Payment Status:</strong>
                                <span t-att-class="'status-' + statement.payment_status">
                                    <t t-if="statement.payment_status == 'pending'">
                                        <i class="fa fa-clock-o"/>
 Pending
                                    </t>
                                    <t t-if="statement.payment_status == 'paid'">
                                        <i class="fa fa-check"/>
 Paid
                                    </t>
                                    <t t-if="statement.payment_status == 'cancelled'">
                                        <i class="fa fa-times"/>
 Cancelled
                                    </t>
                                </span>
                                <br/>
                                <small>
                                    <strong>Next Payment Date:</strong> 15th of following month</small>
                                <br/>
                                <small>
                                    <strong>Payment Method:</strong> Bank Transfer</small>
                            </div>
                        </div>
                    </div>

                    <!-- Footer -->
                    <div style="margin-top: 30px; padding-top: 20px; border-top: 2px solid #2E86AB;">
                        <div class="row">
                            <div class="col-6">
                                <small style="color: #6c757d;">
                                    <strong>Terms:</strong>
                                    <br/>
                                        • Commission paid monthly on customer payment receipt<br/>
                                        • Disputes must be reported within 30 days<br/>
                                        • Subject to agent agreement terms
                            </small>
                        </div>
                        <div class="col-6 text-right">
                            <div style="border: 1px solid #dee2e6; height: 50px; width: 200px; margin-left: auto;">
                                <small style="padding: 5px;">Agent Signature</small>
                            </div>
                            <small style="color: #6c757d;">Date: ________________</small>
                        </div>
                    </div>

                    <div style="text-align: center; margin-top: 20px; color: #6c757d; font-size: 10px;">
                        <strong>SCHOLARIX</strong> | Agent Commission Statement | 
                        <span t-field="statement.agent_id.name"/>
 |                        <span t-field="statement.period_start"/>
 to <span t-field="statement.period_end"/>
                    </div>
                </div>
            </div>
        </t>
    </t>
</t>
</template>

</odoo>
