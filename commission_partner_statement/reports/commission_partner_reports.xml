<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Create custom paper format for commission reports -->
        <record id="paperformat_commission_a4" model="report.paperformat">
            <field name="name">Commission A4</field>
            <field name="default" eval="False" />
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">40</field>
            <field name="margin_bottom">25</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">35</field>
            <field name="dpi">90</field>
        </record>
        
        <!-- Commission Partner Statement PDF Report - Updated with Odoo 17 format -->
        <record id="action_commission_partner_statement_pdf" model="ir.actions.report">
            <field name="name">Commission Statement</field>
            <field name="model">res.partner</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">commission_partner_statement.commission_partner_statement_template</field>
            <field name="report_file">commission_partner_statement.commission_partner_statement_template</field>
            <field name="print_report_name">'Commission Statement - %s' % object.name</field>
            <field name="paperformat_id" ref="paperformat_commission_a4"/>
            <field name="binding_model_id" ref="base.model_res_partner"/>
            <field name="binding_type">report</field>
        </record>
        
        <!-- Minimal Fallback Commission Report - Simplified version as backup -->
        <record id="action_commission_partner_statement_pdf_minimal" model="ir.actions.report">
            <field name="name">Minimal Commission Statement</field>
            <field name="model">res.partner</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">commission_partner_statement.commission_partner_statement_template</field>
            <field name="report_file">commission_partner_statement.commission_partner_statement_template</field>
            <field name="print_report_name">'Commission Statement - %s' % object.name</field>
            <field name="paperformat_id" ref="paperformat_commission_a4"/>
            <field name="binding_type">report</field>
        </record>
    </data>
</odoo>
