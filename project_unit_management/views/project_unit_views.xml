<?xml version="1.0"?>
<odoo>
    <data>
        <!-- Project Form & Tree Views -->
        <record id="view_project_form" model="ir.ui.view">
            <field name="name">project.project.form</field>
            <field name="model">project.project</field>
            <field name="arch" type="xml">
                <form string="Project">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                        </group>
                        <group string="Units">
                            <field name="unit_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="price"/>
                                    <field name="currency_id"/>
                                    <field name="status"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_project_tree" model="ir.ui.view">
            <field name="name">project.project.tree</field>
            <field name="model">project.project</field>
            <field name="arch" type="xml">
                <tree string="Projects">
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>
        <!-- Unit Form & Tree Views -->
        <record id="view_unit_form" model="ir.ui.view">
            <field name="name">project.unit.form</field>
            <field name="model">project.unit</field>
            <field name="arch" type="xml">
                <form string="Unit">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="project_id"/>
                            <field name="price"/>
                            <field name="currency_id"/>
                            <field name="status"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_unit_tree" model="ir.ui.view">
            <field name="name">project.unit.tree</field>
            <field name="model">project.unit</field>
            <field name="arch" type="xml">
                <tree string="Units">
                    <field name="name"/>
                    <field name="project_id"/>
                    <field name="price"/>
                    <field name="currency_id"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>
        <!-- Actions & Menus -->
        <record id="action_project_project" model="ir.actions.act_window">
            <field name="name">Projects</field>
            <field name="res_model">project.project</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="action_project_unit" model="ir.actions.act_window">
            <field name="name">Units</field>
            <field name="res_model">project.unit</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="menu_project_root" name="Projects" sequence="10"/>
        <menuitem id="menu_project_project" name="Projects" parent="menu_project_root" action="action_project_project" sequence="20"/>
        <menuitem id="menu_project_unit" name="Units" parent="menu_project_root" action="action_project_unit" sequence="30"/>
    </data>
</odoo>
