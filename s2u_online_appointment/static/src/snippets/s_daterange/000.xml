                                          t-att-data-real-day="day.real_day"
                                          t-on-click="onSelectDateRange" />
                                </t>
                            </t>
                        </div>
                    </t>

                </div>

                <!-- Right Arrow -->
                <div class="popover-arrow popover-arrow-right"
                     t-att-class="!data['month_right_more'] ? 'hidden' : ''"
                     t-on-click="onRightDateRange" >
                    &gt; <!-- This represents the right arrow -->
                </div>
            </div>
            <div class="popover-footer">
                <button class="btn btn-primary" t-on-click="onDone">Done</button>
            </div>
        </div>
    </t>

</templates>
