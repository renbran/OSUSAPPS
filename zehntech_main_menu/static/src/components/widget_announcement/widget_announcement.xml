<?xml version="1.0" encoding="utf-8"?>
<templates xml:space="preserve">
    <t t-name="zehntech_main_menu.WidgetAnnouncement">
        <div class="widget-announcement">
            <textarea
                class="form-control"
                t-att-value="props.announcement"
                t-on-input="props.userIsAdmin ? (e) => props.onChangeAnnouncement(e.target.value) : undefined"
                t-att-readonly="!props.userIsAdmin"
                maxlength="140"
                placeholder="Announcement for everyone">
            </textarea>

            <button
                t-if="props.userIsAdmin"
                class="btn btn-primary"
                t-on-click="props.onSaveAnnouncement">
                Save
            </button>
        </div>
    </t>
</templates>



