<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Index Banner template -->
    <template id="banner" name="Index Banner snippet">
        <!-- Index Banner snippet section -->
        <section class="main_body banner_snippet s_carousel_wrapper" id="section02" data-vxml="001"
                 style="background-color: #b22126;">
            <t t-set="uniq" t-value="datetime.datetime.now().microsecond"/>
            <div t-attf-id="myCarousel{{uniq}}" class="s_carousel s_carousel_default carousel slide"
                 data-interval="10000">
                <section class="header">
                    <div class="container-fluid p-0">
                        <div class="wrapper">
