                            <div class="b_wrapp">
                                <a href="#next_section" class="btn btn-down">Scroll Down</a>
                            </div>
                        </div>
                    </div>
                </section>
                <section id="next_section" class="next-content"/>

                <!--Controls -->
                <div class="carousel_button">
                    <div class="carousel-control-prev o_not_editable nav-prev"
                         t-attf-data-bs-target="#myCarousel{{uniq}}"
                         data-bs-slide="prev" role="img" aria-label="Previous" title="Previous">
                        <span class="carousel-control-prev-icon"/>
                        <span class="visually-hidden">Previous</span>
                    </div>
                    <div class="carousel-control-next o_not_editable nav-next"
                         t-attf-data-bs-target="#myCarousel{{uniq}}"
                         data-bs-slide="next" role="img" aria-label="Next" title="Next">
