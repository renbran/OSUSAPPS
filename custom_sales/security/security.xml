<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Security Groups -->
        <record id="group_sales_dashboard_user" model="res.groups">
            <field name="name">Sales Dashboard User</field>
            <field name="category_id" ref="base.module_category_sales"/>
            <field name="comment">Users can view and use the sales dashboard</field>
            <field name="implied_ids" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
        </record>
        
        <record id="group_sales_dashboard_manager" model="res.groups">
            <field name="name">Sales Dashboard Manager</field>
            <field name="category_id" ref="base.module_category_sales"/>
            <field name="comment">Users can configure and manage sales dashboards</field>
            <field name="implied_ids" eval="[(4, ref('group_sales_dashboard_user'))]"/>
        </record>
        
        <record id="group_sales_dashboard_admin" model="res.groups">
            <field name="name">Sales Dashboard Administrator</field>
            <field name="category_id" ref="base.module_category_administration"/>
            <field name="comment">Full access to sales dashboard system</field>
            <field name="implied_ids" eval="[(4, ref('group_sales_dashboard_manager'))]"/>
        </record>
        
        <!-- Record Rules -->
        <record id="custom_sales_order_user_rule" model="ir.rule">
            <field name="name">Custom Sales Order: User Access</field>
            <field name="model_id" ref="model_custom_sales_order"/>
            <field name="domain_force">['|', ('sales_person_id', '=', user.id), ('sales_team_id.member_ids', 'in', [user.id])]</field>
            <field name="groups" eval="[(4, ref('group_sales_dashboard_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
        <record id="custom_sales_order_manager_rule" model="ir.rule">
            <field name="name">Custom Sales Order: Manager Access</field>
            <field name="model_id" ref="model_custom_sales_order"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_sales_dashboard_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
        
        <record id="dashboard_config_user_rule" model="ir.rule">
            <field name="name">Dashboard Config: User Access</field>
            <field name="model_id" ref="model_custom_sales_dashboard_config"/>
            <field name="domain_force">['|', '|', ('user_ids', '=', False), ('user_ids', 'in', [user.id]), ('group_ids', 'in', [g.id for g in user.groups_id])]</field>
            <field name="groups" eval="[(4, ref('group_sales_dashboard_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
        <record id="dashboard_config_manager_rule" model="ir.rule">
            <field name="name">Dashboard Config: Manager Access</field>
            <field name="model_id" ref="model_custom_sales_dashboard_config"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_sales_dashboard_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
        
    </data>
</odoo>
