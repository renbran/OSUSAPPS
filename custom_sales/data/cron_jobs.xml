<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Automated Database Optimization Cron Job -->
        <record id="cron_database_optimization" model="ir.cron">
            <field name="name">Sales Module: Database Optimization</field>
            <field name="model_id" ref="model_custom_sales_performance_optimizer"/>
            <field name="state">code</field>
            <field name="code">model.optimize_database_indexes()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">weeks</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_admin"/>
        </record>
        
        <!-- Audit Log Cleanup Cron Job -->
        <record id="cron_audit_log_cleanup" model="ir.cron">
            <field name="name">Sales Module: Audit Log Cleanup</field>
            <field name="model_id" ref="model_custom_sales_audit_log"/>
            <field name="state">code</field>
            <field name="code">model.cleanup_old_logs(90)</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_admin"/>
        </record>
        
        <!-- Data Archival Cron Job -->
        <record id="cron_data_archival" model="ir.cron">
            <field name="name">Sales Module: Data Archival</field>
            <field name="model_id" ref="model_custom_sales_performance_optimizer"/>
            <field name="state">code</field>
            <field name="code">model.cleanup_old_data(365)</field>
            <field name="interval_number">1</field>
            <field name="interval_type">months</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_admin"/>
        </record>
        
        <!-- Database Vacuum and Analyze Cron Job -->
        <record id="cron_vacuum_analyze" model="ir.cron">
            <field name="name">Sales Module: Vacuum Analyze Tables</field>
            <field name="model_id" ref="model_custom_sales_performance_optimizer"/>
            <field name="state">code</field>
            <field name="code">model.vacuum_analyze_tables()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">weeks</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="False"/>
            <field name="user_id" ref="base.user_admin"/>
        </record>
        
    </data>
</odoo>
