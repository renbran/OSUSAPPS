<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    
    <!-- KPI Widget Template -->
    <t t-name="custom_sales.KpiWidgetTemplate" owl="1">
        <div t-attf-class="{{kpiClass}}">
            <div class="kpi-icon">
                <i t-attf-class="fa {{props.kpi.icon}}" t-attf-style="color: {{props.kpi.color}}"/>
            </div>
            <div class="kpi-content">
                <h3 t-esc="props.kpi.name"/>
                <div class="kpi-value" t-esc="formattedValue"/>
            </div>
        </div>
    </t>
    
    <!-- KPI Container Template -->
    <t t-name="custom_sales.KpiContainerTemplate" owl="1">
        <div class="kpis-container" t-attf-style="grid-template-columns: {{gridColumns}}">
            <t t-foreach="props.kpis" t-as="kpi" t-key="kpi.name">
                <KpiWidget kpi="kpi"/>
            </t>
        </div>
    </t>
    
</templates>
