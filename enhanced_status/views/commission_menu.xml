<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Menu item for Commission Reports -->
        <menuitem id="menu_commission_reports" name="Commission Reports" parent="sale.sale_menu_root" sequence="50" groups="sales_team.group_sale_salesman"/>

        <!-- Action to open Sale Orders with Commission Report option -->
        <record id="action_sale_order_commission_report" model="ir.actions.act_window">
            <field name="name">Sale Orders - Commission Reports</field>
            <field name="res_model">sale.order</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_sales_state': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a Sale Order to generate Commission Reports
                </p>
                <p>
                    Commission reports can be generated from individual sale orders
                    by clicking the "Print" button and selecting "Commission Payout Report".
                </p>
            </field>
        </record>

        <!-- Menu item linking to the action -->
        <menuitem id="menu_sale_order_commission_reports" name="Commission Payout Reports" parent="menu_commission_reports" action="action_sale_order_commission_report" sequence="10"/>

    </data>
</odoo>
