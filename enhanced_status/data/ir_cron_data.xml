<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Financial Status Update Cron Job -->
        <record id="ir_cron_update_financial_status" model="ir.cron">
            <field name="name">Update Sale Order Financial Status</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="state">code</field>
            <field name="code">model._cron_update_financial_status()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_admin"/>
        </record>

        <!-- Auto-Completion Check Cron Job -->
        <record id="ir_cron_check_auto_completion" model="ir.cron">
            <field name="name">Check Sale Order Auto-Completion</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="state">code</field>
            <field name="code">model._cron_check_auto_completion()</field>
            <field name="interval_number">6</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_admin"/>
        </record>

    </data>
</odoo>