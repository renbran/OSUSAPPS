<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Default Workflow Stages -->
        <record id="stage_draft" model="sale.order.stage">
            <field name="name">Draft</field>
            <field name="stage_code">draft</field>
            <field name="sequence">10</field>
            <field name="description">Initial quotation and requirement definition stage</field>
            <field name="color">0</field>
            <field name="progress_conditions">Customer requirements defined, initial quotation prepared</field>
        </record>

        <record id="stage_documentation" model="sale.order.stage">
            <field name="name">Documentation</field>
            <field name="stage_code">documentation</field>
            <field name="sequence">20</field>
            <field name="description">Requirements gathering and detailed documentation phase</field>
            <field name="color">1</field>
            <field name="progress_conditions">Complete requirement documentation, technical specifications finalized</field>
            <field name="responsible_group_id" ref="sales_team.group_sale_salesman"/>
        </record>

        <record id="stage_calculation" model="sale.order.stage">
            <field name="name">Calculation</field>
            <field name="stage_code">calculation</field>
            <field name="sequence">30</field>
            <field name="description">Detailed cost calculation and pricing determination</field>
            <field name="color">3</field>
            <field name="progress_conditions">Accurate cost calculations completed, pricing strategy defined, margins validated</field>
            <field name="responsible_group_id" ref="sales_team.group_sale_salesman"/>
        </record>

        <record id="stage_approved" model="sale.order.stage">
            <field name="name">Approved</field>
            <field name="stage_code">approved</field>
            <field name="sequence">40</field>
            <field name="description">Approved orders ready for execution and confirmation</field>
            <field name="color">10</field>
            <field name="progress_conditions">Management approval obtained, ready for customer confirmation</field>
            <field name="responsible_group_id" ref="sales_team.group_sale_manager"/>
        </record>

        <record id="stage_completed" model="sale.order.stage">
            <field name="name">Completed</field>
            <field name="stage_code">completed</field>
            <field name="sequence">50</field>
            <field name="description">Fully processed and completed orders</field>
            <field name="color">8</field>
            <field name="fold">True</field>
            <field name="progress_conditions">All deliveries completed, invoicing finalized, payments received</field>
            <field name="responsible_group_id" ref="sales_team.group_sale_manager"/>
            <field name="auto_progress">False</field>
        </record>

    </data>
</odoo>
