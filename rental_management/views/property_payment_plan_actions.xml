<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Property Payment Plan Action (Standalone) -->
        <record id="property_payment_plan_action" model="ir.actions.act_window">
            <field name="name">Payment Plan Templates</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">property.payment.plan</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a Payment Plan Template
                </p>
                <p>
                    Define reusable payment plan templates for properties.<br/>
                    Example: 10% Booking, 10% after 30 days, 15% on construction, etc.
                </p>
            </field>
        </record>
    </data>
</odoo>