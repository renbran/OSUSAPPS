<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Air Ticket Tree View -->
    <record id="view_hr_air_ticket_tree" model="ir.ui.view">
        <field name="name">hr.air.ticket.tree</field>
        <field name="model">hr.air.ticket</field>
        <field name="arch" type="xml">
            <tree string="Air Tickets" decoration-info="state == 'draft'" decoration-warning="state == 'submitted'" decoration-success="state == 'approved'" decoration-danger="state in ('rejected', 'cancelled')">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="request_date"/>
                <field name="ticket_date"/>
                <field name="destination_city"/>
                <field name="service_years"/>
                <field name="is_eligible"/>
                <field name="ticket_amount" sum="Total"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Air Ticket Form View -->
    <record id="view_hr_air_ticket_form" model="ir.ui.view">
        <field name="name">hr.air.ticket.form</field>
        <field name="model">hr.air.ticket</field>
        <field name="arch" type="xml">
            <form string="Air Ticket">
                <header>
                    <button name="action_submit" string="Submit" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_approve" string="Approve" type="object" class="oe_highlight" invisible="state != 'submitted'" groups="hr.group_hr_manager"/>
                    <button name="action_reject" string="Reject" type="object" invisible="state != 'submitted'" groups="hr.group_hr_manager"/>
                    <button name="action_cancel" string="Cancel" type="object" invisible="state not in ('draft','submitted')"/>
                    <button name="action_reset_to_draft" string="Reset to Draft" type="object" invisible="state not in ('cancelled','rejected')" groups="hr.group_hr_manager"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="employee_id" options="{'no_create': True}" readonly="state != 'draft'"/>
                            <field name="joining_date" readonly="1"/>
                            <field name="service_years" readonly="1"/>
                            <field name="is_eligible" readonly="1"/>
                            <field name="home_country" readonly="1"/>
                        </group>
                        <group>
                            <field name="request_date" readonly="state != 'draft'"/>
                            <field name="ticket_date" readonly="state != 'draft'"/>
                            <field name="destination_city" readonly="state != 'draft'"/>
                            <field name="ticket_class" readonly="state != 'draft'"/>
                            <field name="ticket_amount" readonly="state != 'draft'"/>
                        </group>
                    </group>
                    <group>
                        <field name="notes" placeholder="Add any additional notes here..."/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Air Ticket Search View -->
    <record id="view_hr_air_ticket_search" model="ir.ui.view">
        <field name="name">hr.air.ticket.search</field>
        <field name="model">hr.air.ticket</field>
        <field name="arch" type="xml">
            <search string="Search Air Tickets">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="destination_city"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state','=','draft')]"/>
                <filter string="Submitted" name="submitted" domain="[('state','=','submitted')]"/>
                <filter string="Approved" name="approved" domain="[('state','=','approved')]"/>
                <filter string="Rejected" name="rejected" domain="[('state','=','rejected')]"/>
                <filter string="Eligible" name="eligible" domain="[('is_eligible','=',True)]"/>
                <group expand="0" string="Group By">
                    <filter string="Employee" name="employee" context="{'group_by':'employee_id'}"/>
                    <filter string="Status" name="status" context="{'group_by':'state'}"/>
                    <filter string="Month" name="month" context="{'group_by':'ticket_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Air Ticket Action -->
    <record id="action_hr_air_ticket" model="ir.actions.act_window">
        <field name="name">Air Tickets</field>
        <field name="res_model">hr.air.ticket</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_hr_air_ticket_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first air ticket request!
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_hr_air_ticket"
              name="Air Tickets"
              parent="hr.menu_hr_root"
              action="action_hr_air_ticket"
              sequence="25"/>
</odoo>
