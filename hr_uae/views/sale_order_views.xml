<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_inherit_commission" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.commission</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Commissions" name="commissions">
                    <group>
                        <group string="Agent Commissions">
                            <field name="primary_agent_id" options="{'no_create': True}"/>
                            <field name="primary_agent_commission" readonly="1"/>
                            <field name="secondary_agent_id" options="{'no_create': True}"/>
                            <field name="secondary_agent_commission" readonly="1"/>
                            <field name="exclusive_rm_id" options="{'no_create': True}"/>
                            <field name="exclusive_rm_commission" readonly="1"/>
                            <field name="exclusive_sm_id" options="{'no_create': True}"/>
                            <field name="exclusive_sm_commission" readonly="1"/>
                        </group>
                        <group string="Manager Commission">
                            <field name="user_id" string="Sales Manager"/>
                            <field name="commission_percentage_manager" readonly="1"/>
                        </group>
                        <group string="Source Information">
                            <field name="source_id"/>
                            <field name="origin"/>
                        </group>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
