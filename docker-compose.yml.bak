version: '3'
services:
  db:
    image: postgres:15
    environment:
      - POSTGRES_DB=odoo
      - POSTGRES_USER=odoo
      - POSTGRES_PASSWORD=odoo
    ports:
      - "5432:5432"
    volumes:
      - db-data:/var/lib/postgresql/data

  odoo:
    image: odoo:17.0
    depends_on:
      - db
    ports:
      - "8090:8069"
    environment:
      - HOST=db
      - USER=odoo
      - PASSWORD=odoo
    volumes:
      - ./payment_account_enhanced:/mnt/extra-addons/payment_account_enhanced
      - ./odoo.conf:/etc/odoo/odoo.conf
      - odoo-data:/var/lib/odoo

volumes:
  db-data:
  odoo-data:
    command: odoo -c /etc/odoo/odoo.conf
volumes:
  db_data:
  odoo_data:
