<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="auto_lead_capture.LeadCaptureWidgetTemplate">
        <div class="o_auto_lead_capture_widget" t-att-class="props.readonly ? 'o_readonly' : ''">
            <div class="o_auto_lead_capture_header">
                <h4>Lead Capture Widget</h4>
                <button t-if="!props.readonly" class="btn btn-sm btn-primary o_auto_lead_capture_primary" t-on-click="onAssignLead">
                    Assign Lead
                </button>
            </div>
            <div class="o_auto_lead_capture_content">
                <t t-if="state.isLoading">
                    <div class="text-center">
                        <i class="fa fa-spinner fa-spin"/>
                        Loading...
                    </div>
                </t>
                <t t-else="">
                    <div t-if="state.data" t-esc="state.data.display_name"/>
                </t>
            </div>
        </div>
    </t>
</templates>
