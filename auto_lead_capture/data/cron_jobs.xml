<odoo>
    <data noupdate="1">
        <!-- Process Unprocessed Social Messages -->
        <record id="cron_process_social_messages" model="ir.cron">
            <field name="name">Process Social Messages</field>
            <field name="model_id" ref="model_social_message_log"/>
            <field name="state">code</field>
            <field name="code">model.process_unprocessed_messages()</field>
            <field name="interval_number">5</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
        </record>

        <!-- Update Social Lead Scores -->
        <record id="cron_update_social_lead_scores" model="ir.cron">
            <field name="name">Update Social Lead Scores</field>
            <field name="model_id" ref="model_crm_lead"/>
            <field name="state">code</field>
            <field name="code">model.update_social_engagement_scores()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
        </record>

        <!-- Clean Old Message Logs -->
        <record id="cron_clean_old_message_logs" model="ir.cron">
            <field name="name">Clean Old Message Logs</field>
            <field name="model_id" ref="model_social_message_log"/>
            <field name="state">code</field>
            <field name="code">
# Delete message logs older than 90 days (configurable)
cutoff_date = fields.Datetime.now() - timedelta(days=90)
old_logs = model.search([('create_date', '<', cutoff_date), ('lead_id', '=', False)])
old_logs.unlink()
            </field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
        </record>
    </data>
</odoo>