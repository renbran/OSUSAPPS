<odoo>
    <data noupdate="1">
        <!-- WhatsApp Welcome Message Template -->
        <record id="email_template_whatsapp_welcome" model="mail.template">
            <field name="name">WhatsApp Welcome Message</field>
            <field name="model_id" ref="model_crm_lead"/>
            <field name="subject">Welcome to {{ object.company_id.name }}!</field>
            <field name="body_html" type="xml">
                <div style="margin: 0px; padding: 0px;">
                    <p>Hello {{ object.contact_name or 'there' }},</p>
                    <p>Thank you for reaching out to us via WhatsApp! We've received your message and one of our team members will get back to you shortly.</p>
                    <p>Best regards,<br/>
{{ object.user_id.name }}<br/>
{{ object.company_id.name }}</p>
            </div>
        </field>
        <field name="lang">{{ object.partner_id.lang }}</field>
        <field name="auto_delete">True</field>
    </record>

    <!-- Social Media Lead Notification Template -->
    <record id="email_template_social_lead_notification" model="mail.template">
        <field name="name">New Social Media Lead Notification</field>
        <field name="model_id" ref="model_crm_lead"/>
        <field name="subject">New {{ object.social_platform|title }} Lead: {{ object.name }}</field>
        <field name="body_html" type="xml">
            <div style="margin: 0px; padding: 0px;">
                <h3>New Lead from {{ object.social_platform|title }}</h3>
                <p>
                    <strong>Contact:</strong> {{ object.contact_name }}</p>
                <p>
                    <strong>Phone:</strong> {{ object.phone }}</p>
                <p>
                    <strong>Platform:</strong> {{ object.social_platform|title }}</p>
                <p>
                    <strong>Message:</strong>
                </p>
                <blockquote>{{ object.description }}</blockquote>
                <p>
                    <a href="/web#id={{ object.id }}&amp;view_type=form&amp;model=crm.lead" style="background-color: #875A7B; padding: 8px 16px 8px 16px; text-decoration: none; color: #fff; border-radius: 5px;">View Lead</a>
                </p>
            </div>
        </field>
        <field name="lang">{{ object.partner_id.lang }}</field>
    </record>
</data>
</odoo>