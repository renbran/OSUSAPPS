<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="commission_partner_statement_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="oe_structure"/>

                        <!-- Report Title - Exactly like Excel -->
                        <div class="row">
                            <div class="col-12">
                                <h2 class="text-center mb-4" style="font-weight: bold; color: #2c3e50;">
                                    Commission Partner Statement (<span t-esc="data.get('date_from', '')"/> to <span t-esc="data.get('date_to', '')"/>)
                                </h2>
                                <div class="text-center mb-3">
                                    <p class="mb-1" style="font-size: 14px;">
                                        <strong>Partners: <span t-esc="data.get('partner_names', 'All Partners')"/></strong>
                                    </p>
                                    <p class="mb-3" style="font-size: 12px; color: #666;">
                                        Generated on: <span t-esc="context_today().strftime('%d/%m/%Y %H:%M')"/>
                                    </p>
                                </div>
                            </div>
                        </div>

                        <!-- Debug Information (will be visible if no data) -->
                        <div t-if="not data or not data.get('report_data')" class="row mb-3">
                            <div class="col-12">
                                <div class="alert alert-warning">
                                    <h4>Debug Information</h4>
                                    <p><strong>Data Object:</strong> <span t-esc="bool(data)"/></p>
                                    <p><strong>Report Data:</strong> <span t-esc="bool(data.get('report_data') if data else False)"/></p>
                                    <p><strong>Report Data Length:</strong> <span t-esc="len(data.get('report_data', [])) if data else 0"/></p>
                                    <p><strong>Available Keys:</strong> <span t-esc="', '.join(data.keys()) if data else 'No data'"/></p>
                                </div>
                            </div>
                        </div>

                        <!-- Commission Statement Table - Matching Excel Format Exactly -->
                        <table class="table table-bordered" style="border: 2px solid #333; font-size: 11px;">
                            <!-- Headers with Excel-like styling -->
                            <thead style="background-color: #366092; color: white;">
                                <tr>
                                    <th style="border: 1px solid #333; padding: 8px; text-align: center; font-weight: bold;">Commission Partner</th>
                                    <th style="border: 1px solid #333; padding: 8px; text-align: center; font-weight: bold;">Booking Date</th>
                                    <th style="border: 1px solid #333; padding: 8px; text-align: center; font-weight: bold;">Client Order Ref</th>
                                    <th style="border: 1px solid #333; padding: 8px; text-align: center; font-weight: bold;">Reference</th>
                                    <th style="border: 1px solid #333; padding: 8px; text-align: center; font-weight: bold;">Unit Price</th>
                                    <th style="border: 1px solid #333; padding: 8px; text-align: center; font-weight: bold;">Commission Rate</th>
                                    <th style="border: 1px solid #333; padding: 8px; text-align: center; font-weight: bold;">Total Amount</th>
                                    <th style="border: 1px solid #333; padding: 8px; text-align: center; font-weight: bold;">Commission Payment Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Initialize totals -->
                                <t t-set="total_unit_price" t-value="0"/>
                                <t t-set="total_commission" t-value="0"/>
                                
                                <!-- Show message if no data -->
                                <t t-if="not data or not data.get('report_data') or len(data.get('report_data', [])) == 0">
                                    <tr>
                                        <td colspan="8" style="border: 1px solid #333; padding: 20px; text-align: center; background-color: #f8f9fa;">
                                            <strong style="color: #dc3545;">No commission data available for the selected criteria.</strong><br/>
                                            <small style="color: #666;">Please check your date range and partner selection.</small>
                                        </td>
                                    </tr>
                                </t>

                                <!-- Data rows - Exactly like Excel -->
                                <t t-foreach="data.get('report_data', [])" t-as="line">
                                    <!-- Update totals -->
                                    <t t-set="total_unit_price" t-value="total_unit_price + (line.get('unit_price', 0) or 0)"/>
                                    <t t-set="total_commission" t-value="total_commission + (line.get('commission_amount', 0) or 0)"/>
                                    
                                    <tr style="background-color: white;">
                                        <!-- Commission Partner -->
                                        <td style="border: 1px solid #333; padding: 6px; text-align: left; vertical-align: top;">
                                            <span t-esc="line.get('partner_name', 'Unknown Partner')" style="font-weight: normal;"/>
                                        </td>
                                        <!-- Booking Date -->
                                        <td style="border: 1px solid #333; padding: 6px; text-align: center; vertical-align: top;">
                                            <span t-esc="line.get('booking_date', '')" style="font-size: 10px;"/>
                                        </td>
                                        <!-- Client Order Ref -->
                                        <td style="border: 1px solid #333; padding: 6px; text-align: left; vertical-align: top;">
                                            <span t-esc="line.get('client_order_ref', 'No Reference')"/>
                                        </td>
                                        <!-- Reference (Sale Order) -->
                                        <td style="border: 1px solid #333; padding: 6px; text-align: left; vertical-align: top;">
                                            <span t-esc="line.get('sale_order_name', '')"/>
                                        </td>
                                        <!-- Unit Price -->
                                        <td style="border: 1px solid #333; padding: 6px; text-align: right; vertical-align: top;">
                                            <t t-set="unit_price_val" t-value="line.get('unit_price', 0) or 0"/>
                                            <span t-esc="'{:,.2f}'.format(float(unit_price_val))"/> <span t-esc="line.get('currency', 'USD')"/>
                                        </td>
                                        <!-- Commission Rate -->
                                        <td style="border: 1px solid #333; padding: 6px; text-align: center; vertical-align: top;">
                                            <t t-set="rate_val" t-value="line.get('commission_rate', 0) or 0"/>
                                            <span t-esc="'{:.2f}'.format(float(rate_val))"/>%
                                        </td>
                                        <!-- Total Amount (Commission Amount) -->
                                        <td style="border: 1px solid #333; padding: 6px; text-align: right; vertical-align: top;">
                                            <t t-set="commission_val" t-value="line.get('commission_amount', 0) or 0"/>
                                            <span t-esc="'{:,.2f}'.format(float(commission_val))"/> <span t-esc="line.get('currency', 'USD')"/>
                                        </td>
                                        <!-- Commission Payment Status -->
                                        <td style="border: 1px solid #333; padding: 6px; text-align: center; vertical-align: top;">
                                            <span t-esc="line.get('commission_status', 'Unknown')" 
                                                  t-att-style="'color: green; font-weight: bold;' if line.get('commission_status') == 'Confirmed' else 'color: orange; font-weight: bold;' if line.get('commission_status') == 'Processed' else 'color: blue; font-weight: bold;' if line.get('commission_status') == 'Draft' else 'color: #333;'"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                            
                            <!-- Totals Footer - Exactly like Excel -->
                            <tfoot style="background-color: #366092; color: white; font-weight: bold;">
                                <tr>
                                    <td colspan="2" style="border: 1px solid #333; padding: 8px; text-align: right;">
                                        <strong>TOTALS:</strong>
                                    </td>
                                    <td style="border: 1px solid #333; padding: 8px;"></td>
                                    <td style="border: 1px solid #333; padding: 8px;"></td>
                                    <td style="border: 1px solid #333; padding: 8px; text-align: right;">
                                        <strong><span t-esc="'{:,.2f}'.format(float(total_unit_price))"/> USD</strong>
                                    </td>
                                    <td style="border: 1px solid #333; padding: 8px;"></td>
                                    <td style="border: 1px solid #333; padding: 8px; text-align: right;">
                                        <strong><span t-esc="'{:,.2f}'.format(float(total_commission))"/> USD</strong>
                                    </td>
                                    <td style="border: 1px solid #333; padding: 8px;"></td>
                                </tr>
                            </tfoot>
                        </table>

                        <!-- Summary Section - Additional info like Excel -->
                        <div class="row mt-4" t-if="data and data.get('report_data') and len(data.get('report_data', [])) > 0">
                            <div class="col-12">
                                <table class="table table-bordered" style="font-size: 12px; background-color: #f8f9fa;">
                                    <tr>
                                        <td style="border: 1px solid #333; padding: 8px; background-color: #e9ecef;"><strong>Total Records:</strong></td>
                                        <td style="border: 1px solid #333; padding: 8px;"><span t-esc="len(data.get('report_data', []))"/></td>
                                        <td style="border: 1px solid #333; padding: 8px; background-color: #e9ecef;"><strong>Average Commission:</strong></td>
                                        <td style="border: 1px solid #333; padding: 8px;">
                                            <t t-set="record_count" t-value="len(data.get('report_data', []))"/>
                                            <t t-set="avg_commission" t-value="float(total_commission) / float(record_count) if record_count > 0 else 0"/>
                                            <span t-esc="'{:,.2f}'.format(avg_commission)"/> USD
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="border: 1px solid #333; padding: 8px; background-color: #e9ecef;"><strong>Commission State:</strong></td>
                                        <td style="border: 1px solid #333; padding: 8px;"><span t-esc="data.get('commission_state', 'all')"/></td>
                                        <td style="border: 1px solid #333; padding: 8px; background-color: #e9ecef;"><strong>Report Generated:</strong></td>
                                        <td style="border: 1px solid #333; padding: 8px;"><span t-esc="context_today().strftime('%d/%m/%Y %H:%M')"/></td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                        <div class="oe_structure"/>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>