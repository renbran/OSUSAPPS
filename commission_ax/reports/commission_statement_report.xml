                                }
                                
                                .status-cell {
                                    font-weight: 600;
                                }
                                
                                .status-confirmed {
                                    color: #28a745;
                                }
                                
                                .status-calculated {
                                    color: #ffc107;
                                }
                                
                                .status-draft {
                                    color: #6c757d;
                                }
                                
