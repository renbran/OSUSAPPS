                                    border: 2px solid #800020;
                                    border-radius: 6px;
                                    overflow: hidden;
                                }
                                
                                .summary-header {
                                    background: linear-gradient(135deg, #800020, #a0002a);
                                    color: #ffd700;
                                    padding: 10px;
                                    font-weight: bold;
                                    text-align: center;
                                    text-transform: uppercase;
                                    font-size: 12px;
                                }
                                
                                .summary-content {
                                    padding: 15px;
                                    display: grid;
                                    grid-template-columns: 1fr 1fr;
                                    gap: 20px;
                                }
                                
                                .summary-item {
                                    display: flex;
                                    justify-content: space-between;
                                    padding: 5px 0;
                                    border-bottom: 1px dotted #ccc;
                                    font-size: 11px;
                                }
                                
                                .summary-item:last-child {
                                    border-bottom: none;
                                    font-weight: bold;
                                    font-size: 12px;
                                }
                                
                                .footer-info {
                                    margin-top: 20px;
                                    text-align: center;
                                    font-size: 9px;
                                    color: #666;
                                    border-top: 1px solid #ddd;
                                    padding-top: 10px;
                                }
                                
                                .no-data {
                                    text-align: center;
                                    padding: 40px;
                                    color: #6c757d;
                                    font-style: italic;
                                    font-size: 14px;
                                }
                                
                                /* Print optimizations */
                                @media print {
                                    .page {
                                        margin: 0;
                                        padding: 5mm;
                                    }
                                    
                                    .statement-header {
                                        margin: -5mm -5mm 10mm -5mm;
                                    }
                                }
                            </style>

                            <!-- Header -->
                            <div class="statement-header">
                                <h1 class="statement-title">Commission Statement</h1>
                                <div class="statement-subtitle">
                                    Agent Performance Report
                                    <t t-if="o.sale_order_id">
                                        - Order <span t-field="o.sale_order_id.name"/>
                                    </t>
                                </div>
                            </div>

                            <!-- Agent Information -->
                            <div class="agent-info">
                                <div class="info-block">
                                    <div class="info-label">Agent Name</div>
                                    <div class="info-value">
                                        <span t-field="o.partner_id.name"/>
                                    </div>
                                </div>
                                <div class="info-block">
                                    <div class="info-label">Report Period</div>
                                    <div class="info-value">
                                        <span t-field="o.date_from" t-options="{'widget': 'date'}"/>
 - 
                                        <span t-field="o.date_to" t-options="{'widget': 'date'}"/>
                                    </div>
                                </div>
                                <div class="info-block">
                                    <div class="info-label">Total Commissions</div>
                                    <div class="info-value">
                                        <t t-set="total_gross" t-value="sum(o.statement_line_ids.mapped('gross_commission'))"/>
                                        <span t-esc="'{:,.2f}'.format(total_gross)"/>
                                        <span t-field="o.statement_line_ids[0].currency_id.symbol" t-if="o.statement_line_ids"/>
                                    </div>
                                </div>
                            </div>

                            <!-- Commission Statement Table -->
                            <t t-if="data and data.get('commission_lines')">
                                <table class="statement-table">
                                    <thead>
                                        <tr>
                                            <th style="width: 15%;">Commission Partner</th>
                                            <th style="width: 12%;">Order Reference</th>
                                            <th style="width: 18%;">Customer Reference</th>
                                            <th style="width: 15%;">Commission Type</th>
                                            <th style="width: 10%;">Rate</th>
                                            <th style="width: 15%;">Amount</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-set="total_commission_amount" t-value="0"/>
                                        <t t-set="currency_symbol" t-value="docs.env.company.currency_id.symbol"/>

                                        <t t-foreach="data['commission_lines']" t-as="line">
                                            <t t-set="total_commission_amount" t-value="total_commission_amount + line['amount']"/>

                                            <tr>
                                                <td><span t-esc="line['partner_name']"/></td>
                                                <td><span t-esc="line['order_ref']"/></td>
                                                <td><span t-esc="line['customer_ref']"/></td>
                                                <td><span t-esc="line['commission_type_display']"/></td>
                                                <td class="text-right">
                                                    <t t-if="line['commission_type'] == 'fixed'">
                                                        Fixed
                                                    </t>
                                                    <t t-else="">
                                                        <span t-esc="'{:.2f}%'.format(line['rate'])"/>
                                                    </t>
                                                </td>
                                                <td class="text-right">
                                                    <span t-esc="'{:,.2f}'.format(line['amount'])"/> <span t-esc="currency_symbol"/>
                                                </td>
                                            </tr>
                                        </t>

                                        <!-- Total Row -->
                                        <tr class="total-row">
                                            <td colspan="5" style="text-align: right; font-weight: bold; border-top: 2px solid #333; padding: 10px;">
                                                TOTAL COMMISSIONS:
                                            </td>
                                            <td class="text-right" style="font-weight: bold; border-top: 2px solid #333; padding: 10px;">
                                                <span t-esc="'{:,.2f}'.format(total_commission_amount)"/> <span t-esc="currency_symbol"/>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </t>

                            <!-- No Data Message -->
                            <t t-if="not data or not data.get('commission_lines')">
                                <div class="alert alert-warning text-center" style="margin: 20px 0; padding: 20px; background-color: #fff3cd; border: 1px solid #ffeeba; border-radius: 5px;">
                                    <h4>No Commission Data Found</h4>
                                    <p>No commission transactions found for the selected criteria and date range.</p>
                                    <p>Period: <span t-esc="data.get('date_from', '')"/> - <span t-esc="data.get('date_to', '')"/></p>
                                </div>
                            </t>
                        </div>

                    <!-- Summary Section -->
                    <t t-if="data and data.get('commission_lines')">
                        <div class="summary-section" style="margin: 20px 0; padding: 15px; background-color: #f8f9fa; border-radius: 5px;">
                            <div class="summary-header" style="font-size: 16px; font-weight: bold; margin-bottom: 10px; color: #333;">Commission Summary</div>
                            <div class="summary-content" style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">
                                <div class="summary-column">
                                    <div class="summary-item" style="margin-bottom: 8px;">
                                        <span>Number of Commission Entries:</span>
                                        <strong style="float: right;"><span t-esc="data.get('total_lines', 0)"/></strong>
                                    </div>
                                    <div class="summary-item" style="margin-bottom: 8px;">
                                        <span>Date Range:</span>
                                        <strong style="float: right;"><span t-esc="data.get('date_from', '')"/> - <span t-esc="data.get('date_to', '')"/></strong>
                                    </div>
                                    <div class="summary-item" style="margin-bottom: 8px;">
                                        <span>Partner Filter:</span>
                                        <strong style="float: right;"><span t-esc="data.get('partner_filter', 'All Partners')"/></strong>
                                    </div>
                                </div>
                                <div class="summary-column">
                                    <div class="summary-item" style="margin-bottom: 8px;">
                                        <span>Total Commission Amount:</span>
                                        <strong style="float: right;">
                                            <span t-esc="'{:,.2f}'.format(data.get('total_amount', 0))"/> <span t-esc="currency_symbol"/>
                                        </strong>
                                    </div>
                                    <div class="summary-item" style="margin-bottom: 8px;">
                                        <span>Report Generated:</span>
                                        <strong style="float: right;"><span t-esc="data.get('report_generated_date', '')"/></strong>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>

                    <!-- Footer -->
                    <div class="footer-info">
                        <div>
                            <strong>Commission Statement Report</strong> - Generated on 
                            <span t-esc="datetime.datetime.now().strftime('%Y-%m-%d %H:%M:%S')"/>
 UTC
                        </div>
                        <div>
                            <span t-field="o.env.company.name"/>
 - Confidential Document
                        </div>
                        <div style="margin-top: 5px; font-size: 8px;">
                                    This statement is for informational purposes only. All amounts are subject to final verification and approval.
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </t>
</template>

<!-- Report Action -->
<record id="action_report_commission_statement" model="ir.actions.report">
    <field name="name">Commission Statement</field>
    <field name="model">commission.partner.statement.wizard</field>
    <field name="report_type">qweb-pdf</field>
    <field name="report_name">commission_ax.commission_statement_report_template</field>
    <field name="report_file">commission_statement_report_template</field>
    <field name="print_report_name">'Commission Statement - %s' % (object.partner_id.name)</field>
    <field name="paperformat_id" ref="base.paperformat_euro"/>
</record>
</data>
