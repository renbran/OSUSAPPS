<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Team-Structured Commission Report Template -->
        <template id="commission_report_template_team" name="Team Commission Report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <!-- Calculated Values -->
                    <t t-set="external_total" t-value="(o.broker_amount or 0) + (o.referrer_amount or 0) + (o.cashback_amount or 0) + (o.other_external_amount or 0)"/>
                    <t t-set="internal_total" t-value="(o.agent1_amount or 0) + (o.agent2_amount or 0) + (o.manager_amount or 0) + (o.director_amount or 0)"/>
                    <t t-set="total_commission" t-value="external_total + internal_total"/>
                    <t t-set="net_before_vat" t-value="(o.amount_total or 0) - total_commission"/>
                    <t t-set="vat_rate" t-value="0.05"/>
                    <t t-set="vat_amount" t-value="net_before_vat * vat_rate"/>
                    <t t-set="net_commission" t-value="net_before_vat - vat_amount"/>

                    <t t-call="web.external_layout">
                        <div class="page">
                            <!-- ...existing code... -->
                        </div>
                    </t>
                </t>
            </t>
        </template>

        <!-- Report Action -->
        <record id="action_report_commission_team" model="ir.actions.report">
            <field name="name">Team Commission Report</field>
            <field name="model">sale.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">commission_ax.commission_report_template_team</field>
            <field name="report_file">commission_ax.commission_report_template_team</field>
            <field name="print_report_name">'Team Commission Report - %s' % object.name</field>
            <field name="binding_model_id" ref="sale.model_sale_order"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="base.paperformat_euro"/>
        </record>
    </data>
</odoo>
