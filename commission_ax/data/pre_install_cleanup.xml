<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Delete any problematic cached views -->
        <delete model="ir.ui.view" search="[('name', 'like', 'commission.enhanced'), ('model', '=', 'sale.order')]"/>

        <!-- Clear view cache to ensure fresh loading -->
        <record id="clear_view_cache" model="ir.actions.server">
            <field name="name">Clear View Cache</field>
            <field name="model_id" ref="base.model_ir_ui_view"/>
            <field name="state">code</field>
            <field name="code">
env['ir.ui.view'].clear_caches()
            </field>
        </record>
    </data>
</odoo>
