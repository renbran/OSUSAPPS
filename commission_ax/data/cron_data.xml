<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Scheduled action to check and post commission purchase orders -->
        <record id="ir_cron_check_commission_purchase_orders" model="ir.cron">
            <field name="name">Check Commission Purchase Orders</field>
            <field name="model_id" ref="purchase.model_purchase_order"/>
            <field name="state">code</field>
            <field name="code">model._cron_check_commission_purchase_orders()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
            <field name="doall" eval="False"/>
        </record>

        <!-- Scheduled action to auto-process commissions for invoiced orders -->
        <record id="ir_cron_auto_process_commissions" model="ir.cron">
            <field name="name">Auto Process Commissions</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="state">code</field>
            <field name="code">model._cron_auto_process_commissions()</field>
            <field name="interval_number">6</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="False"/>
            <field name="doall" eval="False"/>
        </record>
    </data>
</odoo>