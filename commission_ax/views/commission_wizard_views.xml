<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Commission Cancel Wizard View -->
        <record id="view_commission_cancel_wizard_form" model="ir.ui.view">
            <field name="name">commission.cancel.wizard.form</field>
            <field name="model">commission.cancel.wizard</field>
            <field name="arch" type="xml">
                <form string="Confirm Cancellation">
                    <div class="alert alert-warning" role="alert">
                        <h4>
                            <i class="fa fa-warning"/>
 Impact of Cancellation</h4>
                        <field name="message" readonly="1" nolabel="1"/>
                    </div>

                    <footer>
                        <button name="action_confirm_cancel" string="Confirm Cancellation" type="object" class="btn-primary"/>
                        <button name="action_abort_cancel" string="Cancel" type="object" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Commission Draft Wizard View -->
        <record id="view_commission_draft_wizard_form" model="ir.ui.view">
            <field name="name">commission.draft.wizard.form</field>
            <field name="model">commission.draft.wizard</field>
            <field name="arch" type="xml">
                <form string="Confirm Set to Draft">
                    <div class="alert alert-warning" role="alert">
                        <h4>
                            <i class="fa fa-warning"/>
 Impact of Setting to Draft</h4>
                        <field name="message" readonly="1" nolabel="1"/>
                    </div>

                    <footer>
                        <button name="action_confirm_draft" string="Confirm Set to Draft" type="object" class="btn-primary"/>
                        <button name="action_abort_draft" string="Cancel" type="object" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Commission Report Wizard View -->
        <record id="view_commission_report_wizard_form" model="ir.ui.view">
            <field name="name">commission.report.wizard.form</field>
            <field name="model">commission.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Per Sales Order Commission Report">
                    <sheet>
                        <div class="oe_title">
                            <h1>Per Sales Order Commission Report</h1>
                            <p class="text-muted">Generate detailed commission report for a specific sales order and agent</p>
                        </div>

                        <field name="report_generated" invisible="1"/>

                        <group invisible="report_generated == True">
                            <group string="Order Selection">
                                <field name="sale_order_id" readonly="report_generated == True" options="{'no_create': True}" placeholder="Select the sales order for commission report"/>
                                <field name="agent_id" readonly="report_generated == True" options="{'no_create': True}" placeholder="Select the commission agent/partner"/>
                            </group>
                            <group string="Report Format">
                                <field name="output_format" readonly="report_generated == True"/>
                            </group>
                        </group>

                        <group invisible="report_generated == False">
                            <div class="alert alert-success" role="alert">
                                <h4>
                                    <i class="fa fa-check-circle"/>
 Report Generated Successfully</h4>
                                <p>Your commission report has been generated and is ready for download.</p>
                            </div>
                            <field name="report_filename" readonly="1"/>
                            <field name="report_data" invisible="report_generated == False" filename="report_filename"/>
                        </group>
                    </sheet>

                    <footer>
                        <button name="action_generate_report" string="Generate Report" type="object" class="btn-primary" invisible="report_generated == True"/>
                        <button name="action_download_report" string="Download Report" type="object" class="btn-primary" invisible="report_generated == False"/>
                        <button string="Close" special="cancel" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>