<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Deals Commission Report Wizard Form View -->
        <record id="deals_commission_report_wizard_form" model="ir.ui.view">
            <field name="name">deals.commission.report.wizard.form</field>
            <field name="model">deals.commission.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Comprehensive Deals Commission Report">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="id" invisible="1"/>
                                Comprehensive Deals Commission Report
                            </h1>
                            <p>Generate a detailed report of all deals with commission information including project, unit, booking date, eligible amounts, processed amounts, and payment status.</p>
                        </div>
                        
                        <group>
                            <group string="Date Filters" name="date_filters">
                                <field name="date_from" required="1"/>
                                <field name="date_to" required="1"/>
                            </group>
                            <group string="Partner/Project Filters" name="partner_filters">
                                <field name="partner_id" domain="[('is_company', '=', False)]"/>
                                <field name="project_id"/>
                                <field name="sale_order_id"/>
                            </group>
                        </group>
                        
                        <group>
                            <group string="Report Options" name="report_options">
                                <field name="include_zero_commissions"/>
                                <field name="include_draft_orders"/>
                                <field name="group_by_project"/>
                                <field name="show_payment_details"/>
                            </group>
                            <group string="Status Filters" name="status_filters">
                                <field name="commission_status_filter"/>
                            </group>
                        </group>
                        
                        <div class="alert alert-info" role="alert">
                            <strong>Report Contents:</strong>
                            <ul>
                                <li>Deal/Order information with customer and booking date</li>
                                <li>Project and unit details</li>
                                <li>Commission partner details (role, type, rate)</li>
                                <li>Eligible commission amounts</li>
                                <li>Processed and paid commission amounts</li>
                                <li>Payment status and invoicing information</li>
                                <li>Related purchase orders (if any)</li>
                            </ul>
                        </div>
                    </sheet>
                    <footer>
                        <button string="Generate PDF Report" name="action_generate_pdf_report" 
                                type="object" class="btn-primary"/>
                        <button string="Generate Excel Report" name="action_generate_excel_report" 
                                type="object" class="btn-secondary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Deals Commission Report Wizard Action -->
        <record id="action_deals_commission_report_wizard" model="ir.actions.act_window">
            <field name="name">Deals Commission Report</field>
            <field name="res_model">deals.commission.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="deals_commission_report_wizard_form"/>
            <field name="target">new</field>
            <field name="binding_model_id" ref="base.model_res_partner"/>
        </record>

        <!-- Menu Item for Deals Commission Report -->
        <menuitem id="menu_deals_commission_report"
                  name="Comprehensive Deals Report"
                  parent="menu_commission_reports"
                  action="action_deals_commission_report_wizard"
                  sequence="15"
                  groups="base.group_user"/>
    </data>
</odoo>
