<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Commission Lines Replace Wizard Form View -->
    <record id="view_commission_lines_replace_wizard_form" model="ir.ui.view">
        <field name="name">commission.lines.replace.wizard.form</field>
        <field name="model">commission.lines.replace.wizard</field>
        <field name="arch" type="xml">
            <form string="Replace Commission Lines">
                <div class="alert alert-warning" role="alert">
                    <strong>Warning:</strong> This action will permanently delete existing commission lines.
                </div>

                <group>
                    <field name="sale_order_id" readonly="1"/>
                    <field name="existing_lines_count" readonly="1"/>
                </group>

                <group>
                    <field name="message" readonly="1" nolabel="1"/>
                </group>

                <footer>
                    <button name="action_confirm_replace" string="Confirm Replace" type="object" class="btn-danger"/>
                    <button name="action_cancel" string="Cancel" type="object" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>