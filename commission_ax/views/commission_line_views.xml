<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Commission Line Tree View -->
    <record id="view_commission_line_tree" model="ir.ui.view">
        <field name="name">commission.line.tree</field>
        <field name="model">commission.line</field>
        <field name="arch" type="xml">
            <tree string="Commission Lines" decoration-info="state == 'draft'" decoration-warning="state == 'calculated'" decoration-success="state in ['processed', 'paid']" decoration-muted="state == 'cancelled'" default_order="create_date desc" limit="50">
                <field name="sequence" widget="handle"/>
                <field name="sale_order_id"/>
                <field name="partner_id"/>
                <field name="commission_type_id"/>
                <field name="role"/>
                <field name="commission_category"/>
                <field name="calculation_method"/>
                <field name="rate"/>
                <field name="base_amount"/>
                <field name="commission_amount"/>
                <field name="payment_status" decoration-danger="payment_status == 'overdue'" decoration-warning="payment_status == 'partial'" decoration-success="payment_status == 'paid'"/>
                <field name="state" decoration-info="state == 'draft'" decoration-warning="state == 'calculated'" decoration-success="state in ['processed', 'paid']"/>
                <field name="purchase_order_id"/>
                <field name="currency_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Commission Line Form View -->
    <record id="view_commission_line_form" model="ir.ui.view">
        <field name="name">commission.line.form</field>
        <field name="model">commission.line</field>
        <field name="arch" type="xml">
            <form string="Commission Line">
                <header>
                    <button name="action_calculate" type="object" string="Calculate" class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_confirm" type="object" string="Confirm" class="btn-primary" invisible="state not in ['draft', 'calculated']"/>
                    <button name="action_process" type="object" string="Process" class="btn-primary" invisible="state != 'confirmed'"/>
                    <button name="action_cancel" type="object" string="Cancel" invisible="state in ['cancelled', 'paid']"/>
                    <button name="action_reset_to_draft" type="object" string="Reset to Draft" invisible="state not in ['calculated', 'confirmed']"/>
                    <button name="action_record_partial_payment" type="object" string="Record Payment" class="btn-info" attrs="{'invisible': [('state', 'not in', ['processed']), ('outstanding_amount', '&lt;=', 0)]}"/>
                    <button name="action_mark_paid" type="object" string="Mark as Paid" class="btn-success" invisible="state != 'processed' or outstanding_amount &lt;= 0"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,calculated,confirmed,processed,paid"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_purchase_order" type="object" class="oe_stat_button" icon="fa-shopping-cart" invisible="purchase_order_id == False">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Purchase Order</span>
                            </div>
                        </button>
                        <button name="action_view_invoices" type="object" class="oe_stat_button" icon="fa-file-text-o" invisible="invoice_count == 0">
                            <div class="o_field_widget o_stat_info">
                                <field name="invoice_count" widget="statinfo" string="Invoices"/>
                            </div>
                        </button>
                        <button name="action_view_payments" type="object" class="oe_stat_button" icon="fa-money" invisible="payment_count == 0">
                            <div class="o_field_widget o_stat_info">
                                <field name="payment_count" widget="statinfo" string="Payments"/>
                            </div>
                        </button>
                    </div>

                    <group>
                        <group string="Basic Information">
                            <field name="sale_order_id" readonly="1"/>
                            <field name="partner_id" options="{'no_create': True}"/>
                            <field name="commission_type_id"/>
                            <field name="sequence"/>
                        </group>
                        <group string="Commission Details">
                            <field name="commission_category"/>
                            <field name="role"/>
                            <field name="calculation_method"/>
                            <field name="rate" readonly="state not in ['draft']"/>
                        </group>
                    </group>

                    <group>
                        <group string="Amounts">
                            <field name="base_amount" readonly="1"/>
                            <field name="commission_amount" readonly="1"/>
                            <field name="commission_amount_company_currency" readonly="1"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="company_currency_id" invisible="1"/>
                        </group>
                        <group string="Payment Tracking">
                            <field name="payment_status" decoration-danger="payment_status == 'overdue'" decoration-warning="payment_status == 'partial'" decoration-success="payment_status == 'paid'"/>
                            <field name="invoice_amount"/>
                            <field name="paid_amount"/>
                            <field name="outstanding_amount" readonly="1"/>
                            <field name="payment_date" readonly="state != 'processed'"/>
                            <field name="expected_payment_date" readonly="1"/>
                            <field name="days_overdue" invisible="days_overdue == 0" decoration-danger="days_overdue > 0"/>
                        </group>
                    </group>

                    <group string="Processing Information" invisible="state in ['draft', 'calculated']">
                        <field name="purchase_order_id" readonly="1"/>
                        <field name="purchase_line_id" readonly="1"/>
                        <field name="date_commission"/>
                    </group>

                    <group string="Aging Information" invisible="state in ['draft', 'calculated', 'confirmed']">
                        <field name="aging_days" readonly="1"/>
                        <field name="aging_category" readonly="1"/>
                    </group>

                    <group>
                        <field name="description" placeholder="Additional notes..."/>
                    </group>

                    <group string="System Information">
                        <field name="is_legacy" readonly="1"/>
                        <field name="company_id" readonly="1"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Commission Line Kanban View -->
    <record id="view_commission_line_kanban" model="ir.ui.view">
        <field name="name">commission.line.kanban</field>
        <field name="model">commission.line</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="partner_id"/>
                <field name="commission_amount"/>
                <field name="currency_id"/>
                <field name="state"/>
                <field name="commission_category"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="partner_id"/>
                                    </strong>
                                </div>
                                <div class="o_kanban_manage_button_section">
                                    <a class="o_kanban_manage_toggle_button" href="#">
                                        <i class="fa fa-ellipsis-v" role="img" aria-label="Manage" title="Manage"/>
                                    </a>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span class="o_field_monetary">
                                            <field name="commission_amount"/>
                                            <field name="currency_id"/>
                                        </span>
                                        <br/>
                                        <span class="text-muted">
                                            <field name="commission_category"/>
                                        </span>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <span t-attf-class="badge badge-#{record.state.raw_value === 'paid' ? 'success' : record.state.raw_value === 'cancelled' ? 'secondary' : 'primary'}">
                                            <field name="state"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Commission Line Search View -->
    <record id="view_commission_line_search" model="ir.ui.view">
        <field name="name">commission.line.search</field>
        <field name="model">commission.line</field>
        <field name="arch" type="xml">
            <search string="Commission Lines">
                <field name="sale_order_id" string="Sale Order"/>
                <field name="partner_id" string="Partner"/>
                <field name="commission_type_id" string="Commission Type"/>
                <separator/>
                <filter name="draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                <filter name="calculated" string="Calculated" domain="[('state', '=', 'calculated')]"/>
                <filter name="confirmed" string="Confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter name="processed" string="Processed" domain="[('state', '=', 'processed')]"/>
                <filter name="paid" string="Paid" domain="[('state', '=', 'paid')]"/>
                <separator/>
                <filter name="internal" string="Internal" domain="[('commission_category', '=', 'internal')]"/>
                <filter name="external" string="External" domain="[('commission_category', '=', 'external')]"/>
                <separator/>
                <filter name="this_month" string="This Month" domain="[('date_commission', '&gt;=', context_today().replace(day=1))]"/>
                <filter name="overdue" string="Overdue" domain="[('payment_status', '=', 'overdue')]"/>
                <filter name="pending_payment" string="Pending Payment" domain="[('payment_status', '=', 'pending')]"/>
                <filter name="partial_payment" string="Partially Paid" domain="[('payment_status', '=', 'partial')]"/>
                <filter name="aging_30" string="31-60 Days" domain="[('aging_category', '=', '30_days')]"/>
                <filter name="aging_60" string="61-90 Days" domain="[('aging_category', '=', '60_days')]"/>
                <filter name="aging_90" string="90+ Days" domain="[('aging_category', '=', '90_days')]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter name="group_by_partner" string="Partner" context="{'group_by': 'partner_id'}"/>
                    <filter name="group_by_state" string="State" context="{'group_by': 'state'}"/>
                    <filter name="group_by_category" string="Category" context="{'group_by': 'commission_category'}"/>
                    <filter name="group_by_commission_type" string="Commission Type" context="{'group_by': 'commission_type_id'}"/>
                    <filter name="group_by_sale_order" string="Sale Order" context="{'group_by': 'sale_order_id'}"/>
                    <filter name="group_by_payment_status" string="Payment Status" context="{'group_by': 'payment_status'}"/>
                    <filter name="group_by_aging_category" string="Aging Category" context="{'group_by': 'aging_category'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Commission Dashboard Views -->
    <record id="view_commission_dashboard_graph" model="ir.ui.view">
        <field name="name">commission.dashboard.graph</field>
        <field name="model">commission.dashboard</field>
        <field name="arch" type="xml">
            <graph string="Commission Analysis" type="bar" stacked="True">
                <field name="commission_category" type="col"/>
                <field name="commission_amount" type="measure"/>
                <field name="month" type="row"/>
            </graph>
        </field>
    </record>

    <record id="view_commission_dashboard_pivot" model="ir.ui.view">
        <field name="name">commission.dashboard.pivot</field>
        <field name="model">commission.dashboard</field>
        <field name="arch" type="xml">
            <pivot string="Commission Analysis">
                <field name="partner_id" type="row"/>
                <field name="commission_category" type="col"/>
                <field name="commission_amount" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="view_commission_dashboard_tree" model="ir.ui.view">
        <field name="name">commission.dashboard.tree</field>
        <field name="model">commission.dashboard</field>
        <field name="arch" type="xml">
            <tree string="Commission Dashboard" decoration-danger="is_overdue == True" decoration-success="commission_state == 'paid'">
                <field name="date"/>
                <field name="sale_order_id"/>
                <field name="customer_id"/>
                <field name="partner_id"/>
                <field name="commission_category"/>
                <field name="commission_amount"/>
                <field name="commission_state"/>
                <field name="days_to_process"/>
                <field name="is_overdue" invisible="1"/>
                <field name="currency_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Commission Performance Report Form View -->
    <record id="view_commission_performance_report_form" model="ir.ui.view">
        <field name="name">commission.performance.report.form</field>
        <field name="model">commission.performance.report</field>
        <field name="arch" type="xml">
            <form string="Commission Performance Report">
                <group>
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <group>
                        <field name="commission_category"/>
                        <field name="group_by"/>
                    </group>
                </group>
                <group>
                    <field name="partner_ids" widget="many2many_tags" placeholder="Leave empty for all partners" domain="[('supplier_rank', '>', 0)]"/>
                </group>
                <footer>
                    <button name="generate_report" string="Generate Report" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Commission Alert Views -->
    <record id="view_commission_alert_tree" model="ir.ui.view">
        <field name="name">commission.alert.tree</field>
        <field name="model">commission.alert</field>
        <field name="arch" type="xml">
            <tree string="Commission Alerts" decoration-danger="priority == 'critical'" decoration-warning="priority == 'high'" decoration-info="state == 'new'">
                <field name="name"/>
                <field name="alert_type"/>
                <field name="priority"/>
                <field name="partner_id"/>
                <field name="amount"/>
                <field name="state"/>
                <field name="create_date"/>
                <field name="assigned_to"/>
                <field name="currency_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="view_commission_alert_form" model="ir.ui.view">
        <field name="name">commission.alert.form</field>
        <field name="model">commission.alert</field>
        <field name="arch" type="xml">
            <form string="Commission Alert">
                <header>
                    <button name="action_acknowledge" string="Acknowledge" type="object" class="btn-warning" invisible="state != 'new'"/>
                    <button name="action_resolve" string="Resolve" type="object" class="btn-success" invisible="state not in ['new', 'acknowledged']"/>
                    <button name="action_dismiss" string="Dismiss" type="object" class="btn-secondary" invisible="state in ['resolved', 'dismissed']"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="alert_type"/>
                            <field name="priority"/>
                        </group>
                        <group>
                            <field name="partner_id"/>
                            <field name="amount"/>
                            <field name="assigned_to"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                    <group>
                        <field name="sale_order_id"/>
                        <field name="commission_line_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_commission_line" model="ir.actions.act_window">
        <field name="name">Commission Lines</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">commission.line</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="search_view_id" ref="view_commission_line_search"/>
        <field name="limit">50</field>
        <field name="context">{'search_default_this_month': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first commission line
            </p>
            <p>
                Commission lines provide a flexible structure for managing commissions
                with better performance and monitoring capabilities.
            </p>
        </field>
    </record>

    <record id="action_commission_dashboard" model="ir.actions.act_window">
        <field name="name">Commission Dashboard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">commission.dashboard</field>
        <field name="view_mode">graph,pivot,tree</field>
        <field name="context">{
            'search_default_this_month': 1,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Commission Dashboard
            </p>
            <p>
                Monitor commission performance, trends, and analytics in real-time.
            </p>
        </field>
    </record>

    <record id="action_commission_performance_report" model="ir.actions.act_window">
        <field name="name">Commission Performance Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">commission.performance.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="action_commission_alert" model="ir.actions.act_window">
        <field name="name">Commission Alerts</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">commission.alert</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{
            'search_default_new': 1,
        }</field>
    </record>
</odoo>