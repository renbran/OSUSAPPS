<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Enhanced Commission Statement Wizard Form View -->
        <record id="view_commission_statement_wizard_form" model="ir.ui.view">
            <field name="name">commission.statement.wizard.form</field>
            <field name="model">commission.statement.wizard</field>
            <field name="arch" type="xml">
                <form string="Commission Statement Report">
                    <sheet>
                        <div class="oe_title">
                            <h1>Commission Statement Report Generator</h1>
                            <p class="text-muted">Generate comprehensive commission reports for all agents</p>
                        </div>

                        <group>
                            <group name="filters" string="Report Filters">
                                <field name="partner_id" 
                                       options="{'no_create': True, 'no_edit': True}" 
                                       placeholder="All Agents"/>
                                <field name="date_from"/>
                                <field name="date_to"/>
                                <field name="include_draft"/>
                            </group>
                            <group name="options" string="Output Options">
                                <field name="output_format" widget="radio"/>
                            </group>
                        </group>

                        <!-- Statement Lines Preview -->
                        <notebook attrs="{'invisible': [('report_generated', '=', False)]}">
                            <page string="Commission Details" name="commission_details">
                                <field name="statement_line_ids" readonly="1">
                                    <tree decoration-success="total > 10000" 
                                          decoration-warning="total > 5000" 
                                          decoration-info="total > 0">
                                        <field name="commission_name"/>
                                        <field name="order_ref"/>
                                        <field name="customer_reference"/>
                                        <field name="commission_type"/>
                                        <field name="rate" widget="percentage"/>
                                        <field name="total" widget="monetary"/>
                                        <field name="currency_id" invisible="1"/>
                                    </tree>
                                </field>
                                
                                <!-- Summary -->
                                <group class="oe_subtotal_footer oe_right" 
                                       attrs="{'invisible': [('statement_line_ids', '=', [])]}">
                                    <div class="oe_subtotal_footer_separator">
                                        <label for="statement_line_ids"/>
                                        <button name="action_download_pdf" 
                                                string="Download PDF" 
                                                type="object" 
                                                class="btn-secondary"
                                                attrs="{'invisible': ['|', ('pdf_data', '=', False), ('report_generated', '=', False)]}"
                                                icon="fa-file-pdf-o"/>
                                        <button name="action_download_xlsx" 
                                                string="Download Excel" 
                                                type="object" 
                                                class="btn-secondary"
                                                attrs="{'invisible': ['|', ('xlsx_data', '=', False), ('report_generated', '=', False)]}"
                                                icon="fa-file-excel-o"/>
                                    </div>
                                </group>
                            </page>
                            
                            <page string="Report Files" name="report_files">
                                <group>
                                    <field name="pdf_filename" attrs="{'invisible': [('pdf_data', '=', False)]}"/>
                                    <field name="xlsx_filename" attrs="{'invisible': [('xlsx_data', '=', False)]}"/>
                                </group>
                            </page>
                        </notebook>

                        <!-- Hidden fields -->
                        <group invisible="1">
                            <field name="report_generated"/>
                            <field name="pdf_data"/>
                            <field name="xlsx_data"/>
                        </group>
                    </sheet>

                    <footer>
                        <button name="action_generate_statement" 
                                string="Generate Report" 
                                type="object" 
                                class="btn-primary"
                                attrs="{'invisible': [('report_generated', '=', True)]}"/>
                        
                        <button name="action_download_pdf" 
                                string="Download PDF" 
                                type="object" 
                                class="btn-success"
                                attrs="{'invisible': ['|', ('report_generated', '=', False), ('pdf_data', '=', False)]}"
                                icon="fa-download"/>
                        
                        <button name="action_download_xlsx" 
                                string="Download Excel" 
                                type="object" 
                                class="btn-success"
                                attrs="{'invisible': ['|', ('report_generated', '=', False), ('xlsx_data', '=', False)]}"
                                icon="fa-download"/>
                        
                        <button string="Close" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Commission Statement Wizard Action -->
        <record id="action_commission_statement_report" model="ir.actions.act_window">
            <field name="name">Commission Statement Report</field>
            <field name="res_model">commission.statement.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{}</field>
        </record>

        <!-- Menu Item under Sales -->
        <menuitem id="menu_commission_statement_report" 
                  name="Commission Statement Report" 
                  parent="sale.sale_menu_root" 
                  action="action_commission_statement_report" 
                  sequence="25"
                  groups="sales_team.group_sale_salesman"/>
    </data>
</odoo>
