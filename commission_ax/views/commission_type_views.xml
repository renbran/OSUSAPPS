<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Commission Type Tree View -->
        <record id="view_commission_type_tree" model="ir.ui.view">
            <field name="name">commission.type.tree</field>
            <field name="model">commission.type</field>
            <field name="arch" type="xml">
                <tree string="Commission Types" editable="bottom">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="calculation_method" optional="show"/>
                    <field name="default_rate" optional="show"/>
                    <field name="commission_category" optional="show"/>
                    <field name="active" optional="hide"/>
                </tree>
            </field>
        </record>

        <!-- Commission Type Form View -->
        <record id="view_commission_type_form" model="ir.ui.view">
            <field name="name">commission.type.form</field>
            <field name="model">commission.type</field>
            <field name="arch" type="xml">
                <form string="Commission Type">
                    <sheet>
                        <group>
                            <group name="basic_info" string="Basic Information">
                                <field name="sequence"/>
                                <field name="name"/>
                                <field name="code"/>
                                <field name="active"/>
                                <field name="description"/>
                            </group>
                            <group name="calculation_info" string="Calculation Settings">
                                <field name="calculation_method"/>
                                <field name="default_rate"/>
                                <field name="commission_category"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Financial Settings" name="financial_settings">
                                <group>
                                    <group name="amounts" string="Amount Limits">
                                        <field name="currency_id"/>
                                        <field name="min_amount"/>
                                        <field name="max_amount"/>
                                    </group>
                                    <group name="accounting" string="Accounting">
                                        <field name="account_id"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Commission Type Action -->
        <record id="action_commission_type" model="ir.actions.act_window">
            <field name="name">Commission Types</field>
            <field name="res_model">commission.type</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new commission type
                </p>
                <p>
                    Commission types help categorize different kinds of commissions
                    in your system.
                </p>
            </field>
        </record>

        <!-- Commission Type Menu Item -->
        <menuitem id="menu_commission_type" name="Commission Types" parent="commission_menu" action="action_commission_type" sequence="10"/>
    </data>
</odoo>