<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Commission Type Tree View -->
        <record id="view_commission_type_tree" model="ir.ui.view">
            <field name="name">commission.type.tree</field>
            <field name="model">commission.type</field>
            <field name="arch" type="xml">
                <tree string="Commission Types" editable="bottom">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="agent1_partner" optional="hide"/>
                    <field name="agent2_partner" optional="hide"/>
                    <field name="manager_partner" optional="hide"/>
                    <field name="director_partner" optional="hide"/>
                    <field name="broker_id" optional="hide"/>
                </tree>
            </field>
        </record>

        <!-- Commission Type Form View -->
        <record id="view_commission_type_form" model="ir.ui.view">
            <field name="name">commission.type.form</field>
            <field name="model">commission.type</field>
            <field name="arch" type="xml">
                <form string="Commission Type">
                    <sheet>
                        <group>
                            <group name="basic_info" string="Basic Information">
                                <field name="sequence"/>
                                <field name="name"/>
                                <field name="code"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Commission Partners" name="commission_partners">
                                <group>
                                    <group name="agents" string="Agents">
                                        <field name="agent1_partner"/>
                                        <field name="agent2_partner"/>
                                    </group>
                                    <group name="management" string="Management">
                                        <field name="manager_partner"/>
                                        <field name="director_partner"/>
                                        <field name="broker_id"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Commission Type Action -->
        <record id="action_commission_type" model="ir.actions.act_window">
            <field name="name">Commission Types</field>
            <field name="res_model">commission.type</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new commission type
                </p>
                <p>
                    Commission types help categorize different kinds of commissions
                    in your system.
                </p>
            </field>
        </record>

        <!-- Commission Type Menu Item -->
        <menuitem id="menu_commission_type" name="Commission Types" parent="commission_menu" action="action_commission_type" sequence="10"/>
    </data>
</odoo>