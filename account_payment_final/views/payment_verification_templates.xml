<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Professional Payment Verification Page -->
        <template id="payment_verification_success_enhanced" name="Professional Payment Verification">
            <t t-call="website.layout">
                <div id="wrap" class="verification-page">
                    <div class="container-fluid">
                        <div class="row min-vh-100">
                            <!-- Main Content -->
                            <div class="col-12">
                                <div class="verification-container mx-auto" style="max-width: 900px;">
                                    
                                    <!-- Header Section -->
                                    <div class="verification-header text-center py-5">
                                        <div class="company-logo mb-3">
                                            <img t-if="payment.company_id.logo" 
                                                 t-att-src="image_data_uri(payment.company_id.logo)" 
                                                 alt="Company Logo" 
                                                 style="max-height: 80px;"/>
                                        </div>
                                        <h1 class="display-4 fw-bold text-primary mb-2">Payment Verification</h1>
                                        <p class="lead text-muted">Secure Payment Authentication System</p>
                                        <div class="verification-status">
                                            <span class="badge bg-success fs-6 px-4 py-2">
                                                <i class="fa fa-shield-alt me-2"></i>
                                                VERIFIED &amp; AUTHENTICATED
                                            </span>
                                        </div>
                                    </div>

                                    <!-- Payment Details Card -->
                                    <div class="payment-details-card">
                                        <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                                            
                                            <!-- Card Header -->
                                            <div class="card-header bg-gradient text-white py-4" 
                                                 style="background: linear-gradient(135deg, #2c3e50 0%, #3498db 100%);">
                                                <div class="row align-items-center">
                                                    <div class="col-md-8">
                                                        <h3 class="mb-1">
                                                            <i class="fa fa-receipt me-2"></i>
                                                            <span t-if="payment.payment_type == 'inbound'">Payment Receipt</span>
                                                            <span t-if="payment.payment_type == 'outbound'">Payment Voucher</span>
                                                        </h3>
                                                        <p class="mb-0 opacity-75">Reference: <strong t-field="payment.name"/></p>
                                                    </div>
                                                    <div class="col-md-4 text-end">
                                                        <div class="amount-display">
                                                            <small class="d-block opacity-75">Amount</small>
                                                            <h2 class="mb-0 fw-bold" t-field="payment.amount" 
                                                                t-options="{'widget': 'monetary', 'display_currency': payment.currency_id}"/>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- Card Body -->
                                            <div class="card-body p-5">
                                                
                                                <!-- Payment Information Grid -->
                                                <div class="row g-4 mb-4">
                                                    <div class="col-md-6">
                                                        <div class="info-card h-100 p-4 bg-light rounded-3">
                                                            <div class="info-header mb-3">
                                                                <i class="fa fa-user text-primary fs-4 me-2"></i>
                                                                <strong class="fs-5">
                                                                    <span t-if="payment.payment_type == 'inbound'">Received From</span>
                                                                    <span t-if="payment.payment_type == 'outbound'">Paid To</span>
                                                                </strong>
                                                            </div>
                                                            <h5 class="text-dark mb-2" t-field="payment.partner_id.name"/>
                                                            <div class="partner-details text-muted">
                                                                <div t-field="payment.partner_id.street" t-if="payment.partner_id.street"/>
                                                                <div>
                                                                    <span t-field="payment.partner_id.city" t-if="payment.partner_id.city"/>
                                                                    <span t-field="payment.partner_id.state_id.name" t-if="payment.partner_id.state_id"/>
                                                                </div>
                                                                <div t-field="payment.partner_id.country_id.name" t-if="payment.partner_id.country_id"/>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    
                                                    <div class="col-md-6">
                                                        <div class="info-card h-100 p-4 bg-light rounded-3">
                                                            <div class="info-header mb-3">
                                                                <i class="fa fa-credit-card text-primary fs-4 me-2"></i>
                                                                <strong class="fs-5">Payment Details</strong>
                                                            </div>
                                                            <div class="payment-info">
                                                                <div class="row mb-2">
                                                                    <div class="col-5 text-muted">Method:</div>
                                                                    <div class="col-7 fw-semibold" t-field="payment.journal_id.name"/>
                                                                </div>
                                                                <div class="row mb-2">
                                                                    <div class="col-5 text-muted">Date:</div>
                                                                    <div class="col-7 fw-semibold" t-field="payment.date"/>
                                                                </div>
                                                                <div class="row mb-2" t-if="payment.ref">
                                                                    <div class="col-5 text-muted">Reference:</div>
                                                                    <div class="col-7 fw-semibold" t-field="payment.ref"/>
                                                                </div>
                                                                <div class="row">
                                                                    <div class="col-5 text-muted">Status:</div>
                                                                    <div class="col-7">
                                                                        <span class="badge bg-success">Verified</span>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                                <!-- Workflow Progress -->
                                                <div class="workflow-section mb-4" t-if="payment.approval_state">
                                                    <h5 class="mb-3">
                                                        <i class="fa fa-check-circle text-success me-2"></i>
                                                        Approval Workflow Status
                                                    </h5>
                                                    <div class="workflow-progress">
                                                        <div class="progress-steps d-flex justify-content-between align-items-center">
                                                            <div t-attf-class="step {{ 'completed' if payment.approval_state != 'draft' else 'current' }}">
                                                                <div class="step-circle">
                                                                    <i class="fa fa-edit"></i>
                                                                </div>
                                                                <span class="step-label">Draft</span>
                                                            </div>
                                                            
                                                            <div t-attf-class="step {{ 'completed' if payment.approval_state in ['for_approval', 'for_authorization', 'approved', 'posted'] else 'current' if payment.approval_state == 'under_review' else 'pending' }}">
                                                                <div class="step-circle">
                                                                    <i class="fa fa-search"></i>
                                                                </div>
                                                                <span class="step-label">Review</span>
                                                            </div>
                                                            
                                                            <div t-attf-class="step {{ 'completed' if payment.approval_state in ['for_authorization', 'approved', 'posted'] else 'current' if payment.approval_state == 'for_approval' else 'pending' }}">
                                                                <div class="step-circle">
                                                                    <i class="fa fa-check"></i>
                                                                </div>
                                                                <span class="step-label">Approval</span>
                                                            </div>
                                                            
                                                            <div t-attf-class="step {{ 'completed' if payment.approval_state in ['approved', 'posted'] else 'current' if payment.approval_state == 'for_authorization' else 'pending' }}" 
                                                                 t-if="payment.payment_type == 'outbound'">
                                                                <div class="step-circle">
                                                                    <i class="fa fa-key"></i>
                                                                </div>
                                                                <span class="step-label">Authorization</span>
                                                            </div>
                                                            
                                                            <div t-attf-class="step {{ 'completed' if payment.approval_state == 'posted' else 'current' if payment.approval_state == 'approved' else 'pending' }}">
                                                                <div class="step-circle">
                                                                    <i class="fa fa-check-circle"></i>
                                                                </div>
                                                                <span class="step-label">Posted</span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                                <!-- QR Code Section -->
                                                <div class="qr-section text-center" t-if="payment.qr_code">
                                                    <h5 class="mb-3">
                                                        <i class="fa fa-qrcode text-primary me-2"></i>
                                                        Verification QR Code
                                                    </h5>
                                                    <div class="qr-container p-4 bg-white border rounded-3 d-inline-block">
                                                        <img t-attf-src="data:image/png;base64,{{payment.qr_code.decode('utf-8') if payment.qr_code else ''}}" 
                                                             alt="Payment QR Code" 
                                                             style="width: 200px; height: 200px;"/>
                                                    </div>
                                                    <p class="text-muted mt-2 mb-0">
                                                        <small>This QR code contains encrypted payment verification data</small>
                                                    </p>
                                                </div>

                                                <!-- Action Buttons -->
                                                <div class="action-buttons text-center mt-5">
                                                    <button class="btn btn-outline-primary me-3" onclick="window.print()">
                                                        <i class="fa fa-print me-2"></i>Print Verification
                                                    </button>
                                                    <a href="/web" class="btn btn-primary">
                                                        <i class="fa fa-arrow-left me-2"></i>Return to System
                                                    </a>
                                                </div>
                                            </div>

                                            <!-- Card Footer -->
                                            <div class="card-footer bg-light text-center py-3">
                                                <small class="text-muted">
                                                    <i class="fa fa-shield-alt me-1"></i>
                                                    Secured &amp; Verified | Generated on <span t-esc="datetime.datetime.now().strftime('%B %d, %Y at %I:%M %p')"/>
                                                    <br/>
                                                    <strong t-field="payment.company_id.name"/> Payment Verification System
                                                </small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Custom CSS for Professional Look -->
                <style>
                    .verification-page {
                        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
                        min-height: 100vh;
                    }
                    
                    .verification-container {
                        padding: 2rem 1rem;
                    }
                    
                    .info-card {
                        transition: all 0.3s ease;
                        border: 1px solid #e9ecef;
                    }
                    
                    .info-card:hover {
                        transform: translateY(-2px);
                        box-shadow: 0 8px 25px rgba(0,0,0,0.1);
                    }
                    
                    .workflow-progress .step {
                        text-align: center;
                        position: relative;
                        flex: 1;
                    }
                    
                    .step-circle {
                        width: 50px;
                        height: 50px;
                        border-radius: 50%;
                        display: flex;
                        align-items: center;
                        justify-content: center;
                        margin: 0 auto 10px;
                        font-size: 18px;
                        color: white;
                        background: #dee2e6;
                    }
                    
                    .step.current .step-circle {
                        background: #ffc107;
                        animation: pulse 2s infinite;
                    }
                    
                    .step.completed .step-circle {
                        background: #28a745;
                    }
                    
                    .step.pending .step-circle {
                        background: #6c757d;
                    }
                    
                    .step-label {
                        font-size: 12px;
                        font-weight: 600;
                        text-transform: uppercase;
                    }
                    
                    @keyframes pulse {
                        0% { box-shadow: 0 0 0 0 rgba(255, 193, 7, 0.7); }
                        70% { box-shadow: 0 0 0 10px rgba(255, 193, 7, 0); }
                        100% { box-shadow: 0 0 0 0 rgba(255, 193, 7, 0); }
                    }
                    
                    .qr-container {
                        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
                    }
                    
                    @media print {
                        .action-buttons, .card-footer {
                            display: none !important;
                        }
                    }
                </style>
            </t>
        </template>

        <!-- Payment Verification Main Page -->
        <template id="payment_verification_page" name="Payment Verification Page">
            <t t-call="website.layout">
                <div id="wrap" class="verification-page">
                    <div class="container-fluid">
                        <div class="row min-vh-100">
                            <div class="col-12">
                                <div class="verification-container mx-auto" style="max-width: 900px;">
                                    
                                    <!-- Header Section -->
                                    <div class="verification-header text-center py-5">
                                        <div class="company-logo mb-3">
                                            <img t-if="company.logo" 
                                                 t-att-src="image_data_uri(company.logo)" 
                                                 alt="Company Logo" 
                                                 style="max-height: 80px;"/>
                                        </div>
                                        <h1 class="display-4 fw-bold text-primary mb-2">Payment Verification</h1>
                                        <p class="lead text-muted">Secure Payment Authentication System</p>
                                        <div class="verification-status">
                                            <span t-attf-class="badge fs-6 px-4 py-2 #{status_class}">
                                                <i class="fa fa-shield-alt me-2"></i>
                                                <t t-esc="status_message"/>
                                            </span>
                                        </div>
                                    </div>

                                    <!-- Payment Details Card -->
                                    <div class="payment-details-card">
                                        <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                                            
                                            <!-- Card Header -->
                                            <div class="card-header bg-gradient text-white py-4" 
                                                 style="background: linear-gradient(135deg, #2c3e50 0%, #3498db 100%);">
                                                <div class="row align-items-center">
                                                    <div class="col-md-8">
                                                        <h3 class="mb-1">
                                                            <i class="fa fa-receipt me-2"></i>
                                                            <span t-if="payment.payment_type == 'inbound'">Payment Receipt</span>
                                                            <span t-if="payment.payment_type == 'outbound'">Payment Voucher</span>
                                                        </h3>
                                                        <p class="mb-0 opacity-75">
                                                            Voucher: <strong t-esc="payment.voucher_number or payment.name"/>
                                                        </p>
                                                    </div>
                                                    <div class="col-md-4 text-end">
                                                        <div class="amount-display">
                                                            <small class="d-block opacity-75">Amount</small>
                                                            <h2 class="mb-0 fw-bold">
                                                                <t t-esc="payment.currency_id.symbol"/><t t-esc="'{:,.2f}'.format(payment.amount)"/>
                                                            </h2>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- Card Body -->
                                            <div class="card-body p-5">
                                                
                                                <!-- Payment Information Grid -->
                                                <div class="row g-4 mb-4">
                                                    <div class="col-md-6">
                                                        <div class="info-card h-100 p-4 bg-light rounded-3">
                                                            <div class="info-header mb-3">
                                                                <i class="fa fa-user text-primary fs-4 me-2"></i>
                                                                <strong class="fs-5">
                                                                    <span t-if="payment.payment_type == 'inbound'">Received From</span>
                                                                    <span t-if="payment.payment_type == 'outbound'">Paid To</span>
                                                                </strong>
                                                            </div>
                                                            <h5 class="text-dark mb-2" t-esc="payment.partner_id.name"/>
                                                            <div class="partner-details text-muted">
                                                                <div t-if="payment.partner_id.street" t-esc="payment.partner_id.street"/>
                                                                <div>
                                                                    <span t-if="payment.partner_id.city" t-esc="payment.partner_id.city"/>
                                                                    <span t-if="payment.partner_id.state_id.name" t-esc="payment.partner_id.state_id.name"/>
                                                                </div>
                                                                <div t-if="payment.partner_id.country_id.name" t-esc="payment.partner_id.country_id.name"/>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    
                                                    <div class="col-md-6">
                                                        <div class="info-card h-100 p-4 bg-light rounded-3">
                                                            <div class="info-header mb-3">
                                                                <i class="fa fa-credit-card text-primary fs-4 me-2"></i>
                                                                <strong class="fs-5">Payment Details</strong>
                                                            </div>
                                                            <div class="payment-info">
                                                                <div class="row mb-2">
                                                                    <div class="col-5 text-muted">Method:</div>
                                                                    <div class="col-7 fw-semibold" t-esc="payment.journal_id.name"/>
                                                                </div>
                                                                <div class="row mb-2">
                                                                    <div class="col-5 text-muted">Date:</div>
                                                                    <div class="col-7 fw-semibold" t-esc="payment.date"/>
                                                                </div>
                                                                <div class="row mb-2" t-if="payment.ref">
                                                                    <div class="col-5 text-muted">Reference:</div>
                                                                    <div class="col-7 fw-semibold" t-esc="payment.ref"/>
                                                                </div>
                                                                <div class="row">
                                                                    <div class="col-5 text-muted">Status:</div>
                                                                    <div class="col-7">
                                                                        <span t-attf-class="badge bg-#{verification_status}">
                                                                            <t t-esc="payment.approval_state.replace('_', ' ').title()"/>
                                                                        </span>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                                <!-- Verification Info -->
                                                <div class="verification-info mb-4">
                                                    <div class="alert alert-info">
                                                        <i class="fa fa-info-circle me-2"></i>
                                                        This payment has been verified at <strong t-esc="verification_time"/>
                                                        (Verification #<t t-esc="qr_verification_count"/>)
                                                    </div>
                                                </div>

                                                <!-- Actions -->
                                                <div class="action-buttons text-center">
                                                    <button class="btn btn-primary btn-lg me-2" onclick="window.print()">
                                                        <i class="fa fa-print me-2"></i>Print Verification
                                                    </button>
                                                    <button class="btn btn-secondary btn-lg" onclick="window.close()">
                                                        <i class="fa fa-times me-2"></i>Close
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <!-- Payment Not Found Page -->
        <template id="payment_verification_not_found" name="Payment Not Found">
            <t t-call="website.layout">
                <div class="container text-center py-5">
                    <div class="row justify-content-center">
                        <div class="col-md-6">
                            <div class="card shadow">
                                <div class="card-body p-5">
                                    <i class="fa fa-exclamation-triangle text-warning" style="font-size: 4rem;"></i>
                                    <h2 class="mt-3 mb-3" t-esc="error_message"/>
                                    <p class="text-muted" t-esc="error_details"/>
                                    <a href="/" class="btn btn-primary">Return to Home</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <!-- Payment Verification Error Page -->
        <template id="payment_verification_error" name="Verification Error">
            <t t-call="website.layout">
                <div class="container text-center py-5">
                    <div class="row justify-content-center">
                        <div class="col-md-6">
                            <div class="card shadow">
                                <div class="card-body p-5">
                                    <i class="fa fa-times-circle text-danger" style="font-size: 4rem;"></i>
                                    <h2 class="mt-3 mb-3" t-esc="error_message"/>
                                    <p class="text-muted" t-esc="error_details"/>
                                    <a href="/" class="btn btn-primary">Return to Home</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <!-- QR Verification Guide -->
        <template id="payment_qr_guide" name="QR Verification Guide">
            <t t-call="website.layout">
                <div class="container py-5">
                    <div class="row justify-content-center">
                        <div class="col-md-8">
                            <div class="card shadow">
                                <div class="card-header bg-primary text-white">
                                    <h3 class="mb-0">
                                        <i class="fa fa-qrcode me-2"></i>
                                        Payment QR Code Verification Guide
                                    </h3>
                                </div>
                                <div class="card-body p-4">
                                    <h5>How to verify payment vouchers:</h5>
                                    <ol>
                                        <li class="mb-2">Scan the QR code on the payment voucher using your phone camera or QR scanner app</li>
                                        <li class="mb-2">You will be directed to a verification page showing payment details</li>
                                        <li class="mb-2">Check that the amount, recipient, and date match the voucher</li>
                                        <li class="mb-2">Look for the green "VERIFIED" status to confirm authenticity</li>
                                    </ol>
                                    
                                    <div class="alert alert-info mt-4">
                                        <strong>Note:</strong> All payment vouchers from <t t-esc="company_name"/> include QR codes for security verification.
                                        If you cannot scan the QR code, please contact our support team for manual verification.
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <!-- Bulk Verification Form -->
        <template id="bulk_verification_form" name="Bulk Payment Verification">
            <t t-call="website.layout">
                <div class="container py-5">
                    <div class="row justify-content-center">
                        <div class="col-md-8">
                            <div class="card shadow">
                                <div class="card-header bg-primary text-white">
                                    <h3 class="mb-0">
                                        <i class="fa fa-list-check me-2"></i>
                                        Bulk Payment Verification
                                    </h3>
                                </div>
                                <div class="card-body">
                                    <form method="post">
                                        <div class="mb-3">
                                            <label for="voucher_numbers" class="form-label">
                                                Voucher Numbers (one per line):
                                            </label>
                                            <textarea class="form-control" name="voucher_numbers" 
                                                     rows="10" required="required"
                                                     placeholder="PV00001&#10;PV00002&#10;RV00001"></textarea>
                                        </div>
                                        <button type="submit" class="btn btn-primary btn-lg">
                                            <i class="fa fa-search me-2"></i>Verify Payments
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <!-- Bulk Verification Results -->
        <template id="bulk_verification_results" name="Bulk Verification Results">
            <t t-call="website.layout">
                <div class="container py-5">
                    <div class="row">
                        <div class="col-12">
                            <div class="card shadow">
                                <div class="card-header bg-success text-white">
                                    <h3 class="mb-0">
                                        <i class="fa fa-check-circle me-2"></i>
                                        Verification Results - <t t-esc="found_count"/> of <t t-esc="total_checked"/> found
                                    </h3>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-striped">
                                            <thead>
                                                <tr>
                                                    <th>Voucher Number</th>
                                                    <th>Status</th>
                                                    <th>Partner</th>
                                                    <th>Amount</th>
                                                    <th>Date</th>
                                                    <th>Approval Status</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr t-foreach="results" t-as="result">
                                                    <td t-esc="result['voucher_number']"/>
                                                    <td>
                                                        <span t-if="result.get('found')" class="badge bg-success">Found</span>
                                                        <span t-else="" class="badge bg-danger">Not Found</span>
                                                    </td>
                                                    <td t-esc="result.get('partner', 'N/A')"/>
                                                    <td>
                                                        <span t-if="result.get('found')">
                                                            <t t-esc="result.get('currency', '')"/> <t t-esc="result.get('amount', '')"/>
                                                        </span>
                                                        <span t-else="">-</span>
                                                    </td>
                                                    <td t-esc="result.get('date', 'N/A')"/>
                                                    <td t-esc="result.get('status', 'N/A')"/>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="mt-3">
                                        <a href="/payment/bulk-verify" class="btn btn-primary">
                                            <i class="fa fa-arrow-left me-2"></i>Verify More Payments
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>

    </data>
</odoo>
