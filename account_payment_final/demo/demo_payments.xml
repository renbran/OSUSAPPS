<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Demo Data for Account Payment Final Module -->
    
    <!-- Demo Partners -->
    <record id="demo_partner_supplier_1" model="res.partner">
        <field name="name">Tech Solutions Ltd</field>
        <field name="is_company" eval="True"/>
        <field name="supplier_rank">1</field>
        <field name="customer_rank">0</field>
        <field name="email">contact@techsolutions.com</field>
        <field name="phone">+1-555-0123</field>
        <field name="street">123 Business Park</field>
        <field name="city">New York</field>
        <field name="zip">10001</field>
        <field name="country_id" ref="base.us"/>
    </record>

    <record id="demo_partner_supplier_2" model="res.partner">
        <field name="name">Office Supplies Inc</field>
        <field name="is_company" eval="True"/>
        <field name="supplier_rank">1</field>
        <field name="customer_rank">0</field>
        <field name="email">orders@officesupplies.com</field>
        <field name="phone">+1-555-0456</field>
        <field name="street">456 Commerce Street</field>
        <field name="city">Los Angeles</field>
        <field name="zip">90001</field>
        <field name="country_id" ref="base.us"/>
    </record>

    <record id="demo_partner_employee" model="res.partner">
        <field name="name">John Smith</field>
        <field name="is_company" eval="False"/>
        <field name="supplier_rank">1</field>
        <field name="customer_rank">0</field>
        <field name="email">john.smith@company.com</field>
        <field name="phone">+1-555-0789</field>
    </record>

    <!-- Demo Journal for Bank -->
    <record id="demo_bank_journal" model="account.journal">
        <field name="name">Demo Bank Account</field>
        <field name="code">DEMO</field>
        <field name="type">bank</field>
        <field name="bank_statements_source">undefined</field>
        <field name="sequence">10</field>
    </record>

    <!-- Demo Payment Methods -->
    <record id="demo_payment_method_manual_out" model="account.payment.method">
        <field name="name">Demo Manual Outbound</field>
        <field name="code">demo_manual_out</field>
        <field name="payment_type">outbound</field>
    </record>

    <!-- Demo Payments in different states -->
    <record id="demo_payment_draft" model="account.payment">
        <field name="payment_type">outbound</field>
        <field name="partner_type">supplier</field>
        <field name="partner_id" ref="demo_partner_supplier_1"/>
        <field name="amount">1500.00</field>
        <field name="journal_id" ref="demo_bank_journal"/>
        <field name="date" eval="DateTime.today()"/>
        <field name="ref">DEMO/PAY/001 - Software License</field>
        <field name="state">draft</field>
    </record>

    <record id="demo_payment_review" model="account.payment">
        <field name="payment_type">outbound</field>
        <field name="partner_type">supplier</field>
        <field name="partner_id" ref="demo_partner_supplier_2"/>
        <field name="amount">750.50</field>
        <field name="journal_id" ref="demo_bank_journal"/>
        <field name="date" eval="DateTime.today()"/>
        <field name="ref">DEMO/PAY/002 - Office Supplies</field>
        <field name="state">review</field>
    </record>

    <record id="demo_payment_approve" model="account.payment">
        <field name="payment_type">outbound</field>
        <field name="partner_type">supplier</field>
        <field name="partner_id" ref="demo_partner_employee"/>
        <field name="amount">500.00</field>
        <field name="journal_id" ref="demo_bank_journal"/>
        <field name="date" eval="DateTime.today() - timedelta(days=1)"/>
        <field name="ref">DEMO/PAY/003 - Employee Reimbursement</field>
        <field name="state">approve</field>
    </record>

    <record id="demo_payment_authorize" model="account.payment">
        <field name="payment_type">outbound</field>
        <field name="partner_type">supplier</field>
        <field name="partner_id" ref="demo_partner_supplier_1"/>
        <field name="amount">2000.00</field>
        <field name="journal_id" ref="demo_bank_journal"/>
        <field name="date" eval="DateTime.today() - timedelta(days=2)"/>
        <field name="ref">DEMO/PAY/004 - Consulting Services</field>
        <field name="state">authorize</field>
    </record>

    <record id="demo_payment_posted" model="account.payment">
        <field name="payment_type">outbound</field>
        <field name="partner_type">supplier</field>
        <field name="partner_id" ref="demo_partner_supplier_2"/>
        <field name="amount">1250.75</field>
        <field name="journal_id" ref="demo_bank_journal"/>
        <field name="date" eval="DateTime.today() - timedelta(days=3)"/>
        <field name="ref">DEMO/PAY/005 - Monthly Subscription</field>
        <field name="state">post</field>
    </record>

    <!-- Demo Inbound Payments -->
    <record id="demo_payment_inbound_1" model="account.payment">
        <field name="payment_type">inbound</field>
        <field name="partner_type">customer</field>
        <field name="partner_id" ref="base.res_partner_2"/>
        <field name="amount">3500.00</field>
        <field name="journal_id" ref="demo_bank_journal"/>
        <field name="date" eval="DateTime.today()"/>
        <field name="ref">DEMO/REC/001 - Customer Payment</field>
        <field name="state">draft</field>
    </record>

    <record id="demo_payment_inbound_2" model="account.payment">
        <field name="payment_type">inbound</field>
        <field name="partner_type">customer</field>
        <field name="partner_id" ref="base.res_partner_3"/>
        <field name="amount">850.00</field>
        <field name="journal_id" ref="demo_bank_journal"/>
        <field name="date" eval="DateTime.today() - timedelta(days=1)"/>
        <field name="ref">DEMO/REC/002 - Service Fee</field>
        <field name="state">review</field>
    </record>

    <!-- Demo Large Payments -->
    <record id="demo_payment_large" model="account.payment">
        <field name="payment_type">outbound</field>
        <field name="partner_type">supplier</field>
        <field name="partner_id" ref="demo_partner_supplier_1"/>
        <field name="amount">15000.00</field>
        <field name="journal_id" ref="demo_bank_journal"/>
        <field name="date" eval="DateTime.today()"/>
        <field name="ref">DEMO/PAY/LARGE/001 - Equipment Purchase</field>
        <field name="state">draft</field>
    </record>

    <!-- Demo Transfer Payment -->
    <record id="demo_payment_transfer" model="account.payment">
        <field name="payment_type">transfer</field>
        <field name="amount">5000.00</field>
        <field name="journal_id" ref="demo_bank_journal"/>
        <field name="date" eval="DateTime.today()"/>
        <field name="ref">DEMO/TRANSFER/001 - Account Transfer</field>
        <field name="state">draft</field>
    </record>

    <!-- Demo Company Settings -->
    <record id="demo_company_payment_settings" model="res.company">
        <field name="payment_approval_threshold">1000.00</field>
        <field name="payment_auto_approve_threshold">500.00</field>
        <field name="payment_require_dual_approval" eval="True"/>
        <field name="payment_enable_qr_codes" eval="True"/>
    </record>

    <!-- Demo Configuration Settings -->
    <record id="demo_config_settings" model="res.config.settings">
        <field name="payment_approval_enabled" eval="True"/>
        <field name="payment_qr_enabled" eval="True"/>
        <field name="payment_email_notifications" eval="True"/>
        <field name="payment_audit_trail" eval="True"/>
    </record>

</odoo>
