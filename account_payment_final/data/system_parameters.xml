<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- System Parameters for Payment Approval Workflow -->
        
        <!-- Auto-approval threshold for payments from invoices -->
        <record id="param_auto_approval_threshold" model="ir.config_parameter">
            <field name="key">account_payment_final.auto_approval_threshold</field>
            <field name="value">1000.0</field>
        </record>
        
        <!-- Small payment threshold for bypass conditions -->
        <record id="param_small_payment_threshold" model="ir.config_parameter">
            <field name="key">account_payment_final.small_payment_threshold</field>
            <field name="value">100.0</field>
        </record>
        
        <!-- Enable/disable approval workflow bypass for invoice payments -->
        <record id="param_enable_invoice_bypass" model="ir.config_parameter">
            <field name="key">account_payment_final.enable_invoice_bypass</field>
            <field name="value">True</field>
        </record>
        
        <!-- Enable/disable emergency payment bypass -->
        <record id="param_enable_emergency_bypass" model="ir.config_parameter">
            <field name="key">account_payment_final.enable_emergency_bypass</field>
            <field name="value">True</field>
        </record>
    </data>
</odoo>
