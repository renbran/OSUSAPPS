            }
          }
        },
        {
          "name": "Verify Payment (QR Code)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/payments/1/verify",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "payments", "1", "verify"]
            }
          }
        },
        {
          "name": "Payment Dashboard",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "X-API-Key",
                "value": "{{api_key}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/payments/dashboard",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "payments", "dashboard"]
            }
          }
        }
      ]
    },
    {
      "name": "Generic Model APIs",
      "item": [
        {
          "name": "Search Partners",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "X-API-Key",
                "value": "{{api_key}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/models/res.partner/search?domain=[[\"is_company\",\"=\",true]]&fields=name,email,phone&limit=10",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "models", "res.partner", "search"],
              "query": [
                {
                  "key": "domain",
                  "value": "[[\"is_company\",\"=\",true]]"
                },
                {
                  "key": "fields",
                  "value": "name,email,phone"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Search Products",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "X-API-Key",
                "value": "{{api_key}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/models/product.template/search?domain=[[\"sale_ok\",\"=\",true]]&fields=name,list_price,categ_id&limit=20",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "models", "product.template", "search"],
              "query": [
                {
                  "key": "domain",
                  "value": "[[\"sale_ok\",\"=\",true]]"
                },
                {
                  "key": "fields",
                  "value": "name,list_price,categ_id"
