<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- API Configuration Tree View -->
        <record id="view_enhanced_api_config_tree" model="ir.ui.view">
            <field name="name">enhanced.api.config.tree</field>
            <field name="model">enhanced.api.config</field>
            <field name="arch" type="xml">
                <tree string="API Endpoints">
                    <field name="endpoint_name"/>
                    <field name="endpoint_path"/>
                    <field name="model_name"/>
                    <field name="http_methods"/>
                    <field name="authentication_type"/>
                    <field name="is_active"/>
                    <field name="rate_limit"/>
                    <field name="version"/>
                </tree>
            </field>
        </record>

        <!-- API Configuration Form View -->
        <record id="view_enhanced_api_config_form" model="ir.ui.view">
            <field name="name">enhanced.api.config.form</field>
            <field name="model">enhanced.api.config</field>
            <field name="arch" type="xml">
                <form string="API Endpoint Configuration">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="is_active" widget="boolean_button" options='{"terminology": "active"}'/>
                            </button>
                        </div>
                        <group>
                            <group name="basic_info">
                                <field name="endpoint_name"/>
                                <field name="endpoint_path"/>
                                <field name="model_name"/>
                                <field name="version"/>
                            </group>
                            <group name="config">
                                <field name="http_methods"/>
                                <field name="authentication_type"/>
                                <field name="rate_limit"/>
                            </group>
                        </group>
                        <group name="security">
                            <field name="allowed_groups" widget="many2many_tags"/>
                        </group>
                        <group name="description">
                            <field name="description" placeholder="Describe what this endpoint does..."/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- API Configuration Action -->
        <record id="action_enhanced_api_config" model="ir.actions.act_window">
            <field name="name">API Endpoints</field>
            <field name="res_model">enhanced.api.config</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first API endpoint configuration!
                </p>
                <p>
                    Configure REST API endpoints to expose your Odoo data and functionality
                    through standardized HTTP APIs.
                </p>
            </field>
        </record>

        <!-- Menu Item -->
        <menuitem id="menu_enhanced_api_root" 
                  name="Enhanced REST API" 
                  sequence="100" 
                  groups="group_enhanced_api_manager"/>
        
        <menuitem id="menu_enhanced_api_config" 
                  name="API Endpoints" 
                  parent="menu_enhanced_api_root" 
                  action="action_enhanced_api_config" 
                  sequence="10"/>

    </data>
</odoo>
