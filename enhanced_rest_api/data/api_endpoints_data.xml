<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- CRM API Endpoints -->
        <record id="api_endpoint_crm_leads_get" model="enhanced.api.config">
            <field name="endpoint_name">CRM Leads - GET</field>
            <field name="endpoint_path">/api/v1/crm/leads</field>
            <field name="model_name">crm.lead</field>
            <field name="http_methods">GET</field>
            <field name="authentication_type">api_key</field>
            <field name="is_active">True</field>
            <field name="rate_limit">100</field>
            <field name="description">Retrieve CRM leads with filtering and pagination support</field>
            <field name="version">v1</field>
        </record>

        <record id="api_endpoint_crm_leads_post" model="enhanced.api.config">
            <field name="endpoint_name">CRM Leads - CREATE</field>
            <field name="endpoint_path">/api/v1/crm/leads</field>
            <field name="model_name">crm.lead</field>
            <field name="http_methods">POST</field>
            <field name="authentication_type">api_key</field>
            <field name="is_active">True</field>
            <field name="rate_limit">50</field>
            <field name="description">Create new CRM leads via API</field>
            <field name="version">v1</field>
        </record>

        <record id="api_endpoint_crm_dashboard" model="enhanced.api.config">
            <field name="endpoint_name">CRM Dashboard</field>
            <field name="endpoint_path">/api/v1/crm/dashboard</field>
            <field name="model_name">crm.lead</field>
            <field name="http_methods">GET</field>
            <field name="authentication_type">api_key</field>
            <field name="is_active">True</field>
            <field name="rate_limit">30</field>
            <field name="description">Get CRM dashboard statistics and metrics</field>
            <field name="version">v1</field>
        </record>

        <!-- Sales API Endpoints -->
        <record id="api_endpoint_sales_orders_get" model="enhanced.api.config">
            <field name="endpoint_name">Sales Orders - GET</field>
            <field name="endpoint_path">/api/v1/sales/orders</field>
            <field name="model_name">sale.order</field>
            <field name="http_methods">GET</field>
            <field name="authentication_type">api_key</field>
            <field name="is_active">True</field>
            <field name="rate_limit">100</field>
            <field name="description">Retrieve sales orders with filtering options</field>
            <field name="version">v1</field>
        </record>

        <record id="api_endpoint_sales_orders_post" model="enhanced.api.config">
            <field name="endpoint_name">Sales Orders - CREATE</field>
            <field name="endpoint_path">/api/v1/sales/orders</field>
            <field name="model_name">sale.order</field>
            <field name="http_methods">POST</field>
            <field name="authentication_type">api_key</field>
            <field name="is_active">True</field>
            <field name="rate_limit">30</field>
            <field name="description">Create new sales orders via API</field>
            <field name="version">v1</field>
        </record>

        <record id="api_endpoint_sales_dashboard" model="enhanced.api.config">
            <field name="endpoint_name">Sales Dashboard</field>
            <field name="endpoint_path">/api/v1/sales/dashboard</field>
            <field name="model_name">sale.order</field>
            <field name="http_methods">GET</field>
            <field name="authentication_type">api_key</field>
            <field name="is_active">True</field>
            <field name="rate_limit">30</field>
            <field name="description">Get sales dashboard statistics and analytics</field>
            <field name="version">v1</field>
        </record>

        <!-- Payment API Endpoints -->
        <record id="api_endpoint_payments_get" model="enhanced.api.config">
            <field name="endpoint_name">Payments - GET</field>
            <field name="endpoint_path">/api/v1/payments</field>
            <field name="model_name">account.payment</field>
            <field name="http_methods">GET</field>
            <field name="authentication_type">api_key</field>
            <field name="is_active">True</field>
            <field name="rate_limit">100</field>
            <field name="description">Retrieve payment records with filtering</field>
            <field name="version">v1</field>
        </record>

        <record id="api_endpoint_payments_post" model="enhanced.api.config">
            <field name="endpoint_name">Payments - CREATE</field>
            <field name="endpoint_path">/api/v1/payments</field>
            <field name="model_name">account.payment</field>
            <field name="http_methods">POST</field>
            <field name="authentication_type">api_key</field>
            <field name="is_active">True</field>
            <field name="rate_limit">20</field>
            <field name="description">Create new payment records with QR code generation</field>
            <field name="version">v1</field>
        </record>

        <record id="api_endpoint_payment_verify" model="enhanced.api.config">
            <field name="endpoint_name">Payment Verification</field>
            <field name="endpoint_path">/api/v1/payments/*/verify</field>
            <field name="model_name">account.payment</field>
            <field name="http_methods">GET</field>
            <field name="authentication_type">none</field>
            <field name="is_active">True</field>
            <field name="rate_limit">200</field>
            <field name="description">Verify payment vouchers via QR code scanning</field>
            <field name="version">v1</field>
        </record>

        <!-- User Management Endpoints -->
        <record id="api_endpoint_user_profile" model="enhanced.api.config">
            <field name="endpoint_name">User Profile</field>
            <field name="endpoint_path">/api/v1/user/profile</field>
            <field name="model_name">res.users</field>
            <field name="http_methods">GET</field>
            <field name="authentication_type">api_key</field>
            <field name="is_active">True</field>
            <field name="rate_limit">50</field>
            <field name="description">Get current user profile information</field>
            <field name="version">v1</field>
        </record>

        <record id="api_endpoint_auth_generate" model="enhanced.api.config">
            <field name="endpoint_name">Generate API Key</field>
            <field name="endpoint_path">/api/v1/auth/generate-key</field>
            <field name="model_name">res.users</field>
            <field name="http_methods">POST</field>
            <field name="authentication_type">user</field>
            <field name="is_active">True</field>
            <field name="rate_limit">10</field>
            <field name="description">Generate new API key for authenticated user</field>
            <field name="version">v1</field>
        </record>

    </data>
</odoo>
